@page "/project-task-documents"
@attribute [Authorize(HCPermissions.ProjectTaskDocuments.Default)]
@using HC.ProjectTaskDocuments
@using HC.ProjectTaskDocuments
@using HC.Localization
@using HC.Shared
@using Microsoft.AspNetCore.Authorization
@using Microsoft.Extensions.Localization
@using Microsoft.AspNetCore.Components.Web
@using Blazorise
@using Blazorise.Components
@using Blazorise.DataGrid
@using Volo.Abp.BlazoriseUI
@using Volo.Abp.BlazoriseUI.Components
@using Volo.Abp.ObjectMapping
@using Volo.Abp.AspNetCore.Components.Messages
@using Volo.Abp.AspNetCore.Components.Web.Theming.Layout
@using HC.Permissions
@using Volo.Abp.AspNetCore.Components.Web
@using Volo.Abp.AspNetCore.Components
@using Microsoft.AspNetCore.Components
@using Volo.Abp.Http.Client
@inherits HCComponentBase
@inject IProjectTaskDocumentsAppService ProjectTaskDocumentsAppService
@inject IUiMessageService UiMessageService
@inject AbpBlazorMessageLocalizerHelper<HCResource> LH
@inject IRemoteServiceConfigurationProvider RemoteServiceConfigurationProvider
@inject NavigationManager NavigationManager
@* ************************* PAGE HEADER ************************* *@
<PageHeader Title="@L["ProjectTaskDocuments"]" BreadcrumbItems="BreadcrumbItems" Toolbar="Toolbar">
</PageHeader>
<style>
    tr.table-row-selectable:hover {
        cursor: default;
    }
</style>
@* ************************* SEARCH ************************* *@
<Card>
    <CardBody>
@*//<suite-custom-code-block-1>*@
@*//</suite-custom-code-block-1>*@
        <Row>
            <div class="col col-md-8 col-lg-10">
                <div class="mb-3">
                    <Form id="ProjectTaskDocumentSearchForm">
                        <Addons>
                            <Addon AddonType="AddonType.Body">
                                <TextEdit @bind-Text="@Filter.FilterText"
                                        Autofocus="true"
                                        Placeholder="@L["Search"]">
                                </TextEdit>
                            </Addon>
                            <Addon AddonType="AddonType.End">
                                <SubmitButton Form="ProjectTaskDocumentSearchForm" Clicked="GetProjectTaskDocumentsAsync">
                                    <Icon Name="IconName.Search" Class="me-1"></Icon>@L["Search"]
                                </SubmitButton>
                            </Addon>
                        </Addons>
                    </Form>
                </div>
            </div>
                   <div class="col-md-4 col-lg-2">
            <div class="mb-3">
               <Button Color="Color.Primary" Outline Style="width:100%" id="AdvancedFilterSectionToggler"
                         Clicked="@(() => ShowAdvancedFilters = !ShowAdvancedFilters)">@L["Filters"]
                         <i aria-hidden="true" class="fa ms-1 @(!ShowAdvancedFilters ? "fa-angle-down" : "fa-angle-up")"></i>
               </Button>
            </div>
       </div>
        <div style="display: @(!ShowAdvancedFilters ? "none" : "block")"  class="mt-3">
            <Row>
                <Column ColumnSize="ColumnSize.Is3">
                    <Field>
                        <FieldLabel>@L["DocumentPurpose"]</FieldLabel>
                        <TextEdit Text="@Filter.DocumentPurpose" TextChanged="@OnDocumentPurposeChangedAsync" />                       
                    </Field>
                </Column>
                <Column ColumnSize="ColumnSize.Is3">
                    <Field>
                        <FieldLabel>@L["ProjectTask"]</FieldLabel>
                        <Select TValue="Guid?"
		SelectedValue="@Filter.ProjectTaskId"
		SelectedValueChanged="@OnProjectTaskIdChangedAsync">
<SelectItem></SelectItem>
@foreach(var item in ProjectTasksCollection)
{
	<SelectItem TValue="Guid" Value="@item.Id">
		@item.DisplayName
	</SelectItem>
}
</Select>                       
                    </Field>
                </Column>
                <Column ColumnSize="ColumnSize.Is3">
                    <Field>
                        <FieldLabel>@L["Document"]</FieldLabel>
                        <Select TValue="Guid?"
		SelectedValue="@Filter.DocumentId"
		SelectedValueChanged="@OnDocumentIdChangedAsync">
<SelectItem></SelectItem>
@foreach(var item in DocumentsCollection)
{
	<SelectItem TValue="Guid" Value="@item.Id">
		@item.DisplayName
	</SelectItem>
}
</Select>                       
                    </Field>
                </Column>
            </Row>
@*//<suite-custom-code-block-2>*@
@*//</suite-custom-code-block-2>*@
        </div>
        </Row>
@*//<suite-custom-code-block-3>*@
@*//</suite-custom-code-block-3>*@
    </CardBody>
</Card>
@* ************************* DATA GRID ************************* *@
<Card>
    <CardBody>        
        <Div  Visibility="@(SelectedProjectTaskDocuments.Any() ? Visibility.Visible : Visibility.Invisible)"
              class="d-flex justify-content-between align-items-center mb-2">
              <p class="lead mb-0">
                @if (AllProjectTaskDocumentsSelected)
                {
                    @L["AllItemsAreSelected", TotalCount]
                }
                else
                {
                    @if (SelectedProjectTaskDocuments.Count > 1)
                    {
                        @L["NumberOfItemsOnThisPageAreSelected", SelectedProjectTaskDocuments.Count]
                    }
                    else
                    {
                        @L["OneItemOnThisPageIsSelected"]
                    }
                }
              </p>
            <div>
                @if ((SelectedProjectTaskDocuments.Count == PageSize || SelectedProjectTaskDocuments.Count == ProjectTaskDocumentList.Count) && TotalCount > SelectedProjectTaskDocuments.Count)
                {
                    if (!AllProjectTaskDocumentsSelected)
                    {
                        <Button Clicked="SelectAllItems" Class="mx-1 btn-outline-secondary">@L["SelectAllItems", TotalCount]</Button>
                    }
                    else
                    {
                        <Button Clicked="ClearSelection" Class="mx-1 btn-outline-secondary">@L["ClearSelection"]</Button>
                    }
                }
                <Button Color="Color.Danger" Class="mx-1" Size="Size.Medium" Clicked="DeleteSelectedProjectTaskDocumentsAsync">
                    <Icon Name="@IconName.Delete" /> @L["Delete"]
                </Button>
            </div>
        </Div>
        <hr Visibility="@(SelectedProjectTaskDocuments.Any() ? Visibility.Visible : Visibility.Invisible)"
            class="my-1 mx-0" />
        <DataGrid TItem="ProjectTaskDocumentWithNavigationPropertiesDto"
                  @ref="DataGridRef"
                  Data="ProjectTaskDocumentList"
                  SelectionMode="DataGridSelectionMode.Multiple"
                  SelectedRows="SelectedProjectTaskDocuments"
                  RowSelectable="RowSelectableHandler"
                  SelectedRowsChanged="SelectedProjectTaskDocumentRowsChanged"
                  ReadData="OnDataGridReadAsync"
                  TotalItems="TotalCount"
                  ShowPager="true"
                  Responsive="true"
                  PageSize="PageSize"
                  Class="datagrid-detail">
            <LoadingTemplate>
                <Row Class="w-100 align-items-center" Style="height: 150px;">
                    <Column>
                       <RadarSpinner />
                    </Column>
                </Row>
            </LoadingTemplate>
            <EmptyTemplate>
                <Row Class="w-100 align-items-center" Style="height: 150px;">
                    <Column>
                        <Heading Size="HeadingSize.Is4" TextAlignment="TextAlignment.Center">@L["NoDataAvailable"]</Heading>
                    </Column>
                </Row>
            </EmptyTemplate>   
            <DataGridColumns>
                @if (CanDeleteProjectTaskDocument && ProjectTaskDocumentList.Any())
                {
                    <DataGridMultiSelectColumn TItem="ProjectTaskDocumentWithNavigationPropertiesDto" DisplayOrder="-1" Width="30px"></DataGridMultiSelectColumn>
                }
                <DataGridEntityActionsColumn TItem="ProjectTaskDocumentWithNavigationPropertiesDto" @ref="@EntityActionsColumn">
                    <DisplayTemplate>
                        <EntityActions TItem="ProjectTaskDocumentWithNavigationPropertiesDto" EntityActionsColumn="@EntityActionsColumn">
                            <EntityAction TItem="ProjectTaskDocumentWithNavigationPropertiesDto"
                                          Visible="@CanEditProjectTaskDocument"
                                          Clicked="async () => await OpenEditProjectTaskDocumentModalAsync(context)"
                                          Text="@L["Edit"]"></EntityAction>
                            <EntityAction TItem="ProjectTaskDocumentWithNavigationPropertiesDto"
                                          Visible="@CanDeleteProjectTaskDocument"
                                          Clicked="() => DeleteProjectTaskDocumentAsync(context)"
                                          ConfirmationMessage="@(()=> L["DeleteConfirmationMessage"])"
                                          Text="@L["Delete"]"></EntityAction>
@*//<suite-custom-code-block-4>*@
@*//</suite-custom-code-block-4>*@
                        </EntityActions>
                    </DisplayTemplate>
                </DataGridEntityActionsColumn>
              <DataGridColumn TItem="ProjectTaskDocumentWithNavigationPropertiesDto"
                      Field="ProjectTaskDocument.DocumentPurpose"
                      Caption="@L["DocumentPurpose"]">
              </DataGridColumn>
              <DataGridColumn TItem="ProjectTaskDocumentWithNavigationPropertiesDto"
                      Field="ProjectTask.Title"
                      Caption="@L["ProjectTask"]">
              </DataGridColumn>
              <DataGridColumn TItem="ProjectTaskDocumentWithNavigationPropertiesDto"
                      Field="Document.Title"
                      Caption="@L["Document"]">
              </DataGridColumn>
            </DataGridColumns>
        </DataGrid>
    </CardBody>
</Card>
@* ************************* CREATE MODAL ************************* *@
<Modal @ref="CreateProjectTaskDocumentModal" Closing="@CreateProjectTaskDocumentModal.CancelClosingModalWhenFocusLost">
    <ModalContent Centered="true">
@*//<suite-custom-code-block-5>*@
@*//</suite-custom-code-block-5>*@
        <Form id="CreateProjectTaskDocumentForm">
            <ModalHeader>
                <ModalTitle>@L["NewProjectTaskDocument"]</ModalTitle>
                <CloseButton Clicked="CloseCreateProjectTaskDocumentModalAsync" />
            </ModalHeader>
            <ModalBody>
                <Validations @ref="@NewProjectTaskDocumentValidations"
                            Mode="ValidationMode.Auto"
                            Model="@NewProjectTaskDocument"
                            ValidateOnLoad="false">
                    <Validation MessageLocalizer="@LH.Localize">
                        <Field>
                            <FieldLabel>@L["DocumentPurpose"] *</FieldLabel>
                            <TextEdit @bind-Text="@NewProjectTaskDocument.DocumentPurpose" MaxLength="ProjectTaskDocumentConsts.DocumentPurposeMaxLength"  Autofocus="true">
                                <Feedback>
                                    <ValidationError />
                                </Feedback>
                            </TextEdit>
                        </Field>
                    </Validation>
                    <Field>
                        <FieldLabel>@L["ProjectTask"] *</FieldLabel>
                        <Autocomplete Data="@ProjectTasksCollection"
                                      TItem="LookupDto<Guid>"
                                      TValue="Guid"
                                      TextField="@((item) => item?.DisplayName)"
                                      ValueField="@((item) => item?.Id ?? default)"
                                      SearchChanged="@GetProjectTaskCollectionLookupAsync"
                                      @bind-SelectedValue="@NewProjectTaskDocument.ProjectTaskId"
                                      Placeholder="&#8212;" />
                    </Field>
                    <Field>
                        <FieldLabel>@L["Document"] *</FieldLabel>
                        <Autocomplete Data="@DocumentsCollection"
                                      TItem="LookupDto<Guid>"
                                      TValue="Guid"
                                      TextField="@((item) => item?.DisplayName)"
                                      ValueField="@((item) => item?.Id ?? default)"
                                      SearchChanged="@GetDocumentCollectionLookupAsync"
                                      @bind-SelectedValue="@NewProjectTaskDocument.DocumentId"
                                      Placeholder="&#8212;" />
                    </Field>
                </Validations>
            </ModalBody>
            <ModalFooter>
                <Button Color="Color.Secondary"
                        Clicked="CloseCreateProjectTaskDocumentModalAsync">
                    @L["Cancel"]
                </Button>
                <SubmitButton Form="CreateProjectTaskDocumentForm" Clicked="CreateProjectTaskDocumentAsync"/>
@*//<suite-custom-code-block-6>*@
@*//</suite-custom-code-block-6>*@
            </ModalFooter>
        </Form>
@*//<suite-custom-code-block-7>*@
@*//</suite-custom-code-block-7>*@
    </ModalContent>
</Modal>
@* ************************* EDIT MODAL ************************* *@
<Modal @ref="EditProjectTaskDocumentModal" Closing="@EditProjectTaskDocumentModal.CancelClosingModalWhenFocusLost">
    <ModalContent Centered="true">
@*//<suite-custom-code-block-8>*@
@*//</suite-custom-code-block-8>*@
        <Form id="EditProjectTaskDocumentForm">
            <ModalHeader>
                <ModalTitle>@L["Update"]</ModalTitle>
                <CloseButton Clicked="CloseEditProjectTaskDocumentModalAsync" />
            </ModalHeader>
            <ModalBody>
                <Validations @ref="@EditingProjectTaskDocumentValidations"
                            Mode="ValidationMode.Auto"
                            Model="@EditingProjectTaskDocument"
                            ValidateOnLoad="false">
                    <Validation MessageLocalizer="@LH.Localize">
                        <Field>
                            <FieldLabel>@L["DocumentPurpose"] *</FieldLabel>
                            <TextEdit @bind-Text="@EditingProjectTaskDocument.DocumentPurpose" MaxLength="ProjectTaskDocumentConsts.DocumentPurposeMaxLength"  Autofocus="true">
                                <Feedback>
                                    <ValidationError />
                                </Feedback>
                            </TextEdit>
                        </Field>
                    </Validation>
                    <Field>
                        <FieldLabel>@L["ProjectTask"] *</FieldLabel>
                        <Autocomplete Data="@ProjectTasksCollection"
                                      TItem="LookupDto<Guid>"
                                      TValue="Guid"
                                      TextField="@((item) => item?.DisplayName)"
                                      ValueField="@((item) => item?.Id ?? default)"
                                      SearchChanged="@GetProjectTaskCollectionLookupAsync"
                                      @bind-SelectedValue="@EditingProjectTaskDocument.ProjectTaskId"
                                      Placeholder="&#8212;" />
                    </Field>
                    <Field>
                        <FieldLabel>@L["Document"] *</FieldLabel>
                        <Autocomplete Data="@DocumentsCollection"
                                      TItem="LookupDto<Guid>"
                                      TValue="Guid"
                                      TextField="@((item) => item?.DisplayName)"
                                      ValueField="@((item) => item?.Id ?? default)"
                                      SearchChanged="@GetDocumentCollectionLookupAsync"
                                      @bind-SelectedValue="@EditingProjectTaskDocument.DocumentId"
                                      Placeholder="&#8212;" />
                    </Field>
                </Validations>
            </ModalBody>
            <ModalFooter>
                <Button Color="Color.Secondary"
                        Clicked="CloseEditProjectTaskDocumentModalAsync">
                    @L["Cancel"]
                </Button>
                <SubmitButton Form="EditProjectTaskDocumentForm" Clicked="UpdateProjectTaskDocumentAsync" />
@*//<suite-custom-code-block-9>*@
@*//</suite-custom-code-block-9>*@
            </ModalFooter>
        </Form>
@*//<suite-custom-code-block-10>*@
@*//</suite-custom-code-block-10>*@
    </ModalContent>
</Modal>