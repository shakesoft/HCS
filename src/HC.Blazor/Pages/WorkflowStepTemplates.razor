                    </Field>
                </Validations>
            </ModalBody>
            <ModalFooter>
                <Button Color="Color.Secondary"
                        Clicked="CloseEditWorkflowStepTemplateModalAsync">
                    @L["Cancel"]
                </Button>
                <SubmitButton Form="EditWorkflowStepTemplateForm" Clicked="UpdateWorkflowStepTemplateAsync" />
@*//<suite-custom-code-block-9>*@
@*//</suite-custom-code-block-9>*@
            </ModalFooter>
        </Form>
@*//<suite-custom-code-block-10>*@
@*//</suite-custom-code-block-10>*@
    </ModalContent>
</Modal>