@* ************************* VIEW FILE MODAL ************************* *@
<Modal @ref="ViewFileModal" Class="pdf-viewer-modal">
    <ModalContent Centered="true" Size="ModalSize.ExtraLarge">  
         <ModalHeader>
        <ModalTitle>@L["DocumentPreview"]</ModalTitle>
        <CloseButton Clicked="CloseViewFileModalAsync" />
    </ModalHeader>
    <ModalBody>
        @if (IsLoadingViewDocument)
        {
            <Row Class="w-100 align-items-center" Style="height: 150px;">
                <Column>
                    <RadarSpinner />
                </Column>
            </Row>
        }
        else if (ViewDocumentData != null)
        {
            <Form>
                <Row>
                    <!-- Left Column: Document Information (6 columns) -->
                    <Column ColumnSize="ColumnSize.Is12.OnMobile.Is6.OnDesktop">
                        <!-- Row 1: Số tài liệu | Số lưu trữ (6-6) -->
                        <Row>
                            <Column ColumnSize="ColumnSize.Is12.OnMobile.Is6.OnDesktop">
                                <Field>
                                    <FieldLabel>@L["DocumentNumber"]</FieldLabel>
                                    <TextEdit Text="@ViewDocumentData.No" Disabled="true" />
                                </Field>
                            </Column>
                            <Column ColumnSize="ColumnSize.Is12.OnMobile.Is6.OnDesktop">
                                <Field>
                                    <FieldLabel>@L["StorageNumber"]</FieldLabel>
                                    <TextEdit Text="@ViewDocumentData.StorageNumber" Disabled="true" />
                                </Field>
                            </Column>
                        </Row>
                        
                        <!-- Row 2: Title | Thời gian hoàn thành (6-6) -->
                        <Row>
                            <Column ColumnSize="ColumnSize.Is12.OnMobile.Is6.OnDesktop">
                                <Field>
                                    <FieldLabel>@L["Title"]</FieldLabel>
                                    <TextEdit Text="@ViewDocumentData.Title" Disabled="true" />
                                </Field>
                            </Column>
                            <Column ColumnSize="ColumnSize.Is12.OnMobile.Is6.OnDesktop">
                                <Field>
                                    <FieldLabel>@L["CompletedTime"]</FieldLabel>
                                    <TextEdit Text="@ViewDocumentData.CompletedTime.ToString("dd/MM/yyyy HH:mm")" Disabled="true" />
                                </Field>
                            </Column>
                        </Row>
                        
                       
                        
                        <!-- Row 6: Trạng thái hiện tại (12) -->
                        <Row>
                            <Column ColumnSize="ColumnSize.Is12">
                                <Field>
                                    <FieldLabel>@L["CurrentStatus"]</FieldLabel>
                                    <TextEdit Text="@ViewDocumentData.CurrentStatus" Disabled="true" />
                                </Field>
                            </Column>
                        </Row>
                    </Column>
                    
                    <!-- Right Column: File List (6 columns) -->
                    <Column ColumnSize="ColumnSize.Is12.OnMobile.Is6.OnDesktop">
                        <!-- Row 3: Loại | Lĩnh vực (6-6) -->
                        <Row>
                            <Column ColumnSize="ColumnSize.Is12.OnMobile.Is6.OnDesktop">
                                <Field>
                                    <FieldLabel>@L["Type"]</FieldLabel>
                                    <TextEdit Text="@(ViewSelectedTypeMasterData.FirstOrDefault()?.DisplayName ?? "")" Disabled="true" />
                                </Field>
                            </Column>
                            <Column ColumnSize="ColumnSize.Is12.OnMobile.Is6.OnDesktop">
                                <Field>
                                    <FieldLabel>@L["Field"]</FieldLabel>
                                    <TextEdit Text="@(ViewSelectedFieldMasterData.FirstOrDefault()?.DisplayName ?? "")" Disabled="true" />
                                </Field>
                            </Column>
                        </Row>
                        
                        <!-- Row 4: Mức độ cấp bách | Mức độ bảo mật (6-6) -->
                        <Row>
                            <Column ColumnSize="ColumnSize.Is12.OnMobile.Is6.OnDesktop">
                                <Field>
                                    <FieldLabel>@L["UrgencyLevel"]</FieldLabel>
                                    <TextEdit Text="@(ViewSelectedUrgencyLevelMasterData.FirstOrDefault()?.DisplayName ?? "")" Disabled="true" />
                                </Field>
                            </Column>
                            <Column ColumnSize="ColumnSize.Is12.OnMobile.Is6.OnDesktop">
                                <Field>
                                    <FieldLabel>@L["SecrecyLevel"]</FieldLabel>
                                    <TextEdit Text="@(ViewSelectedSecrecyLevelMasterData.FirstOrDefault()?.DisplayName ?? "")" Disabled="true" />
                                </Field>
                            </Column>
                        </Row>
                        
                        <!-- Row 5: Đơn vị ban hành | Trạng thái (6-6) -->
                        <Row>
                            <Column ColumnSize="ColumnSize.Is12.OnMobile.Is6.OnDesktop">
                                <Field>
                                    <FieldLabel>@L["Unit"]</FieldLabel>
                                    <TextEdit Text="@(ViewSelectedUnit.FirstOrDefault()?.DisplayName ?? "")" Disabled="true" />
                                </Field>
                            </Column>
                            <Column ColumnSize="ColumnSize.Is12.OnMobile.Is6.OnDesktop">
                                <Field>
                                    <FieldLabel>@L["Status"]</FieldLabel>
                                    <TextEdit Text="@(ViewSelectedStatusMasterData.FirstOrDefault()?.DisplayName ?? "")" Disabled="true" />
                                </Field>
                            </Column>
                        </Row>
                    </Column>

                    <Column ColumnSize="ColumnSize.Is12.OnMobile.Is12.OnDesktop">
                        @if (ViewDocumentFilesList.Any())
                        {
                            <Table Hoverable="true" Bordered="true" Striped="true">
                                <thead>
                                    <tr>
                                        <th>@L["Name"]</th>
                                        <th>@L["UploadedAt"]</th>
                                        <th>@L["IsSigned"]</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var file in ViewDocumentFilesList)
                                    {
                                        <tr>
                                            <td>@file.DocumentFile.Name</td>
                                            <td>@file.DocumentFile.UploadedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                            <td>
                                                @if (file.DocumentFile.IsSigned)
                                                {
                                                    <Icon TextColor="TextColor.Success" Name="@IconName.Check" />
                                                }
                                                else
                                                {
                                                    <Icon TextColor="TextColor.Danger" Name="@IconName.Times" />
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </Table>
                        }
                    </Column>
                </Row>


                
                <!-- PDF Viewer at the bottom -->
                @if (ViewIsPdfFile && !string.IsNullOrEmpty(ViewPdfFileUrl))
                {
                    <Row>
                        <Column ColumnSize="ColumnSize.Is12">
                            <div class="mt-3">
                                <PdfViewerContainer Height="Height.Rem(35)" Class="pdf-viewer-modal-body">
                                    <PdfViewerToolbar />
                                    <PdfViewer Source="@ViewPdfFileUrl" />
                                </PdfViewerContainer>
                            </div>
                        </Column>
                    </Row>
                }
            </Form>
        }
    </ModalBody>
    <ModalFooter>
        <Button Color="Color.Secondary" Clicked="CloseViewFileModalAsync">
            @L["Close"]
        </Button>
    </ModalFooter>
    </ModalContent>
   
</Modal>
