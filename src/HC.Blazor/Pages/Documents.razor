                        <Field>
                            <FieldLabel>@L["Title"] *</FieldLabel>
                            <TextEdit @bind-Text="@NewDocument.Title"   >
                                <Feedback>
                                    <ValidationError />
                                </Feedback>
                            </TextEdit>
                        </Field>
                    </Validation>
                    <Validation MessageLocalizer="@LH.Localize">
                        <Field>
                            <FieldLabel>@L["Type"]</FieldLabel>
                            <TextEdit @bind-Text="@NewDocument.Type" MaxLength="DocumentConsts.TypeMaxLength"  >
                                <Feedback>
                                    <ValidationError />
                                </Feedback>
                            </TextEdit>
                        </Field>
                    </Validation>
                    <Validation MessageLocalizer="@LH.Localize">
                        <Field>
                            <FieldLabel>@L["UrgencyLevel"]</FieldLabel>
                            <TextEdit @bind-Text="@NewDocument.UrgencyLevel" MaxLength="DocumentConsts.UrgencyLevelMaxLength"  >
                                <Feedback>
                                    <ValidationError />
                                </Feedback>
                            </TextEdit>
                        </Field>
                    </Validation>
                    <Validation MessageLocalizer="@LH.Localize">
                        <Field>
                            <FieldLabel>@L["SecrecyLevel"]</FieldLabel>
                            <TextEdit @bind-Text="@NewDocument.SecrecyLevel" MaxLength="DocumentConsts.SecrecyLevelMaxLength"  >
                                <Feedback>
                                    <ValidationError />
                                </Feedback>
                            </TextEdit>
                        </Field>
                    </Validation>
                    <Validation MessageLocalizer="@LH.Localize">
                        <Field>
                            <FieldLabel>@L["CurrentStatus"]</FieldLabel>
                            <TextEdit @bind-Text="@NewDocument.CurrentStatus" MaxLength="DocumentConsts.CurrentStatusMaxLength"  >
                                <Feedback>
                                    <ValidationError />
                                </Feedback>
                            </TextEdit>
                        </Field>
                    </Validation>
                    <Validation MessageLocalizer="@LH.Localize">
                        <Field>
                            <FieldLabel>@L["CompletedTime"]</FieldLabel>
                            <DateEdit TValue="DateTime" InputMode="DateInputMode.Date" @bind-Date="@NewDocument.CompletedTime"  >
                               <Feedback>
                                    <ValidationError />
                                </Feedback>
                            </DateEdit>
                        </Field>
                    </Validation>
                    <Field>
                        <FieldLabel>@L["MasterData"] </FieldLabel>
                        <Autocomplete Data="@MasterDatasCollection"
                                      TItem="LookupDto<Guid>"
                                      TValue="Guid?"
                                      TextField="@((item) => item?.DisplayName)"
                                      ValueField="@((item) => item?.Id )"
                                      SearchChanged="@GetMasterDataCollectionLookupAsync"
                                      @bind-SelectedValue="@NewDocument.FieldId"
                                      Placeholder="&#8212;" />
                    </Field>
                    <Field>
                        <FieldLabel>@L["Unit"] </FieldLabel>
                        <Autocomplete Data="@UnitsCollection"
                                      TItem="LookupDto<Guid>"
                                      TValue="Guid?"
                                      TextField="@((item) => item?.DisplayName)"
                                      ValueField="@((item) => item?.Id )"
                                      SearchChanged="@GetUnitCollectionLookupAsync"
                                      @bind-SelectedValue="@NewDocument.UnitId"
                                      Placeholder="&#8212;" />
                    </Field>
                    <Field>
                        <FieldLabel>@L["Workflow"] </FieldLabel>
                        <Autocomplete Data="@WorkflowsCollection"
                                      TItem="LookupDto<Guid>"
                                      TValue="Guid?"
                                      TextField="@((item) => item?.DisplayName)"
                                      ValueField="@((item) => item?.Id )"
                                      SearchChanged="@GetWorkflowCollectionLookupAsync"
                                      @bind-SelectedValue="@NewDocument.WorkflowId"
                                      Placeholder="&#8212;" />
                    </Field>
                    <Field>
                        <FieldLabel>@L["MasterData"] </FieldLabel>
                        <Autocomplete Data="@MasterDatasCollection"
                                      TItem="LookupDto<Guid>"
                                      TValue="Guid?"
                                      TextField="@((item) => item?.DisplayName)"
                                      ValueField="@((item) => item?.Id )"
                                      SearchChanged="@GetMasterDataCollectionLookupAsync"
                                      @bind-SelectedValue="@NewDocument.StatusId"
                                      Placeholder="&#8212;" />
                    </Field>
                </Validations>
            </ModalBody>
            <ModalFooter>
                <Button Color="Color.Secondary"
                        Clicked="CloseCreateDocumentModalAsync">
                    @L["Cancel"]
                </Button>
                <SubmitButton Form="CreateDocumentForm" Clicked="CreateDocumentAsync"/>
@*//<suite-custom-code-block-6>*@
@*//</suite-custom-code-block-6>*@
            </ModalFooter>
        </Form>
@*//<suite-custom-code-block-7>*@
@*//</suite-custom-code-block-7>*@
