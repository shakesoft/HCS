		SelectedValue="@Filter.FieldId"
		SelectedValueChanged="@OnFieldIdChangedAsync">
<SelectItem></SelectItem>
@foreach(var item in MasterDatasCollection)
{
	<SelectItem TValue="Guid?" Value="@item.Id">
		@item.DisplayName
	</SelectItem>
}
</Select>                       
