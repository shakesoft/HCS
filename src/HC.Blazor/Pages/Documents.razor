@* ************************* DATA GRID ************************* *@
<Card>
    <CardBody>        
        <Div  Visibility="@(SelectedDocuments.Any() ? Visibility.Visible : Visibility.Invisible)"
              class="d-flex justify-content-between align-items-center mb-2">
              <p class="lead mb-0">
                @if (AllDocumentsSelected)
                {
                    @L["AllItemsAreSelected", TotalCount]
                }
                else
                {
                    @if (SelectedDocuments.Count > 1)
                    {
                        @L["NumberOfItemsOnThisPageAreSelected", SelectedDocuments.Count]
                    }
                    else
                    {
                        @L["OneItemOnThisPageIsSelected"]
                    }
                }
              </p>
            <div>
                @if ((SelectedDocuments.Count == PageSize || SelectedDocuments.Count == DocumentList.Count) && TotalCount > SelectedDocuments.Count)
                {
                    if (!AllDocumentsSelected)
                    {
                        <Button Clicked="SelectAllItems" Class="mx-1 btn-outline-secondary">@L["SelectAllItems", TotalCount]</Button>
                    }
                    else
                    {
                        <Button Clicked="ClearSelection" Class="mx-1 btn-outline-secondary">@L["ClearSelection"]</Button>
                    }
                }
                <Button Color="Color.Danger" Class="mx-1" Size="Size.Medium" Clicked="DeleteSelectedDocumentsAsync">
                    <Icon Name="@IconName.Delete" /> @L["Delete"]
                </Button>
            </div>
        </Div>
        <hr Visibility="@(SelectedDocuments.Any() ? Visibility.Visible : Visibility.Invisible)"
            class="my-1 mx-0" />
        <DataGrid TItem="DocumentWithNavigationPropertiesDto"
                    @ref="DataGridRef"
                    Data="DocumentList"
                    SelectionMode="DataGridSelectionMode.Multiple"
                    SelectedRows="SelectedDocuments"
                    RowSelectable="RowSelectableHandler"
                    SelectedRowsChanged="SelectedDocumentRowsChanged"
                    ReadData="OnDataGridReadAsync"
                    TotalItems="TotalCount"
                    ShowPager="true"
                    Responsive="true"
                    PageSize="PageSize"
                    Class="datagrid-detail">
            <LoadingTemplate>
                <Row Class="w-100 align-items-center" Style="height: 150px;">
                    <Column>
                        <RadarSpinner />
                    </Column>
                </Row>
            </LoadingTemplate>
            <EmptyTemplate>
                <Row Class="w-100 align-items-center" Style="height: 150px;">
                    <Column>
                        <Heading Size="HeadingSize.Is4" TextAlignment="TextAlignment.Center">@L["NoDataAvailable"]</Heading>
                    </Column>
                </Row>
            </EmptyTemplate>   
            <DataGridColumns>
                @if (CanDeleteDocument && DocumentList.Any())
                {
                    <DataGridMultiSelectColumn TItem="DocumentWithNavigationPropertiesDto" DisplayOrder="-1" Width="30px"></DataGridMultiSelectColumn>
                }
                
                <DataGridColumn TItem="DocumentWithNavigationPropertiesDto" Caption="@L["Actions"]" Width="120px">
                    <DisplayTemplate>
                        <div class="hc-action-icons">
                            <i class="bi bi-send-fill hc-action-icon" 
                               style="color: #198754; cursor: pointer;"
                               title="@L["Send"]"
                               @onclick="@(() => SendDocumentAsync(context))"></i>
                            <i class="bi bi-pencil-square hc-action-icon" 
                               style="color: #ffc107; cursor: pointer;"
                               title="@L["Action.SubmitForSigning"]"
                               @onclick="@(() => SignDocumentAsync(context))"></i>
                            @if (HasPdfFile(context))
                            {
                                <i class="bi bi-eye-fill hc-action-icon hc-action-view" 
                                   title="@L["ViewFile"]"
                                   @onclick="@(() => ViewFileAsync(context))"
                                   style="cursor: pointer;"></i>
                            }
                            @if (CanEditDocument)
                            {
                                <i class="bi bi-pencil-fill hc-action-icon hc-action-edit" 
                                   title="@L["Edit"]"
                                   @onclick="@(() => OpenEditDocumentModalAsync(context))"
                                   style="cursor: pointer;"></i>
                            }
                            @if (CanDeleteDocument)
                            {
                                <i class="bi bi-trash-fill hc-action-icon hc-action-delete" 
                                   title="@L["Delete"]"
                                   @onclick="@(() => DeleteDocumentAsync(context))"
                                   style="cursor: pointer;"></i>
                            }
                        </div>
@*//<suite-custom-code-block-4>*@
@*//</suite-custom-code-block-4>*@
                    </DisplayTemplate>
                </DataGridColumn>
                <DataGridColumn TItem="DocumentWithNavigationPropertiesDto"
                        Field="Document.No"
                        Caption="@L["DocumentNumber"]"
                        CellStyle="@((item) => "min-width: 150px")"
                        Width="150px">
                </DataGridColumn>
                <DataGridColumn TItem="DocumentWithNavigationPropertiesDto"
                        Field="Document.StorageNumber"
                        Caption="@L["StorageNumber"]"
                        CellStyle="@((item) => "min-width: 150px")"
                        Width="150px">
                </DataGridColumn>
                <DataGridColumn TItem="DocumentWithNavigationPropertiesDto"
                        Field="Document.Title"
                        Caption="@L["Title"]"
                        CellStyle="@((item) => "min-width: 300px")"
                        Width="300px">
                    <DisplayTemplate>
                        <div style="white-space: normal; word-break: break-word;">
                            @context.Document.Title
                        </div>
                    </DisplayTemplate>
                </DataGridColumn>
                <DataGridColumn TItem="DocumentWithNavigationPropertiesDto"
                        Field="Document.CompletedTime"
                        Caption="@L["CompletedTime"]"
                        CellStyle="@((item) => "min-width: 200px")"
                        Width="150px">
                    <DisplayTemplate>
                            @context.Document.CompletedTime.ToShortDateString()
                    </DisplayTemplate>
                </DataGridColumn>
                <DataGridColumn TItem="DocumentWithNavigationPropertiesDto"
                        Field="Type.Name"
                        Caption="@L["Type"]"
                        CellStyle="@((item) => "min-width: 150px")"
                        Width="150px">
                </DataGridColumn>
                <DataGridColumn TItem="DocumentWithNavigationPropertiesDto"
                        Field="Field.Name"
                        Caption="@L["Field"]"
                        CellStyle="@((item) => "min-width: 150px")"
                        Width="150px">
                </DataGridColumn>
                <DataGridColumn TItem="DocumentWithNavigationPropertiesDto"
                        Field="Unit.Name"
                        Caption="@L["Unit"]"
                        CellStyle="@((item) => "min-width: 150px")"
                        Width="150px">
                </DataGridColumn>
                <DataGridColumn TItem="DocumentWithNavigationPropertiesDto"
                        Field="Status.Name"
                        Caption="@L["Status"]"
                        CellStyle="@((item) => "min-width: 150px")"
                        Width="150px">
                </DataGridColumn>
                <DataGridColumn TItem="DocumentWithNavigationPropertiesDto"
                        Field="UrgencyLevel.Name"
                        Caption="@L["UrgencyLevel"]"
                        CellStyle="@((item) => "min-width: 200px")"
                        Width="150px">
                </DataGridColumn>
                <DataGridColumn TItem="DocumentWithNavigationPropertiesDto"
                        Field="SecrecyLevel.Name"
                        Caption="@L["SecrecyLevel"]"
                        CellStyle="@((item) => "min-width: 150px")"
                        Width="150px">
                </DataGridColumn>
                <DataGridColumn TItem="DocumentWithNavigationPropertiesDto"
                        Field="Workflow.Name"
                        Caption="@L["Workflow"]"
                        CellStyle="@((item) => "min-width: 150px")"
                        Width="150px">
                </DataGridColumn>
            </DataGridColumns>
        </DataGrid>
    </CardBody>
</Card>
@* ************************* CREATE MODAL ************************* *@
<Modal @ref="CreateDocumentModal" Closing="@CreateDocumentModal.CancelClosingModalWhenFocusLost">
    <ModalContent Centered="true">
@*//<suite-custom-code-block-5>*@
@*//</suite-custom-code-block-5>*@
        <Form id="CreateDocumentForm">
            <ModalHeader>
                <ModalTitle>@L["NewDocument"]</ModalTitle>
                <CloseButton Clicked="CloseCreateDocumentModalAsync" />
            </ModalHeader>
            <ModalBody>
                <Validations @ref="@NewDocumentValidations"
                            Mode="ValidationMode.Auto"
                            Model="@NewDocument"
                            ValidateOnLoad="false">
                    <Validation MessageLocalizer="@LH.Localize">
                        <Field>
                            <FieldLabel>@L["No"]</FieldLabel>
                            <TextEdit @bind-Text="@NewDocument.No" MaxLength="DocumentConsts.NoMaxLength"  Autofocus="true">
                                <Feedback>
                                    <ValidationError />
                                </Feedback>
                            </TextEdit>
                        </Field>
                    </Validation>
                    <Validation MessageLocalizer="@LH.Localize">
                        <Field>
                            <FieldLabel>@L["Title"] *</FieldLabel>
                            <TextEdit @bind-Text="@NewDocument.Title"   >
                                <Feedback>
                                    <ValidationError />
                                </Feedback>
                            </TextEdit>
                        </Field>
                    </Validation>
                    <Validation MessageLocalizer="@LH.Localize">
                        <Field>
                            <FieldLabel>@L["CurrentStatus"]</FieldLabel>
                            <TextEdit @bind-Text="@NewDocument.CurrentStatus" MaxLength="DocumentConsts.CurrentStatusMaxLength"  >
                                <Feedback>
                                    <ValidationError />
                                </Feedback>
                            </TextEdit>
                        </Field>
                    </Validation>
                    <Validation MessageLocalizer="@LH.Localize">
                        <Field>
                            <FieldLabel>@L["CompletedTime"]</FieldLabel>
                            <DateEdit TValue="DateTime" InputMode="DateInputMode.Date" @bind-Date="@NewDocument.CompletedTime"  >
                               <Feedback>
                                    <ValidationError />
                                </Feedback>
                            </DateEdit>
                        </Field>
                    </Validation>
                    <Validation MessageLocalizer="@LH.Localize">
                        <Field>
                            <FieldLabel>@L["StorageNumber"] *</FieldLabel>
                            <TextEdit @bind-Text="@NewDocument.StorageNumber" MaxLength="DocumentConsts.StorageNumberMaxLength"  >
                                <Feedback>
                                    <ValidationError />
                                </Feedback>
                            </TextEdit>
                        </Field>
                    </Validation>
                    <Field>
                        <FieldLabel>@L["MasterData"] </FieldLabel>
                        <Autocomplete Data="@MasterDatasCollection"
                                      TItem="LookupDto<Guid>"
                                      TValue="Guid?"
                                      TextField="@((item) => item?.DisplayName)"
                                      ValueField="@((item) => item?.Id )"
                                      SearchChanged="@GetMasterDataCollectionLookupAsync"
                                      @bind-SelectedValue="@NewDocument.FieldId"
                                      Placeholder="&#8212;" />
                    </Field>
                    <Field>
                        <FieldLabel>@L["Unit"] </FieldLabel>
                        <Autocomplete Data="@UnitsCollection"
                                      TItem="LookupDto<Guid>"
                                      TValue="Guid?"
                                      TextField="@((item) => item?.DisplayName)"
                                      ValueField="@((item) => item?.Id )"
                                      SearchChanged="@GetUnitCollectionLookupAsync"
                                      @bind-SelectedValue="@NewDocument.UnitId"
                                      Placeholder="&#8212;" />
                    </Field>
                    <Field>
                        <FieldLabel>@L["Workflow"] </FieldLabel>
                        <Autocomplete Data="@WorkflowsCollection"
                                      TItem="LookupDto<Guid>"
                                      TValue="Guid?"
                                      TextField="@((item) => item?.DisplayName)"
                                      ValueField="@((item) => item?.Id )"
                                      SearchChanged="@GetWorkflowCollectionLookupAsync"
                                      @bind-SelectedValue="@NewDocument.WorkflowId"
                                      Placeholder="&#8212;" />
                    </Field>
                    <Field>
                        <FieldLabel>@L["MasterData"] </FieldLabel>
                        <Autocomplete Data="@MasterDatasCollection"
                                      TItem="LookupDto<Guid>"
                                      TValue="Guid?"
                                      TextField="@((item) => item?.DisplayName)"
                                      ValueField="@((item) => item?.Id )"
                                      SearchChanged="@GetMasterDataCollectionLookupAsync"
                                      @bind-SelectedValue="@NewDocument.StatusId"
                                      Placeholder="&#8212;" />
                    </Field>
                    <Field>
                        <FieldLabel>@L["MasterData"] *</FieldLabel>
                        <Autocomplete Data="@MasterDatasCollection"
                                      TItem="LookupDto<Guid>"
                                      TValue="Guid"
                                      TextField="@((item) => item?.DisplayName)"
                                      ValueField="@((item) => item?.Id ?? default)"
                                      SearchChanged="@GetMasterDataCollectionLookupAsync"
                                      @bind-SelectedValue="@NewDocument.TypeId"
                                      Placeholder="&#8212;" />
                    </Field>
                    <Field>
                        <FieldLabel>@L["MasterData"] *</FieldLabel>
                        <Autocomplete Data="@MasterDatasCollection"
                                      TItem="LookupDto<Guid>"
                                      TValue="Guid"
                                      TextField="@((item) => item?.DisplayName)"
                                      ValueField="@((item) => item?.Id ?? default)"
                                      SearchChanged="@GetMasterDataCollectionLookupAsync"
                                      @bind-SelectedValue="@NewDocument.UrgencyLevelId"
                                      Placeholder="&#8212;" />
                    </Field>
                    <Field>
                        <FieldLabel>@L["MasterData"] *</FieldLabel>
                        <Autocomplete Data="@MasterDatasCollection"
                                      TItem="LookupDto<Guid>"
                                      TValue="Guid"
                                      TextField="@((item) => item?.DisplayName)"
                                      ValueField="@((item) => item?.Id ?? default)"
                                      SearchChanged="@GetMasterDataCollectionLookupAsync"
                                      @bind-SelectedValue="@NewDocument.SecrecyLevelId"
                                      Placeholder="&#8212;" />
                    </Field>
                </Validations>
            </ModalBody>
            <ModalFooter>
                <Button Color="Color.Secondary"
                        Clicked="CloseCreateDocumentModalAsync">
                    @L["Cancel"]
                </Button>
                <SubmitButton Form="CreateDocumentForm" Clicked="CreateDocumentAsync"/>
@*//<suite-custom-code-block-6>*@
@*//</suite-custom-code-block-6>*@
            </ModalFooter>
        </Form>
@*//<suite-custom-code-block-7>*@
@*//</suite-custom-code-block-7>*@
    </ModalContent>
</Modal>
