                    </Field>
                </Column>
                <Column ColumnSize="ColumnSize.Is3">
                    <Field>
                        <FieldLabel>@L["UrgencyLevel"]</FieldLabel>
                        <TextEdit Text="@Filter.UrgencyLevel" TextChanged="@OnUrgencyLevelChangedAsync" />                       
                    </Field>
                </Column>
                <Column ColumnSize="ColumnSize.Is3">
                    <Field>
                        <FieldLabel>@L["SecrecyLevel"]</FieldLabel>
                        <TextEdit Text="@Filter.SecrecyLevel" TextChanged="@OnSecrecyLevelChangedAsync" />                       
                    </Field>
                </Column>
                <Column ColumnSize="ColumnSize.Is3">
                    <Field>
                        <FieldLabel>@L["CurrentStatus"]</FieldLabel>
                        <TextEdit Text="@Filter.CurrentStatus" TextChanged="@OnCurrentStatusChangedAsync" />                       
                    </Field>
                </Column>
                <Column ColumnSize="ColumnSize.Is3">
