@page "/document-histories"
@attribute [Authorize(HCPermissions.DocumentHistories.Default)]
@using HC.DocumentHistories
@using HC.DocumentHistories
@using HC.Localization
@using HC.Shared
@using Microsoft.AspNetCore.Authorization
@using Microsoft.Extensions.Localization
@using Microsoft.AspNetCore.Components.Web
@using Blazorise
@using Blazorise.Components
@using Blazorise.DataGrid
@using Volo.Abp.BlazoriseUI
@using Volo.Abp.BlazoriseUI.Components
@using Volo.Abp.ObjectMapping
@using Volo.Abp.AspNetCore.Components.Messages
@using Volo.Abp.AspNetCore.Components.Web.Theming.Layout
@using HC.Permissions
@using Volo.Abp.AspNetCore.Components.Web
@using Volo.Abp.AspNetCore.Components
@using Microsoft.AspNetCore.Components
@using Volo.Abp.Http.Client
@inherits HCComponentBase
@inject IDocumentHistoriesAppService DocumentHistoriesAppService
@inject IUiMessageService UiMessageService
@inject AbpBlazorMessageLocalizerHelper<HCResource> LH
@inject IRemoteServiceConfigurationProvider RemoteServiceConfigurationProvider
@inject NavigationManager NavigationManager
@* ************************* PAGE HEADER ************************* *@
<PageHeader Title="@L["DocumentHistories"]" BreadcrumbItems="BreadcrumbItems" Toolbar="Toolbar">
</PageHeader>
<style>
    tr.table-row-selectable:hover {
        cursor: default;
    }
</style>
@* ************************* SEARCH ************************* *@
<Card>
    <CardBody>
@*//<suite-custom-code-block-1>*@
@*//</suite-custom-code-block-1>*@
        <Row>
            <div class="col col-md-8 col-lg-10">
                <div class="mb-3">
                    <Form id="DocumentHistorySearchForm">
                        <Addons>
                            <Addon AddonType="AddonType.Body">
                                <TextEdit @bind-Text="@Filter.FilterText"
                                        Autofocus="true"
                                        Placeholder="@L["Search"]">
                                </TextEdit>
                            </Addon>
                            <Addon AddonType="AddonType.End">
                                <SubmitButton Form="DocumentHistorySearchForm" Clicked="GetDocumentHistoriesAsync">
                                    <Icon Name="IconName.Search" Class="me-1"></Icon>@L["Search"]
                                </SubmitButton>
                            </Addon>
                        </Addons>
                    </Form>
                </div>
            </div>
                   <div class="col-md-4 col-lg-2">
            <div class="mb-3">
               <Button Color="Color.Primary" Outline Style="width:100%" id="AdvancedFilterSectionToggler"
                         Clicked="@(() => ShowAdvancedFilters = !ShowAdvancedFilters)">@L["Filters"]
                         <i aria-hidden="true" class="fa ms-1 @(!ShowAdvancedFilters ? "fa-angle-down" : "fa-angle-up")"></i>
               </Button>
            </div>
       </div>
        <div style="display: @(!ShowAdvancedFilters ? "none" : "block")"  class="mt-3">
            <Row>
                <Column ColumnSize="ColumnSize.Is3">
                    <Field>
                        <FieldLabel>@L["Comment"]</FieldLabel>
                        <TextEdit Text="@Filter.Comment" TextChanged="@OnCommentChangedAsync" />                       
                    </Field>
                </Column>
                <Column ColumnSize="ColumnSize.Is3">
                    <Field>
                        <FieldLabel>@L["Action"]</FieldLabel>
                        <TextEdit Text="@Filter.Action" TextChanged="@OnActionChangedAsync" />                       
                    </Field>
                </Column>
                <Column ColumnSize="ColumnSize.Is3">
                    <Field>
                        <FieldLabel>@L["Document"]</FieldLabel>
                        <Select TValue="Guid?"
		SelectedValue="@Filter.DocumentId"
		SelectedValueChanged="@OnDocumentIdChangedAsync">
<SelectItem></SelectItem>
@foreach(var item in DocumentsCollection)
{
	<SelectItem TValue="Guid" Value="@item.Id">
		@item.DisplayName
	</SelectItem>
}
</Select>                       
                    </Field>
                </Column>
                <Column ColumnSize="ColumnSize.Is3">
                    <Field>
                        <FieldLabel>@L["IdentityUser"]</FieldLabel>
                        <Select TValue="Guid?"
		SelectedValue="@Filter.FromUser"
		SelectedValueChanged="@OnFromUserChangedAsync">
<SelectItem></SelectItem>
@foreach(var item in IdentityUsersCollection)
{
	<SelectItem TValue="Guid?" Value="@item.Id">
		@item.DisplayName
	</SelectItem>
}
</Select>                       
                    </Field>
                </Column>
                <Column ColumnSize="ColumnSize.Is3">
                    <Field>
                        <FieldLabel>@L["IdentityUser"]</FieldLabel>
                        <Select TValue="Guid?"
		SelectedValue="@Filter.ToUser"
		SelectedValueChanged="@OnToUserChangedAsync">
<SelectItem></SelectItem>
@foreach(var item in IdentityUsersCollection)
{
	<SelectItem TValue="Guid" Value="@item.Id">
		@item.DisplayName
	</SelectItem>
}
</Select>                       
                    </Field>
                </Column>
            </Row>
@*//<suite-custom-code-block-2>*@
@*//</suite-custom-code-block-2>*@
        </div>
        </Row>
@*//<suite-custom-code-block-3>*@
@*//</suite-custom-code-block-3>*@
    </CardBody>
</Card>
@* ************************* DATA GRID ************************* *@
<Card>
    <CardBody>        
        <Div  Visibility="@(SelectedDocumentHistories.Any() ? Visibility.Visible : Visibility.Invisible)"
              class="d-flex justify-content-between align-items-center mb-2">
              <p class="lead mb-0">
                @if (AllDocumentHistoriesSelected)
                {
                    @L["AllItemsAreSelected", TotalCount]
                }
                else
                {
                    @if (SelectedDocumentHistories.Count > 1)
                    {
                        @L["NumberOfItemsOnThisPageAreSelected", SelectedDocumentHistories.Count]
                    }
                    else
                    {
                        @L["OneItemOnThisPageIsSelected"]
                    }
                }
              </p>
            <div>
                @if ((SelectedDocumentHistories.Count == PageSize || SelectedDocumentHistories.Count == DocumentHistoryList.Count) && TotalCount > SelectedDocumentHistories.Count)
                {
                    if (!AllDocumentHistoriesSelected)
                    {
                        <Button Clicked="SelectAllItems" Class="mx-1 btn-outline-secondary">@L["SelectAllItems", TotalCount]</Button>
                    }
                    else
                    {
                        <Button Clicked="ClearSelection" Class="mx-1 btn-outline-secondary">@L["ClearSelection"]</Button>
                    }
                }
                <Button Color="Color.Danger" Class="mx-1" Size="Size.Medium" Clicked="DeleteSelectedDocumentHistoriesAsync">
                    <Icon Name="@IconName.Delete" /> @L["Delete"]
                </Button>
            </div>
        </Div>
        <hr Visibility="@(SelectedDocumentHistories.Any() ? Visibility.Visible : Visibility.Invisible)"
            class="my-1 mx-0" />
        <DataGrid TItem="DocumentHistoryWithNavigationPropertiesDto"
                  @ref="DataGridRef"
                  Data="DocumentHistoryList"
                  SelectionMode="DataGridSelectionMode.Multiple"
                  SelectedRows="SelectedDocumentHistories"
                  RowSelectable="RowSelectableHandler"
                  SelectedRowsChanged="SelectedDocumentHistoryRowsChanged"
                  ReadData="OnDataGridReadAsync"
                  TotalItems="TotalCount"
                  ShowPager="true"
                  Responsive="true"
                  PageSize="PageSize"
                  Class="datagrid-detail">
            <LoadingTemplate>
                <Row Class="w-100 align-items-center" Style="height: 150px;">
                    <Column>
                       <RadarSpinner />
                    </Column>
                </Row>
            </LoadingTemplate>
            <EmptyTemplate>
                <Row Class="w-100 align-items-center" Style="height: 150px;">
                    <Column>
                        <Heading Size="HeadingSize.Is4" TextAlignment="TextAlignment.Center">@L["NoDataAvailable"]</Heading>
                    </Column>
                </Row>
            </EmptyTemplate>   
            <DataGridColumns>
                @if (CanDeleteDocumentHistory && DocumentHistoryList.Any())
                {
                    <DataGridMultiSelectColumn TItem="DocumentHistoryWithNavigationPropertiesDto" DisplayOrder="-1" Width="30px"></DataGridMultiSelectColumn>
                }
                <DataGridEntityActionsColumn TItem="DocumentHistoryWithNavigationPropertiesDto" @ref="@EntityActionsColumn">
                    <DisplayTemplate>
                        <EntityActions TItem="DocumentHistoryWithNavigationPropertiesDto" EntityActionsColumn="@EntityActionsColumn">
                            <EntityAction TItem="DocumentHistoryWithNavigationPropertiesDto"
                                          Visible="@CanEditDocumentHistory"
                                          Clicked="async () => await OpenEditDocumentHistoryModalAsync(context)"
                                          Text="@L["Edit"]"></EntityAction>
                            <EntityAction TItem="DocumentHistoryWithNavigationPropertiesDto"
                                          Visible="@CanDeleteDocumentHistory"
                                          Clicked="() => DeleteDocumentHistoryAsync(context)"
                                          ConfirmationMessage="@(()=> L["DeleteConfirmationMessage"])"
                                          Text="@L["Delete"]"></EntityAction>
@*//<suite-custom-code-block-4>*@
@*//</suite-custom-code-block-4>*@
                        </EntityActions>
                    </DisplayTemplate>
                </DataGridEntityActionsColumn>
              <DataGridColumn TItem="DocumentHistoryWithNavigationPropertiesDto"
                      Field="DocumentHistory.Comment"
                      Caption="@L["Comment"]">
              </DataGridColumn>
              <DataGridColumn TItem="DocumentHistoryWithNavigationPropertiesDto"
                      Field="DocumentHistory.Action"
                      Caption="@L["Action"]">
              </DataGridColumn>
              <DataGridColumn TItem="DocumentHistoryWithNavigationPropertiesDto"
                      Field="Document.Title"
                      Caption="@L["Document"]">
              </DataGridColumn>
              <DataGridColumn TItem="DocumentHistoryWithNavigationPropertiesDto"
                      Field="FromUser.Name"
                      Caption="@L["FromUser"]">
              </DataGridColumn>
              <DataGridColumn TItem="DocumentHistoryWithNavigationPropertiesDto"
                      Field="ToUser.Name"
                      Caption="@L["ToUser"]">
              </DataGridColumn>
            </DataGridColumns>
        </DataGrid>
    </CardBody>
</Card>
@* ************************* CREATE MODAL ************************* *@
<Modal @ref="CreateDocumentHistoryModal" Closing="@CreateDocumentHistoryModal.CancelClosingModalWhenFocusLost">
    <ModalContent Centered="true">
@*//<suite-custom-code-block-5>*@
@*//</suite-custom-code-block-5>*@
        <Form id="CreateDocumentHistoryForm">
            <ModalHeader>
                <ModalTitle>@L["NewDocumentHistory"]</ModalTitle>
                <CloseButton Clicked="CloseCreateDocumentHistoryModalAsync" />
            </ModalHeader>
            <ModalBody>
                <Validations @ref="@NewDocumentHistoryValidations"
                            Mode="ValidationMode.Auto"
                            Model="@NewDocumentHistory"
                            ValidateOnLoad="false">
                    <Validation MessageLocalizer="@LH.Localize">
                        <Field>
                            <FieldLabel>@L["Comment"]</FieldLabel>
                            <MemoEdit @bind-Text="@NewDocumentHistory.Comment"   Autofocus="true">
                                <Feedback>
                                    <ValidationError />
                                </Feedback>
                            </MemoEdit>
                        </Field>
                    </Validation>
                    <Validation MessageLocalizer="@LH.Localize">
                        <Field>
                            <FieldLabel>@L["Action"] *</FieldLabel>
                            <TextEdit @bind-Text="@NewDocumentHistory.Action" MaxLength="DocumentHistoryConsts.ActionMaxLength"  >
                                <Feedback>
                                    <ValidationError />
                                </Feedback>
                            </TextEdit>
                        </Field>
                    </Validation>
                    <Field>
                        <FieldLabel>@L["Document"] *</FieldLabel>
                        <Autocomplete Data="@DocumentsCollection"
                                      TItem="LookupDto<Guid>"
                                      TValue="Guid"
                                      TextField="@((item) => item?.DisplayName)"
                                      ValueField="@((item) => item?.Id ?? default)"
                                      SearchChanged="@GetDocumentCollectionLookupAsync"
                                      @bind-SelectedValue="@NewDocumentHistory.DocumentId"
                                      Placeholder="&#8212;" />
                    </Field>
                    <Field>
                        <FieldLabel>@L["IdentityUser"] </FieldLabel>
                        <Autocomplete Data="@IdentityUsersCollection"
                                      TItem="LookupDto<Guid>"
                                      TValue="Guid?"
                                      TextField="@((item) => item?.DisplayName)"
                                      ValueField="@((item) => item?.Id )"
                                      SearchChanged="@GetIdentityUserCollectionLookupAsync"
                                      @bind-SelectedValue="@NewDocumentHistory.FromUser"
                                      Placeholder="&#8212;" />
                    </Field>
                    <Field>
                        <FieldLabel>@L["IdentityUser"] *</FieldLabel>
                        <Autocomplete Data="@IdentityUsersCollection"
                                      TItem="LookupDto<Guid>"
                                      TValue="Guid"
                                      TextField="@((item) => item?.DisplayName)"
                                      ValueField="@((item) => item?.Id ?? default)"
                                      SearchChanged="@GetIdentityUserCollectionLookupAsync"
                                      @bind-SelectedValue="@NewDocumentHistory.ToUser"
                                      Placeholder="&#8212;" />
                    </Field>
                </Validations>
            </ModalBody>
            <ModalFooter>
                <Button Color="Color.Secondary"
                        Clicked="CloseCreateDocumentHistoryModalAsync">
                    @L["Cancel"]
                </Button>
                <SubmitButton Form="CreateDocumentHistoryForm" Clicked="CreateDocumentHistoryAsync"/>
@*//<suite-custom-code-block-6>*@
@*//</suite-custom-code-block-6>*@
            </ModalFooter>
        </Form>
@*//<suite-custom-code-block-7>*@
@*//</suite-custom-code-block-7>*@
    </ModalContent>
</Modal>
@* ************************* EDIT MODAL ************************* *@
