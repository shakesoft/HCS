                        <FieldLabel>@L["RelatedType"] *</FieldLabel>
                        <Select TValue="RelatedType" 
                                SelectedValue="@EditingCalendarEventRelatedType"
                                SelectedValueChanged="@((RelatedType value) => { EditingCalendarEventRelatedType = value; SelectedEditProject.Clear(); SelectedEditProjectTask.Clear(); EditFieldErrors.Remove("RelatedId"); InvokeAsync(StateHasChanged); })">
                            <ChildContent>
                                @foreach (var relatedType in Enum.GetValues<RelatedType>())
                                {
                                    <SelectItem TValue="RelatedType" Value="@relatedType">
                                        @L[$"Enum:RelatedType.{relatedType}"]
                                    </SelectItem>
                                }
                            </ChildContent>
                        </Select>
                    </Field>
                    @if (EditingCalendarEventRelatedType == RelatedType.PROJECT)
                    {
                        <Field>
                            <FieldLabel>@L["Project"] *</FieldLabel>
                            <div class="hc-select2-full" style="@(HasEditFieldError("RelatedId") ? "border: 1px solid #dc3545; border-radius: 0.25rem; padding: 2px;" : "")">
                                <Select2 IdSelector="c => c.Id.ToString()"
                                         TextSelector="c => c.DisplayName"
                                         FilterFunction="GetProjectCollectionLookupAsync"
                                         GetElementById="async (items, id, token) => items.Where(x => x.Id.ToString() == id).FirstOrDefault()!"
                                         Datasource="ProjectsCollection"
                                         Value="@SelectedEditProject"
                                         OnValueChanged="@(() => { OnEditProjectChanged(); })"
                                         Cache="__MemoryCache"
                                         Multiselect="false" />
                            </div>
                            @if (HasEditFieldError("RelatedId"))
                            {
                                <div class="invalid-feedback d-block">@GetEditFieldError("RelatedId")</div>
                            }
                        </Field>
                    }
                    else if (EditingCalendarEventRelatedType == RelatedType.TASK)
                    {
                        <Field>
                            <FieldLabel>@L["ProjectTask"] *</FieldLabel>
                            <div class="hc-select2-full" style="@(HasEditFieldError("RelatedId") ? "border: 1px solid #dc3545; border-radius: 0.25rem; padding: 2px;" : "")">
                                <Select2 IdSelector="c => c.Id"
                                         TextSelector="c => c.DisplayName"
                                         FilterFunction="GetProjectTaskCollectionLookupAsync"
                                         GetElementById="async (items, id, token) => items.Where(x => x.Id == id).FirstOrDefault()!"
                                         Datasource="ProjectTasksCollection"
                                         Value="@SelectedEditProjectTask"
                                         OnValueChanged="@(() => { OnEditProjectTaskChanged(); })"
                                         Cache="__MemoryCache"
                                         Multiselect="false" />
                            </div>
                            @if (HasEditFieldError("RelatedId"))
                            {
                                <div class="invalid-feedback d-block">@GetEditFieldError("RelatedId")</div>
                            }
                        </Field>
                    }
                    <Field>
                        <FieldLabel>@L["Visibility"] *</FieldLabel>
                        <Select TValue="EventVisibility" 
                                SelectedValue="@EditingCalendarEventVisibility"
                                SelectedValueChanged="@((EventVisibility value) => { EditingCalendarEventVisibility = value; })">
                            <ChildContent>
                                @foreach (var visibility in Enum.GetValues<EventVisibility>())
                                {
                                    <SelectItem TValue="EventVisibility" Value="@visibility">
                                        @L[$"Enum:EventVisibility.{visibility}"]
                                    </SelectItem>
                                }
                            </ChildContent>
                        </Select>
                    </Field>
            </ModalBody>
            <ModalFooter>
                <Button Color="Color.Secondary"
                        Clicked="CloseEditCalendarEventModalAsync">
                    @L["Cancel"]
                </Button>
                <SubmitButton Form="EditCalendarEventForm" Clicked="UpdateCalendarEventAsync" />
@*//<suite-custom-code-block-9>*@
@*//</suite-custom-code-block-9>*@
            </ModalFooter>
        </Form>
@*//<suite-custom-code-block-10>*@
@*//</suite-custom-code-block-10>*@
    </ModalContent>
</Modal>