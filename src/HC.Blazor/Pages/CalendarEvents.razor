@* ************************* CREATE MODAL ************************* *@
<Modal @ref="CreateCalendarEventModal" Closing="@CreateCalendarEventModal.CancelClosingModalWhenFocusLost">
    <ModalContent Centered="true">
@*//<suite-custom-code-block-5>*@
@*//</suite-custom-code-block-5>*@
        <Form id="CreateCalendarEventForm">
            <ModalHeader>
                <ModalTitle>@L["NewCalendarEvent"]</ModalTitle>
                <CloseButton Clicked="CloseCreateCalendarEventModalAsync" />
            </ModalHeader>
            <ModalBody>
                @* Manual validation is used (see ValidateCreateCalendarEvent). *@
                @if (!string.IsNullOrWhiteSpace(CreateCalendarEventValidationErrorKey))
                {
                    <Alert Color="Color.Danger">
                        <AlertMessage>@L["NotificationError"]!</AlertMessage>
                        <AlertDescription>@L[CreateCalendarEventValidationErrorKey]</AlertDescription>
                    </Alert>
                }
                <Field>
                    <FieldLabel>@L["Title"] *</FieldLabel>
                    <TextEdit Text="@NewCalendarEvent.Title" 
                              TextChanged="@((string value) => { NewCalendarEvent.Title = value; CreateFieldErrors.Remove("Title"); })"
                              Autofocus="true"
                              Style="@(HasCreateFieldError("Title") ? "border-color: #dc3545;" : "")">
                    </TextEdit>
                    @if (HasCreateFieldError("Title"))
                    {
                        <div class="invalid-feedback d-block">@GetCreateFieldError("Title")</div>
                    }
                </Field>
                <Field>
                    <FieldLabel>@L["Description"]</FieldLabel>
                    <MemoEdit @bind-Text="@NewCalendarEvent.Description">
                    </MemoEdit>
                </Field>
                <Field>
                    <FieldLabel>@L["StartTime"]</FieldLabel>
                    <Addons>
                        <Addon AddonType="AddonType.Body">
                            <DatePicker TValue="DateTime"
                                        InputMode="DateInputMode.DateTime"
                                        Date="@NewCalendarEvent.StartTime"
                                        DateChanged="@(v => NewCalendarEvent.StartTime = v)"
                                        Placeholder="@string.Empty"
                                        DisplayFormat="dd/MM/yyyy HH:mm"
                                        InputFormat="dd/MM/yyyy HH:mm"
                                        @ref="@NewCalendarEventStartTimeDatePicker" />
                        </Addon>
                        <Addon AddonType="AddonType.End">
                            <Button Color="Color.Light" Clicked="@(() => NewCalendarEventStartTimeDatePicker?.ToggleAsync())">
                                <Icon Name="IconName.CalendarDay" />
                            </Button>
                        </Addon>
                    </Addons>
                </Field>
                <Field>
                    <FieldLabel>@L["EndTime"]</FieldLabel>
                    <Addons>
                        <Addon AddonType="AddonType.Body">
                            <DatePicker TValue="DateTime"
                                        InputMode="DateInputMode.DateTime"
                                        Date="@NewCalendarEvent.EndTime"
                                        DateChanged="@(v => NewCalendarEvent.EndTime = v)"
                                        Placeholder="@string.Empty"
                                        DisplayFormat="dd/MM/yyyy HH:mm"
                                        InputFormat="dd/MM/yyyy HH:mm"
                                        @ref="@NewCalendarEventEndTimeDatePicker" />
                        </Addon>
                        <Addon AddonType="AddonType.End">
                            <Button Color="Color.Light" Clicked="@(() => NewCalendarEventEndTimeDatePicker?.ToggleAsync())">
                                <Icon Name="IconName.CalendarDay" />
                            </Button>
                        </Addon>
                    </Addons>
                </Field>
                <Field>
                    <Check TValue="bool" @bind-Checked="@NewCalendarEvent.AllDay"  >@L["AllDay"]</Check>
                </Field>
                <Field>
                    <FieldLabel>@L["EventType"] *</FieldLabel>
                    <Select TValue="EventType" 
                            SelectedValue="@NewCalendarEventEventType"
                            SelectedValueChanged="@((EventType value) => { NewCalendarEventEventType = value; })">
                        <ChildContent>
                            @foreach (var eventType in Enum.GetValues<EventType>())
                            {
                                <SelectItem TValue="EventType" Value="@eventType">
                                    @L[$"Enum:EventType.{eventType}"]
                                </SelectItem>
                            }
                        </ChildContent>
                    </Select>
                </Field>
                <Field>
                    <FieldLabel>@L["Location"]</FieldLabel>
                    <TextEdit @bind-Text="@NewCalendarEvent.Location">
                    </TextEdit>
                </Field>
                    <Field>
                        <FieldLabel>@L["RelatedType"] *</FieldLabel>
                        <Select TValue="RelatedType" 
                                SelectedValue="@NewCalendarEventRelatedType"
                                SelectedValueChanged="@((RelatedType value) => { NewCalendarEventRelatedType = value; SelectedNewProject.Clear(); SelectedNewProjectTask.Clear(); CreateFieldErrors.Remove("RelatedId"); InvokeAsync(StateHasChanged); })">
                            <ChildContent>
                                @foreach (var relatedType in Enum.GetValues<RelatedType>())
                                {
                                    <SelectItem TValue="RelatedType" Value="@relatedType">
                                        @L[$"Enum:RelatedType.{relatedType}"]
                                    </SelectItem>
                                }
                            </ChildContent>
                        </Select>
                    </Field>
                    @if (NewCalendarEventRelatedType == RelatedType.PROJECT)
                    {
                        <Field>
                            <FieldLabel>@L["Project"] *</FieldLabel>
                            <div class="hc-select2-full" style="@(HasCreateFieldError("RelatedId") ? "border: 1px solid #dc3545; border-radius: 0.25rem; padding: 2px;" : "")">
                                <Select2 IdSelector="c => c.Id.ToString()"
                                         TextSelector="c => c.DisplayName"
                                         FilterFunction="GetProjectCollectionLookupAsync"
                                         GetElementById="async (items, id, token) => items.Where(x => x.Id.ToString() == id).FirstOrDefault()!"
                                         Datasource="ProjectsCollection"
                                         Value="@SelectedNewProject"
                                         OnValueChanged="@(() => { OnNewProjectChanged(); })"
                                         Cache="__MemoryCache"
                                         Multiselect="false" />
                            </div>
                            @if (HasCreateFieldError("RelatedId"))
                            {
                                <div class="invalid-feedback d-block">@GetCreateFieldError("RelatedId")</div>
                            }
                        </Field>
                    }
                    else if (NewCalendarEventRelatedType == RelatedType.TASK)
                    {
                        <Field>
                            <FieldLabel>@L["ProjectTask"] *</FieldLabel>
                            <div class="hc-select2-full" style="@(HasCreateFieldError("RelatedId") ? "border: 1px solid #dc3545; border-radius: 0.25rem; padding: 2px;" : "")">
                                <Select2 IdSelector="c => c.Id"
                                         TextSelector="c => c.DisplayName"
                                         FilterFunction="GetProjectTaskCollectionLookupAsync"
                                         GetElementById="async (items, id, token) => items.Where(x => x.Id == id).FirstOrDefault()!"
                                         Datasource="ProjectTasksCollection"
                                         Value="@SelectedNewProjectTask"
                                         OnValueChanged="@(() => { OnNewProjectTaskChanged(); })"
                                         Cache="__MemoryCache"
                                         Multiselect="false" />
                            </div>
                            @if (HasCreateFieldError("RelatedId"))
                            {
                                <div class="invalid-feedback d-block">@GetCreateFieldError("RelatedId")</div>
                            }
                        </Field>
                    }
                    <Field>
                        <FieldLabel>@L["Visibility"] *</FieldLabel>
                        <Select TValue="EventVisibility" 
                                SelectedValue="@NewCalendarEventVisibility"
                                SelectedValueChanged="@((EventVisibility value) => { NewCalendarEventVisibility = value; })">
                            <ChildContent>
                                @foreach (var visibility in Enum.GetValues<EventVisibility>())
                                {
                                    <SelectItem TValue="EventVisibility" Value="@visibility">
                                        @L[$"Enum:EventVisibility.{visibility}"]
                                    </SelectItem>
                                }
                            </ChildContent>
                        </Select>
                    </Field>
            </ModalBody>
            <ModalFooter>
                <Button Color="Color.Secondary"
                        Clicked="CloseCreateCalendarEventModalAsync">
                    @L["Cancel"]
                </Button>
                <SubmitButton Form="CreateCalendarEventForm" Clicked="CreateCalendarEventAsync"/>
@*//<suite-custom-code-block-6>*@
@*//</suite-custom-code-block-6>*@
            </ModalFooter>
        </Form>
@*//<suite-custom-code-block-7>*@
@*//</suite-custom-code-block-7>*@
    </ModalContent>
</Modal>
