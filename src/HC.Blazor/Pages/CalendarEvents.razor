    List<Appointment> Appointments = new List<Appointment>();
    public void UpdateTestAppointments(List<Appointment> newAppointments, long requestId = 0)
    {
        Logger.LogInformation("UpdateTestAppointments - Start [RequestId: {RequestId}] - Input appointments count: {Count}, Current Appointments count: {CurrentCount}", 
            requestId, newAppointments?.Count ?? 0, Appointments.Count);
        
        Appointments.Clear();
        
        foreach (var appointment in newAppointments)
        {
            // Calculate number of days from original dates before any modification
            var startDate = appointment.Start.Date;
            var endDate = appointment.End.Date;
            int numOfDays = (endDate - startDate).Days + 1;
            
            var recurrenceRule = appointment.RecurrenceRule;
            if (string.IsNullOrEmpty(recurrenceRule) && numOfDays > 1)
            {
                recurrenceRule = $"FREQ=DAILY;INTERVAL=1;COUNT={numOfDays}";
            }
            
            DateTime displayEnd;
            if (!string.IsNullOrEmpty(recurrenceRule) && numOfDays > 1)
            {
                // For recurring events, set End to same day as Start with End time for display
                displayEnd = appointment.Start.Date.AddHours(appointment.End.Hour);
            }
            else
            {
                // For single day events, keep original End
                displayEnd = appointment.End;
            }
            
            var newAppt = new Appointment(
                appointment.Id,
                appointment.Title,
                appointment.Description, 
                appointment.Start, 
                displayEnd)
                {
                    RecurrenceRule = recurrenceRule
                };
            
            Appointments.Add(newAppt);
            
            Logger.LogInformation("UpdateTestAppointments - Added appointment - Id: {Id}, Title: {Title}, Start: {Start}, End: {End}, OriginalEndDate: {OriginalEnd}, CalculatedDays: {Days}, RecurrenceRule: {Rule}",
                newAppt.Id, newAppt.Title, newAppt.Start, newAppt.End, appointment.End, numOfDays, newAppt.RecurrenceRule ?? "None");
        }

        Logger.LogInformation("UpdateTestAppointments - End - Final Appointments count: {Count}", Appointments.Count);
        StateHasChanged();
    }
