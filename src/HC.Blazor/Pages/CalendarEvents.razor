                    <DisplayTemplate>
                        <EntityActions TItem="CalendarEventDto" EntityActionsColumn="@EntityActionsColumn">
                            <EntityAction TItem="CalendarEventDto"
                                          Visible="@CanEditCalendarEvent"
                                          Clicked="async () => await OpenEditCalendarEventModalAsync(context)"
                                          Text="@L["Edit"]"></EntityAction>
                            <EntityAction TItem="CalendarEventDto"
                                          Visible="@CanDeleteCalendarEvent"
                                          Clicked="() => DeleteCalendarEventAsync(context)"
                                          ConfirmationMessage="@(()=> L["DeleteConfirmationMessage"])"
                                          Text="@L["Delete"]"></EntityAction>
@*//<suite-custom-code-block-4>*@
@*//</suite-custom-code-block-4>*@
                        </EntityActions>
                    </DisplayTemplate>
                </DataGridEntityActionsColumn>
