                      Field="Title"
                      Caption="@L["Title"]">
              </DataGridColumn>
              <DataGridColumn TItem="CalendarEventDto"
                      Field="Description"
                      Caption="@L["Description"]">
              </DataGridColumn>
              <DataGridColumn TItem="CalendarEventDto"
                      Field="StartTime"
                      Caption="@L["StartTime"]">
                  <DisplayTemplate>
                        @context.StartTime.ToString("dd/MM/yyyy HH:mm")
                  </DisplayTemplate>
              </DataGridColumn>
              <DataGridColumn TItem="CalendarEventDto"
                      Field="EndTime"
                      Caption="@L["EndTime"]">
                  <DisplayTemplate>
                        @context.EndTime.ToString("dd/MM/yyyy HH:mm")
                  </DisplayTemplate>
              </DataGridColumn>
              <DataGridColumn TItem="CalendarEventDto"
                      Field="AllDay"
                      Caption="@L["AllDay"]">
                    <DisplayTemplate>
                        @if (context.AllDay)
                        {
                            <Icon TextColor="TextColor.Success" Name="@IconName.Check" />
                        }
                        else
                        {
                            <Icon TextColor="TextColor.Danger" Name="@IconName.Times" />
                        }
                    </DisplayTemplate>
              </DataGridColumn>
              <DataGridColumn TItem="CalendarEventDto"
                      Field="EventType"
                      Caption="@L["EventType"]">
                  <DisplayTemplate>
                      @if (Enum.TryParse<EventType>(context.EventType, out var eventType))
                      {
                          @L[$"Enum:EventType.{eventType}"]
                      }
                      else
                      {
                          @context.EventType
                      }
                  </DisplayTemplate>
              </DataGridColumn>
              <DataGridColumn TItem="CalendarEventDto"
                      Field="Location"
                      Caption="@L["Location"]">
              </DataGridColumn>
              <DataGridColumn TItem="CalendarEventDto"
                      Field="RelatedType"
                      Caption="@L["RelatedType"]">
                  <DisplayTemplate>
                      @if (Enum.TryParse<RelatedType>(context.RelatedType, out var relatedType))
                      {
                          @L[$"Enum:RelatedType.{relatedType}"]
                      }
                      else
                      {
                          @context.RelatedType
                      }
                  </DisplayTemplate>
              </DataGridColumn>
              <DataGridColumn TItem="CalendarEventDto"
                      Field="RelatedId"
                      Caption="@L["RelatedId"]">
              </DataGridColumn>
              <DataGridColumn TItem="CalendarEventDto"
                      Field="Visibility"
                      Caption="@L["Visibility"]">
                  <DisplayTemplate>
                      @if (Enum.TryParse<EventVisibility>(context.Visibility, out var visibility))
                      {
                          @L[$"Enum:EventVisibility.{visibility}"]
                      }
                      else
                      {
                          @context.Visibility
                      }
                  </DisplayTemplate>
              </DataGridColumn>
            </DataGridColumns>
        </DataGrid>
    </CardBody>
</Card>
}
@* ************************* SCHEDULER ************************* *@
@if (!IsListView)
{
<Card>
    <CardBody>
        <Scheduler TItem="Appointment" 
                   @key="@($"scheduler-{SchedulerEventList?.Count ?? 0}-{SelectedSchedulerDate}-{SelectedSchedulerView}")"
                   Date="@SelectedSchedulerDate"
                   DateChanged="@(async (DateOnly value) => { 
                    SelectedSchedulerDate = value; 
                        RebuildToolbar();
                        await GetCalendarEventsAsync();
                        await InvokeAsync(StateHasChanged);
                     })"
                   Data="@SchedulerEventList"
                   @bind-SelectedView="@SelectedSchedulerView"
                   Localizers="@SchedulerLocalizers"
                   EditItemClicked="OnSchedulerItemClicked"
                   AllDayField="AllDay">
            <SchedulerToolbar />
            <SchedulerViews>
                <SchedulerMonthView StartTime="@SchedulerStartTime" 
                                    EndTime="@SchedulerEndTime" 
                                    WorkDayStart="@SchedulerWorkDayStart" 
                                    WorkDayEnd="@SchedulerWorkDayEnd" />
            </SchedulerViews>
        </Scheduler>
    </CardBody>
</Card>
