                  @ref="DataGridRef"
                  Data="CalendarEventList"
                  SelectionMode="DataGridSelectionMode.Multiple"
                  SelectedRows="SelectedCalendarEvents"
                  RowSelectable="RowSelectableHandler"
                  SelectedRowsChanged="SelectedCalendarEventRowsChanged"
                  ReadData="OnDataGridReadAsync"
                  TotalItems="TotalCount"
                  ShowPager="true"
                  Responsive="true"
                  PageSize="PageSize"
                  Class="datagrid-detail">
            <LoadingTemplate>
                <Row Class="w-100 align-items-center" Style="height: 150px;">
                    <Column>
                       <RadarSpinner />
                    </Column>
                </Row>
            </LoadingTemplate>
            <EmptyTemplate>
                <Row Class="w-100 align-items-center" Style="height: 150px;">
                    <Column>
                        <Heading Size="HeadingSize.Is4" TextAlignment="TextAlignment.Center">@L["NoDataAvailable"]</Heading>
                    </Column>
                </Row>
            </EmptyTemplate>   
            <DataGridColumns>
                @if (CanDeleteCalendarEvent && CalendarEventList.Any())
                {
                    <DataGridMultiSelectColumn TItem="CalendarEventDto" DisplayOrder="-1" Width="30px"></DataGridMultiSelectColumn>
                }
