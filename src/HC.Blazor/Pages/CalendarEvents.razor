@* ************************* DATA GRID ************************* *@
@if (IsListView)
{
<Card>
    <CardBody>        
        <Div  Visibility="@(SelectedCalendarEvents.Any() ? Visibility.Visible : Visibility.Invisible)"
              class="d-flex justify-content-between align-items-center mb-2">
              <p class="lead mb-0">
                @if (AllCalendarEventsSelected)
                {
                    @L["AllItemsAreSelected", TotalCount]
                }
                else
                {
                    @if (SelectedCalendarEvents.Count > 1)
                    {
                        @L["NumberOfItemsOnThisPageAreSelected", SelectedCalendarEvents.Count]
                    }
                    else
                    {
                        @L["OneItemOnThisPageIsSelected"]
                    }
                }
              </p>
            <div>
                @if ((SelectedCalendarEvents.Count == PageSize || SelectedCalendarEvents.Count == CalendarEventList.Count) && TotalCount > SelectedCalendarEvents.Count)
                {
                    if (!AllCalendarEventsSelected)
                    {
                        <Button Clicked="SelectAllItems" Class="mx-1 btn-outline-secondary">@L["SelectAllItems", TotalCount]</Button>
                    }
                    else
                    {
                        <Button Clicked="ClearSelection" Class="mx-1 btn-outline-secondary">@L["ClearSelection"]</Button>
                    }
                }
                <Button Color="Color.Danger" Class="mx-1" Size="Size.Medium" Clicked="DeleteSelectedCalendarEventsAsync">
                    <Icon Name="@IconName.Delete" /> @L["Delete"]
                </Button>
            </div>
        </Div>
        <hr Visibility="@(SelectedCalendarEvents.Any() ? Visibility.Visible : Visibility.Invisible)"
            class="my-1 mx-0" />
        <DataGrid TItem="CalendarEventDto"
                  @ref="DataGridRef"
                  Data="CalendarEventList"
                  SelectionMode="DataGridSelectionMode.Multiple"
                  SelectedRows="SelectedCalendarEvents"
                  RowSelectable="RowSelectableHandler"
                  SelectedRowsChanged="SelectedCalendarEventRowsChanged"
                  ReadData="OnDataGridReadAsync"
                  TotalItems="TotalCount"
                  ShowPager="true"
                  Responsive="true"
                  PageSize="PageSize"
                  Class="datagrid-detail">
            <LoadingTemplate>
                <Row Class="w-100 align-items-center" Style="height: 150px;">
                    <Column>
                       <RadarSpinner />
                    </Column>
                </Row>
            </LoadingTemplate>
            <EmptyTemplate>
                <Row Class="w-100 align-items-center" Style="height: 150px;">
                    <Column>
                        <Heading Size="HeadingSize.Is4" TextAlignment="TextAlignment.Center">@L["NoDataAvailable"]</Heading>
                    </Column>
                </Row>
            </EmptyTemplate>   
            <DataGridColumns>
                @if (CanDeleteCalendarEvent && CalendarEventList.Any())
                {
                    <DataGridMultiSelectColumn TItem="CalendarEventDto" DisplayOrder="-1" Width="30px"></DataGridMultiSelectColumn>
                }
                <DataGridEntityActionsColumn TItem="CalendarEventDto" @ref="@EntityActionsColumn">
                    <DisplayTemplate>
                        <EntityActions TItem="CalendarEventDto" EntityActionsColumn="@EntityActionsColumn">
                            <EntityAction TItem="CalendarEventDto"
                                          Visible="@CanEditCalendarEvent"
                                          Clicked="async () => await OpenEditCalendarEventModalAsync(context)"
                                          Text="@L["Edit"]"></EntityAction>
                            <EntityAction TItem="CalendarEventDto"
                                          Visible="@CanDeleteCalendarEvent"
                                          Clicked="() => DeleteCalendarEventAsync(context)"
                                          ConfirmationMessage="@(()=> L["DeleteConfirmationMessage"])"
                                          Text="@L["Delete"]"></EntityAction>
@*//<suite-custom-code-block-4>*@
@*//</suite-custom-code-block-4>*@
                        </EntityActions>
                    </DisplayTemplate>
                </DataGridEntityActionsColumn>
              <DataGridColumn TItem="CalendarEventDto"
                      Field="Title"
                      Caption="@L["Title"]">
              </DataGridColumn>
              <DataGridColumn TItem="CalendarEventDto"
                      Field="Description"
                      Caption="@L["Description"]">
              </DataGridColumn>
              <DataGridColumn TItem="CalendarEventDto"
                      Field="StartTime"
                      Caption="@L["StartTime"]">
                  <DisplayTemplate>
                        @context.StartTime.ToString("dd/MM/yyyy HH:mm")
                  </DisplayTemplate>
              </DataGridColumn>
              <DataGridColumn TItem="CalendarEventDto"
                      Field="EndTime"
                      Caption="@L["EndTime"]">
                  <DisplayTemplate>
                        @context.EndTime.ToString("dd/MM/yyyy HH:mm")
                  </DisplayTemplate>
              </DataGridColumn>
              <DataGridColumn TItem="CalendarEventDto"
                      Field="AllDay"
                      Caption="@L["AllDay"]">
                    <DisplayTemplate>
                        @if (context.AllDay)
                        {
                            <Icon TextColor="TextColor.Success" Name="@IconName.Check" />
                        }
                        else
                        {
                            <Icon TextColor="TextColor.Danger" Name="@IconName.Times" />
                        }
                    </DisplayTemplate>
              </DataGridColumn>
              <DataGridColumn TItem="CalendarEventDto"
                      Field="EventType"
                      Caption="@L["EventType"]">
                  <DisplayTemplate>
                      @if (Enum.TryParse<EventType>(context.EventType, out var eventType))
                      {
                          @L[$"Enum:EventType.{eventType}"]
                      }
                      else
                      {
                          @context.EventType
                      }
                  </DisplayTemplate>
              </DataGridColumn>
              <DataGridColumn TItem="CalendarEventDto"
                      Field="Location"
                      Caption="@L["Location"]">
              </DataGridColumn>
              <DataGridColumn TItem="CalendarEventDto"
                      Field="RelatedType"
                      Caption="@L["RelatedType"]">
                  <DisplayTemplate>
                      @if (Enum.TryParse<RelatedType>(context.RelatedType, out var relatedType))
                      {
                          @L[$"Enum:RelatedType.{relatedType}"]
                      }
                      else
                      {
                          @context.RelatedType
                      }
                  </DisplayTemplate>
              </DataGridColumn>
              <DataGridColumn TItem="CalendarEventDto"
                      Field="RelatedId"
                      Caption="@L["RelatedId"]">
                  <DisplayTemplate>
                      @GetRelatedIdDisplayCode(context)
                  </DisplayTemplate>
              </DataGridColumn>
              <DataGridColumn TItem="CalendarEventDto"
                      Field="Visibility"
                      Caption="@L["Visibility"]">
                  <DisplayTemplate>
                      @if (Enum.TryParse<EventVisibility>(context.Visibility, out var visibility))
                      {
                          @L[$"Enum:EventVisibility.{visibility}"]
                      }
                      else
                      {
                          @context.Visibility
                      }
                  </DisplayTemplate>
              </DataGridColumn>
              <DataGridColumn TItem="CalendarEventDto"
                      Caption="@L["NumberOfParticipants"]">
                  <DisplayTemplate>
                      @(_participantCountCache.TryGetValue(context.Id, out var count) ? count : 0)
                  </DisplayTemplate>
              </DataGridColumn>
            </DataGridColumns>
        </DataGrid>
    </CardBody>
</Card>
}
