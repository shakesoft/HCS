@page "/user-departments"
@attribute [Authorize(HCPermissions.UserDepartments.Default)]
@using HC.UserDepartments
@using HC.UserDepartments
@using HC.Localization
@using HC.Shared
@using Microsoft.AspNetCore.Authorization
@using Microsoft.Extensions.Localization
@using Microsoft.AspNetCore.Components.Web
@using Blazorise
@using Blazorise.Components
@using Blazorise.DataGrid
@using Volo.Abp.BlazoriseUI
@using Volo.Abp.BlazoriseUI.Components
@using Volo.Abp.ObjectMapping
@using Volo.Abp.AspNetCore.Components.Messages
@using Volo.Abp.AspNetCore.Components.Web.Theming.Layout
@using HC.Permissions
@using Volo.Abp.AspNetCore.Components.Web
@using Volo.Abp.AspNetCore.Components
@using Microsoft.AspNetCore.Components
@using Volo.Abp.Http.Client
@inherits HCComponentBase
@inject IUserDepartmentsAppService UserDepartmentsAppService
@inject IUiMessageService UiMessageService
@inject AbpBlazorMessageLocalizerHelper<HCResource> LH
@inject IRemoteServiceConfigurationProvider RemoteServiceConfigurationProvider
@inject NavigationManager NavigationManager
@* ************************* PAGE HEADER ************************* *@
<PageHeader Title="@L["UserDepartments"]" BreadcrumbItems="BreadcrumbItems" Toolbar="Toolbar">
</PageHeader>
<style>
    tr.table-row-selectable:hover {
        cursor: default;
    }
</style>
@* ************************* SEARCH ************************* *@
<Card>
    <CardBody>
@*//<suite-custom-code-block-1>*@
@*//</suite-custom-code-block-1>*@
        <Row>
            <div class="col col-md-8 col-lg-10">
                <div class="mb-3">
                    <Form id="UserDepartmentSearchForm">
                        <Addons>
                            <Addon AddonType="AddonType.Body">
                                <TextEdit @bind-Text="@Filter.FilterText"
                                        Autofocus="true"
                                        Placeholder="@L["Search"]">
                                </TextEdit>
                            </Addon>
                            <Addon AddonType="AddonType.End">
                                <SubmitButton Form="UserDepartmentSearchForm" Clicked="GetUserDepartmentsAsync">
                                    <Icon Name="IconName.Search" Class="me-1"></Icon>@L["Search"]
                                </SubmitButton>
                            </Addon>
                        </Addons>
                    </Form>
                </div>
            </div>
                   <div class="col-md-4 col-lg-2">
            <div class="mb-3">
               <Button Color="Color.Primary" Outline Style="width:100%" id="AdvancedFilterSectionToggler"
                         Clicked="@(() => ShowAdvancedFilters = !ShowAdvancedFilters)">@L["Filters"]
                         <i aria-hidden="true" class="fa ms-1 @(!ShowAdvancedFilters ? "fa-angle-down" : "fa-angle-up")"></i>
               </Button>
            </div>
       </div>
        <div style="display: @(!ShowAdvancedFilters ? "none" : "block")"  class="mt-3">
            <Row>
                <Column ColumnSize="ColumnSize.Is3">
                    <Field>
                        <FieldLabel>@L["IsPrimary"]</FieldLabel>
                        <Select TValue="bool?"
		SelectedValue="@Filter.IsPrimary"
		SelectedValueChanged="@OnIsPrimaryChangedAsync">
<SelectItem></SelectItem>
<SelectItem Value="true">@L["Yes"]</SelectItem>
<SelectItem Value="false">@L["No"]</SelectItem>
</Select>                       
                    </Field>
                </Column>
                <Column ColumnSize="ColumnSize.Is3">
                    <Field>
                        <FieldLabel>@L["IsActive"]</FieldLabel>
                        <Select TValue="bool?"
		SelectedValue="@Filter.IsActive"
		SelectedValueChanged="@OnIsActiveChangedAsync">
<SelectItem></SelectItem>
<SelectItem Value="true">@L["Yes"]</SelectItem>
<SelectItem Value="false">@L["No"]</SelectItem>
</Select>                       
                    </Field>
                </Column>
                <Column ColumnSize="ColumnSize.Is3">
                    <Field>
                        <FieldLabel>@L["Department"]</FieldLabel>
                        <Select TValue="Guid?"
		SelectedValue="@Filter.DepartmentId"
		SelectedValueChanged="@OnDepartmentIdChangedAsync">
<SelectItem></SelectItem>
@foreach(var item in DepartmentsCollection)
{
	<SelectItem TValue="Guid" Value="@item.Id">
		@item.DisplayName
	</SelectItem>
}
</Select>                       
                    </Field>
                </Column>
                <Column ColumnSize="ColumnSize.Is3">
                    <Field>
                        <FieldLabel>@L["IdentityUser"]</FieldLabel>
                        <Select TValue="Guid?"
		SelectedValue="@Filter.UserId"
		SelectedValueChanged="@OnUserIdChangedAsync">
<SelectItem></SelectItem>
@foreach(var item in IdentityUsersCollection)
{
	<SelectItem TValue="Guid" Value="@item.Id">
		@item.DisplayName
	</SelectItem>
}
</Select>                       
                    </Field>
                </Column>
            </Row>
@*//<suite-custom-code-block-2>*@
@*//</suite-custom-code-block-2>*@
        </div>
        </Row>
@*//<suite-custom-code-block-3>*@
@*//</suite-custom-code-block-3>*@
    </CardBody>
</Card>
@* ************************* DATA GRID ************************* *@
<Card>
    <CardBody>        
        <Div  Visibility="@(SelectedUserDepartments.Any() ? Visibility.Visible : Visibility.Invisible)"
              class="d-flex justify-content-between align-items-center mb-2">
              <p class="lead mb-0">
                @if (AllUserDepartmentsSelected)
                {
                    @L["AllItemsAreSelected", TotalCount]
                }
                else
                {
                    @if (SelectedUserDepartments.Count > 1)
                    {
                        @L["NumberOfItemsOnThisPageAreSelected", SelectedUserDepartments.Count]
                    }
                    else
                    {
                        @L["OneItemOnThisPageIsSelected"]
                    }
                }
              </p>
            <div>
                @if ((SelectedUserDepartments.Count == PageSize || SelectedUserDepartments.Count == UserDepartmentList.Count) && TotalCount > SelectedUserDepartments.Count)
                {
                    if (!AllUserDepartmentsSelected)
                    {
                        <Button Clicked="SelectAllItems" Class="mx-1 btn-outline-secondary">@L["SelectAllItems", TotalCount]</Button>
                    }
                    else
                    {
                        <Button Clicked="ClearSelection" Class="mx-1 btn-outline-secondary">@L["ClearSelection"]</Button>
                    }
                }
                <Button Color="Color.Danger" Class="mx-1" Size="Size.Medium" Clicked="DeleteSelectedUserDepartmentsAsync">
                    <Icon Name="@IconName.Delete" /> @L["Delete"]
                </Button>
            </div>
        </Div>
        <hr Visibility="@(SelectedUserDepartments.Any() ? Visibility.Visible : Visibility.Invisible)"
            class="my-1 mx-0" />
        <DataGrid TItem="UserDepartmentWithNavigationPropertiesDto"
                  @ref="DataGridRef"
                  Data="UserDepartmentList"
                  SelectionMode="DataGridSelectionMode.Multiple"
                  SelectedRows="SelectedUserDepartments"
                  RowSelectable="RowSelectableHandler"
                  SelectedRowsChanged="SelectedUserDepartmentRowsChanged"
                  ReadData="OnDataGridReadAsync"
                  TotalItems="TotalCount"
                  ShowPager="true"
                  Responsive="true"
                  PageSize="PageSize"
                  Class="datagrid-detail">
            <LoadingTemplate>
                <Row Class="w-100 align-items-center" Style="height: 150px;">
                    <Column>
                       <RadarSpinner />
                    </Column>
                </Row>
            </LoadingTemplate>
            <EmptyTemplate>
                <Row Class="w-100 align-items-center" Style="height: 150px;">
                    <Column>
                        <Heading Size="HeadingSize.Is4" TextAlignment="TextAlignment.Center">@L["NoDataAvailable"]</Heading>
                    </Column>
                </Row>
            </EmptyTemplate>   
            <DataGridColumns>
                @if (CanDeleteUserDepartment && UserDepartmentList.Any())
                {
                    <DataGridMultiSelectColumn TItem="UserDepartmentWithNavigationPropertiesDto" DisplayOrder="-1" Width="30px"></DataGridMultiSelectColumn>
                }
                <DataGridEntityActionsColumn TItem="UserDepartmentWithNavigationPropertiesDto" @ref="@EntityActionsColumn">
                    <DisplayTemplate>
                        <EntityActions TItem="UserDepartmentWithNavigationPropertiesDto" EntityActionsColumn="@EntityActionsColumn">
                            <EntityAction TItem="UserDepartmentWithNavigationPropertiesDto"
                                          Visible="@CanEditUserDepartment"
                                          Clicked="async () => await OpenEditUserDepartmentModalAsync(context)"
                                          Text="@L["Edit"]"></EntityAction>
                            <EntityAction TItem="UserDepartmentWithNavigationPropertiesDto"
                                          Visible="@CanDeleteUserDepartment"
                                          Clicked="() => DeleteUserDepartmentAsync(context)"
                                          ConfirmationMessage="@(()=> L["DeleteConfirmationMessage"])"
                                          Text="@L["Delete"]"></EntityAction>
@*//<suite-custom-code-block-4>*@
@*//</suite-custom-code-block-4>*@
                        </EntityActions>
                    </DisplayTemplate>
                </DataGridEntityActionsColumn>
              <DataGridColumn TItem="UserDepartmentWithNavigationPropertiesDto"
                      Field="UserDepartment.IsPrimary"
                      Caption="@L["IsPrimary"]">
                    <DisplayTemplate>
                        @if (context.UserDepartment.IsPrimary)
                        {
                            <Icon TextColor="TextColor.Success" Name="@IconName.Check" />
                        }
                        else
                        {
                            <Icon TextColor="TextColor.Danger" Name="@IconName.Times" />
                        }
                    </DisplayTemplate>
              </DataGridColumn>
              <DataGridColumn TItem="UserDepartmentWithNavigationPropertiesDto"
                      Field="UserDepartment.IsActive"
                      Caption="@L["IsActive"]">
                    <DisplayTemplate>
                        @if (context.UserDepartment.IsActive)
                        {
                            <Icon TextColor="TextColor.Success" Name="@IconName.Check" />
                        }
                        else
                        {
                            <Icon TextColor="TextColor.Danger" Name="@IconName.Times" />
                        }
                    </DisplayTemplate>
              </DataGridColumn>
              <DataGridColumn TItem="UserDepartmentWithNavigationPropertiesDto"
                      Field="Department.Name"
                      Caption="@L["Department"]">
              </DataGridColumn>
              <DataGridColumn TItem="UserDepartmentWithNavigationPropertiesDto"
                      Field="User.Name"
                      Caption="@L["User"]">
              </DataGridColumn>
            </DataGridColumns>
        </DataGrid>
    </CardBody>
</Card>
@* ************************* CREATE MODAL ************************* *@
<Modal @ref="CreateUserDepartmentModal" Closing="@CreateUserDepartmentModal.CancelClosingModalWhenFocusLost">
    <ModalContent Centered="true">
@*//<suite-custom-code-block-5>*@
@*//</suite-custom-code-block-5>*@
        <Form id="CreateUserDepartmentForm">
            <ModalHeader>
                <ModalTitle>@L["NewUserDepartment"]</ModalTitle>
                <CloseButton Clicked="CloseCreateUserDepartmentModalAsync" />
            </ModalHeader>
            <ModalBody>
                <Validations @ref="@NewUserDepartmentValidations"
                            Mode="ValidationMode.Auto"
                            Model="@NewUserDepartment"
                            ValidateOnLoad="false">
                    <Field>
                        <Check TValue="bool" @bind-Checked="@NewUserDepartment.IsPrimary"  Autofocus="true">@L["IsPrimary"]</Check>
                    </Field>
                    <Field>
                        <Check TValue="bool" @bind-Checked="@NewUserDepartment.IsActive"  >@L["IsActive"]</Check>
                    </Field>
                    <Field>
                        <FieldLabel>@L["Department"] *</FieldLabel>
                        <Autocomplete Data="@DepartmentsCollection"
                                      TItem="LookupDto<Guid>"
                                      TValue="Guid"
                                      TextField="@((item) => item?.DisplayName)"
                                      ValueField="@((item) => item?.Id ?? default)"
                                      SearchChanged="@GetDepartmentCollectionLookupAsync"
                                      @bind-SelectedValue="@NewUserDepartment.DepartmentId"
                                      Placeholder="&#8212;" />
                    </Field>
                    <Field>
                        <FieldLabel>@L["IdentityUser"] *</FieldLabel>
                        <Autocomplete Data="@IdentityUsersCollection"
                                      TItem="LookupDto<Guid>"
                                      TValue="Guid"
                                      TextField="@((item) => item?.DisplayName)"
                                      ValueField="@((item) => item?.Id ?? default)"
                                      SearchChanged="@GetIdentityUserCollectionLookupAsync"
                                      @bind-SelectedValue="@NewUserDepartment.UserId"
                                      Placeholder="&#8212;" />
                    </Field>
                </Validations>
            </ModalBody>
            <ModalFooter>
                <Button Color="Color.Secondary"
                        Clicked="CloseCreateUserDepartmentModalAsync">
                    @L["Cancel"]
                </Button>
                <SubmitButton Form="CreateUserDepartmentForm" Clicked="CreateUserDepartmentAsync"/>
@*//<suite-custom-code-block-6>*@
@*//</suite-custom-code-block-6>*@
            </ModalFooter>
        </Form>
@*//<suite-custom-code-block-7>*@
@*//</suite-custom-code-block-7>*@
    </ModalContent>
</Modal>
@* ************************* EDIT MODAL ************************* *@
<Modal @ref="EditUserDepartmentModal" Closing="@EditUserDepartmentModal.CancelClosingModalWhenFocusLost">
    <ModalContent Centered="true">
@*//<suite-custom-code-block-8>*@
@*//</suite-custom-code-block-8>*@
        <Form id="EditUserDepartmentForm">
            <ModalHeader>
                <ModalTitle>@L["Update"]</ModalTitle>
                <CloseButton Clicked="CloseEditUserDepartmentModalAsync" />
            </ModalHeader>
            <ModalBody>
                <Validations @ref="@EditingUserDepartmentValidations"
                            Mode="ValidationMode.Auto"
                            Model="@EditingUserDepartment"
                            ValidateOnLoad="false">
                    <Field>
                        <Check TValue="bool" @bind-Checked="@EditingUserDepartment.IsPrimary"  Autofocus="true">@L["IsPrimary"]</Check>
                    </Field>
                    <Field>
                        <Check TValue="bool" @bind-Checked="@EditingUserDepartment.IsActive"  >@L["IsActive"]</Check>
                    </Field>
                    <Field>
                        <FieldLabel>@L["Department"] *</FieldLabel>
                        <Autocomplete Data="@DepartmentsCollection"
                                      TItem="LookupDto<Guid>"
                                      TValue="Guid"
                                      TextField="@((item) => item?.DisplayName)"
                                      ValueField="@((item) => item?.Id ?? default)"
                                      SearchChanged="@GetDepartmentCollectionLookupAsync"
                                      @bind-SelectedValue="@EditingUserDepartment.DepartmentId"
                                      Placeholder="&#8212;" />
                    </Field>
                    <Field>
                        <FieldLabel>@L["IdentityUser"] *</FieldLabel>
                        <Autocomplete Data="@IdentityUsersCollection"
                                      TItem="LookupDto<Guid>"
                                      TValue="Guid"
                                      TextField="@((item) => item?.DisplayName)"
                                      ValueField="@((item) => item?.Id ?? default)"
                                      SearchChanged="@GetIdentityUserCollectionLookupAsync"
                                      @bind-SelectedValue="@EditingUserDepartment.UserId"
                                      Placeholder="&#8212;" />
                    </Field>
                </Validations>
            </ModalBody>
            <ModalFooter>
                <Button Color="Color.Secondary"
                        Clicked="CloseEditUserDepartmentModalAsync">
                    @L["Cancel"]
                </Button>
                <SubmitButton Form="EditUserDepartmentForm" Clicked="UpdateUserDepartmentAsync" />
@*//<suite-custom-code-block-9>*@
@*//</suite-custom-code-block-9>*@
            </ModalFooter>
        </Form>
@*//<suite-custom-code-block-10>*@
@*//</suite-custom-code-block-10>*@
    </ModalContent>
</Modal>