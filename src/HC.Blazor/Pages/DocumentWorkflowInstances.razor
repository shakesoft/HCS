@* ************************* PAGE HEADER ************************* *@
<PageHeader Title="@L["DocumentWorkflowInstances"]" BreadcrumbItems="BreadcrumbItems" Toolbar="Toolbar">
</PageHeader>
<style>
    tr.table-row-selectable:hover {
        cursor: default;
    }
</style>
@* ************************* SEARCH ************************* *@
<Card>
    <CardBody>
@*//<suite-custom-code-block-1>*@
@*//</suite-custom-code-block-1>*@
        <Row>
            <div class="col col-md-8 col-lg-10">
                <div class="mb-3">
                    <Form id="DocumentWorkflowInstanceSearchForm">
                        <Addons>
                            <Addon AddonType="AddonType.Body">
                                <TextEdit @bind-Text="@Filter.FilterText"
                                        Autofocus="true"
                                        Placeholder="@L["Search"]">
                                </TextEdit>
                            </Addon>
                            <Addon AddonType="AddonType.End">
                                <SubmitButton Form="DocumentWorkflowInstanceSearchForm" Clicked="GetDocumentWorkflowInstancesAsync">
                                    <Icon Name="IconName.Search" Class="me-1"></Icon>@L["Search"]
                                </SubmitButton>
                            </Addon>
                        </Addons>
                    </Form>
                </div>
            </div>
                   <div class="col-md-4 col-lg-2">
            <div class="mb-3">
               <Button Color="Color.Primary" Outline Style="width:100%" id="AdvancedFilterSectionToggler"
                         Clicked="@(() => ShowAdvancedFilters = !ShowAdvancedFilters)">@L["Filters"]
                         <i aria-hidden="true" class="fa ms-1 @(!ShowAdvancedFilters ? "fa-angle-down" : "fa-angle-up")"></i>
               </Button>
            </div>
       </div>
        <div style="display: @(!ShowAdvancedFilters ? "none" : "block")"  class="mt-3">
            <Row>
                <Column ColumnSize="ColumnSize.Is3">
                    <Field>
                        <FieldLabel>@L["Status"]</FieldLabel>
                        <TextEdit Text="@Filter.Status" TextChanged="@OnStatusChangedAsync" />                       
                    </Field>
                </Column>
                <Column ColumnSize="ColumnSize.Is3">
                    <Field>
                        <FieldLabel>@L["MinStartedAt"]</FieldLabel>
                        <DatePicker TValue="DateTime?"
            InputMode="DateInputMode.Date"
            Date="@Filter.StartedAtMin"
            DateChanged="@OnStartedAtMinChangedAsync"
            Placeholder="@string.Empty" />                       
                    </Field>
                </Column>
                <Column ColumnSize="ColumnSize.Is3">
                    <Field>
                        <FieldLabel>@L["MaxStartedAt"]</FieldLabel>
                        <DatePicker TValue="DateTime?"
            InputMode="DateInputMode.Date"
            Date="@Filter.StartedAtMax"
            DateChanged="@OnStartedAtMaxChangedAsync"
            Placeholder="@string.Empty" />                       
                    </Field>
                </Column>
                <Column ColumnSize="ColumnSize.Is3">
                    <Field>
                        <FieldLabel>@L["MinFinishedAt"]</FieldLabel>
                        <DatePicker TValue="DateTime?"
            InputMode="DateInputMode.Date"
            Date="@Filter.FinishedAtMin"
            DateChanged="@OnFinishedAtMinChangedAsync"
            Placeholder="@string.Empty" />                       
                    </Field>
                </Column>
                <Column ColumnSize="ColumnSize.Is3">
                    <Field>
                        <FieldLabel>@L["MaxFinishedAt"]</FieldLabel>
                        <DatePicker TValue="DateTime?"
            InputMode="DateInputMode.Date"
            Date="@Filter.FinishedAtMax"
            DateChanged="@OnFinishedAtMaxChangedAsync"
            Placeholder="@string.Empty" />                       
                    </Field>
                </Column>
                <Column ColumnSize="ColumnSize.Is3">
                    <Field>
                        <FieldLabel>@L["Document"]</FieldLabel>
                        <Select TValue="Guid?"
		SelectedValue="@Filter.DocumentId"
		SelectedValueChanged="@OnDocumentIdChangedAsync">
<SelectItem></SelectItem>
@foreach(var item in DocumentsCollection)
{
	<SelectItem TValue="Guid" Value="@item.Id">
		@item.DisplayName
	</SelectItem>
}
</Select>                       
                    </Field>
                </Column>
                <Column ColumnSize="ColumnSize.Is3">
                    <Field>
                        <FieldLabel>@L["Workflow"]</FieldLabel>
                        <Select TValue="Guid?"
		SelectedValue="@Filter.WorkflowId"
		SelectedValueChanged="@OnWorkflowIdChangedAsync">
<SelectItem></SelectItem>
@foreach(var item in WorkflowsCollection)
{
	<SelectItem TValue="Guid" Value="@item.Id">
		@item.DisplayName
	</SelectItem>
}
</Select>                       
                    </Field>
                </Column>
                <Column ColumnSize="ColumnSize.Is3">
                    <Field>
                        <FieldLabel>@L["WorkflowTemplate"]</FieldLabel>
                        <Select TValue="Guid?"
		SelectedValue="@Filter.WorkflowTemplateId"
		SelectedValueChanged="@OnWorkflowTemplateIdChangedAsync">
<SelectItem></SelectItem>
@foreach(var item in WorkflowTemplatesCollection)
{
	<SelectItem TValue="Guid" Value="@item.Id">
		@item.DisplayName
	</SelectItem>
}
</Select>                       
                    </Field>
                </Column>
                <Column ColumnSize="ColumnSize.Is3">
                    <Field>
                        <FieldLabel>@L["WorkflowStepTemplate"]</FieldLabel>
                        <Select TValue="Guid?"
		SelectedValue="@Filter.CurrentStepId"
		SelectedValueChanged="@OnCurrentStepIdChangedAsync">
<SelectItem></SelectItem>
@foreach(var item in WorkflowStepTemplatesCollection)
{
	<SelectItem TValue="Guid" Value="@item.Id">
		@item.DisplayName
	</SelectItem>
}
</Select>                       
                    </Field>
                </Column>
            </Row>
@*//<suite-custom-code-block-2>*@
@*//</suite-custom-code-block-2>*@
        </div>
        </Row>
@*//<suite-custom-code-block-3>*@
@*//</suite-custom-code-block-3>*@
    </CardBody>
</Card>
@* ************************* DATA GRID ************************* *@
<Card>
    <CardBody>        
        <Div  Visibility="@(SelectedDocumentWorkflowInstances.Any() ? Visibility.Visible : Visibility.Invisible)"
              class="d-flex justify-content-between align-items-center mb-2">
              <p class="lead mb-0">
                @if (AllDocumentWorkflowInstancesSelected)
                {
                    @L["AllItemsAreSelected", TotalCount]
                }
                else
                {
                    @if (SelectedDocumentWorkflowInstances.Count > 1)
                    {
                        @L["NumberOfItemsOnThisPageAreSelected", SelectedDocumentWorkflowInstances.Count]
                    }
                    else
                    {
                        @L["OneItemOnThisPageIsSelected"]
                    }
                }
              </p>
            <div>
                @if ((SelectedDocumentWorkflowInstances.Count == PageSize || SelectedDocumentWorkflowInstances.Count == DocumentWorkflowInstanceList.Count) && TotalCount > SelectedDocumentWorkflowInstances.Count)
                {
                    if (!AllDocumentWorkflowInstancesSelected)
                    {
                        <Button Clicked="SelectAllItems" Class="mx-1 btn-outline-secondary">@L["SelectAllItems", TotalCount]</Button>
                    }
                    else
                    {
                        <Button Clicked="ClearSelection" Class="mx-1 btn-outline-secondary">@L["ClearSelection"]</Button>
                    }
                }
                <Button Color="Color.Danger" Class="mx-1" Size="Size.Medium" Clicked="DeleteSelectedDocumentWorkflowInstancesAsync">
                    <Icon Name="@IconName.Delete" /> @L["Delete"]
                </Button>
            </div>
        </Div>
        <hr Visibility="@(SelectedDocumentWorkflowInstances.Any() ? Visibility.Visible : Visibility.Invisible)"
            class="my-1 mx-0" />
        <DataGrid TItem="DocumentWorkflowInstanceWithNavigationPropertiesDto"
                  @ref="DataGridRef"
                  Data="DocumentWorkflowInstanceList"
                  SelectionMode="DataGridSelectionMode.Multiple"
                  SelectedRows="SelectedDocumentWorkflowInstances"
                  RowSelectable="RowSelectableHandler"
                  SelectedRowsChanged="SelectedDocumentWorkflowInstanceRowsChanged"
                  ReadData="OnDataGridReadAsync"
                  TotalItems="TotalCount"
                  ShowPager="true"
                  Responsive="true"
                  PageSize="PageSize"
                  Class="datagrid-detail">
            <LoadingTemplate>
                <Row Class="w-100 align-items-center" Style="height: 150px;">
                    <Column>
                       <RadarSpinner />
                    </Column>
                </Row>
            </LoadingTemplate>
            <EmptyTemplate>
                <Row Class="w-100 align-items-center" Style="height: 150px;">
                    <Column>
                        <Heading Size="HeadingSize.Is4" TextAlignment="TextAlignment.Center">@L["NoDataAvailable"]</Heading>
                    </Column>
                </Row>
            </EmptyTemplate>   
            <DataGridColumns>
                @if (CanDeleteDocumentWorkflowInstance && DocumentWorkflowInstanceList.Any())
                {
                    <DataGridMultiSelectColumn TItem="DocumentWorkflowInstanceWithNavigationPropertiesDto" DisplayOrder="-1" Width="30px"></DataGridMultiSelectColumn>
                }
                <DataGridEntityActionsColumn TItem="DocumentWorkflowInstanceWithNavigationPropertiesDto" @ref="@EntityActionsColumn">
                    <DisplayTemplate>
                        <EntityActions TItem="DocumentWorkflowInstanceWithNavigationPropertiesDto" EntityActionsColumn="@EntityActionsColumn">
                            <EntityAction TItem="DocumentWorkflowInstanceWithNavigationPropertiesDto"
                                          Visible="@CanEditDocumentWorkflowInstance"
                                          Clicked="async () => await OpenEditDocumentWorkflowInstanceModalAsync(context)"
                                          Text="@L["Edit"]"></EntityAction>
                            <EntityAction TItem="DocumentWorkflowInstanceWithNavigationPropertiesDto"
                                          Visible="@CanDeleteDocumentWorkflowInstance"
                                          Clicked="() => DeleteDocumentWorkflowInstanceAsync(context)"
                                          ConfirmationMessage="@(()=> L["DeleteConfirmationMessage"])"
                                          Text="@L["Delete"]"></EntityAction>
@*//<suite-custom-code-block-4>*@
@*//</suite-custom-code-block-4>*@
                        </EntityActions>
                    </DisplayTemplate>
                </DataGridEntityActionsColumn>
              <DataGridColumn TItem="DocumentWorkflowInstanceWithNavigationPropertiesDto"
                      Field="DocumentWorkflowInstance.Status"
                      Caption="@L["Status"]">
              </DataGridColumn>
              <DataGridColumn TItem="DocumentWorkflowInstanceWithNavigationPropertiesDto"
                      Field="DocumentWorkflowInstance.StartedAt"
                      Caption="@L["StartedAt"]">
                  <DisplayTemplate>
                        @context.DocumentWorkflowInstance.StartedAt.ToShortDateString()
                  </DisplayTemplate>
              </DataGridColumn>
              <DataGridColumn TItem="DocumentWorkflowInstanceWithNavigationPropertiesDto"
                      Field="DocumentWorkflowInstance.FinishedAt"
                      Caption="@L["FinishedAt"]">
                  <DisplayTemplate>
                        @context.DocumentWorkflowInstance.FinishedAt.ToShortDateString()
                  </DisplayTemplate>
              </DataGridColumn>
              <DataGridColumn TItem="DocumentWorkflowInstanceWithNavigationPropertiesDto"
                      Field="Document.Title"
                      Caption="@L["Document"]">
              </DataGridColumn>
              <DataGridColumn TItem="DocumentWorkflowInstanceWithNavigationPropertiesDto"
                      Field="Workflow.Name"
                      Caption="@L["Workflow"]">
              </DataGridColumn>
              <DataGridColumn TItem="DocumentWorkflowInstanceWithNavigationPropertiesDto"
                      Field="WorkflowTemplate.Name"
                      Caption="@L["WorkflowTemplate"]">
              </DataGridColumn>
              <DataGridColumn TItem="DocumentWorkflowInstanceWithNavigationPropertiesDto"
                      Field="CurrentStep.Name"
                      Caption="@L["CurrentStep"]">
              </DataGridColumn>
            </DataGridColumns>
        </DataGrid>
    </CardBody>
</Card>
@* ************************* CREATE MODAL ************************* *@
<Modal @ref="CreateDocumentWorkflowInstanceModal" Closing="@CreateDocumentWorkflowInstanceModal.CancelClosingModalWhenFocusLost">
    <ModalContent Centered="true">
@*//<suite-custom-code-block-5>*@
@*//</suite-custom-code-block-5>*@
        <Form id="CreateDocumentWorkflowInstanceForm">
            <ModalHeader>
                <ModalTitle>@L["NewDocumentWorkflowInstance"]</ModalTitle>
                <CloseButton Clicked="CloseCreateDocumentWorkflowInstanceModalAsync" />
            </ModalHeader>
            <ModalBody>
                <Validations @ref="@NewDocumentWorkflowInstanceValidations"
                            Mode="ValidationMode.Auto"
                            Model="@NewDocumentWorkflowInstance"
                            ValidateOnLoad="false">
                    <Validation MessageLocalizer="@LH.Localize">
                        <Field>
                            <FieldLabel>@L["Status"] *</FieldLabel>
                            <TextEdit @bind-Text="@NewDocumentWorkflowInstance.Status" MaxLength="DocumentWorkflowInstanceConsts.StatusMaxLength"  Autofocus="true">
                                <Feedback>
                                    <ValidationError />
                                </Feedback>
                            </TextEdit>
                        </Field>
                    </Validation>
                    <Validation MessageLocalizer="@LH.Localize">
                        <Field>
                            <FieldLabel>@L["StartedAt"]</FieldLabel>
                            <DateEdit TValue="DateTime" InputMode="DateInputMode.Date" @bind-Date="@NewDocumentWorkflowInstance.StartedAt"  >
                               <Feedback>
                                    <ValidationError />
                                </Feedback>
                            </DateEdit>
                        </Field>
                    </Validation>
                    <Validation MessageLocalizer="@LH.Localize">
                        <Field>
                            <FieldLabel>@L["FinishedAt"]</FieldLabel>
                            <DateEdit TValue="DateTime" InputMode="DateInputMode.Date" @bind-Date="@NewDocumentWorkflowInstance.FinishedAt"  >
                               <Feedback>
                                    <ValidationError />
                                </Feedback>
                            </DateEdit>
                        </Field>
                    </Validation>
                    <Field>
                        <FieldLabel>@L["Document"] *</FieldLabel>
                        <Autocomplete Data="@DocumentsCollection"
                                      TItem="LookupDto<Guid>"
                                      TValue="Guid"
                                      TextField="@((item) => item?.DisplayName)"
                                      ValueField="@((item) => item?.Id ?? default)"
                                      SearchChanged="@GetDocumentCollectionLookupAsync"
                                      @bind-SelectedValue="@NewDocumentWorkflowInstance.DocumentId"
                                      Placeholder="&#8212;" />
                    </Field>
                    <Field>
                        <FieldLabel>@L["Workflow"] *</FieldLabel>
                        <Autocomplete Data="@WorkflowsCollection"
                                      TItem="LookupDto<Guid>"
                                      TValue="Guid"
                                      TextField="@((item) => item?.DisplayName)"
                                      ValueField="@((item) => item?.Id ?? default)"
                                      SearchChanged="@GetWorkflowCollectionLookupAsync"
                                      @bind-SelectedValue="@NewDocumentWorkflowInstance.WorkflowId"
                                      Placeholder="&#8212;" />
                    </Field>
                    <Field>
                        <FieldLabel>@L["WorkflowTemplate"]</FieldLabel>
                        <Select TValue="Guid" @bind-SelectedValue="@NewDocumentWorkflowInstance.WorkflowTemplateId">
                            @foreach (var workflowTemplate in WorkflowTemplatesCollection)
                            {
                                <SelectItem TValue="Guid" Value="@(workflowTemplate.Id)">
                                    @(workflowTemplate.DisplayName)
                                </SelectItem>
                            }
                        </Select>
                    </Field>
                    <Field>
                        <FieldLabel>@L["WorkflowStepTemplate"] *</FieldLabel>
                        <Autocomplete Data="@WorkflowStepTemplatesCollection"
                                      TItem="LookupDto<Guid>"
                                      TValue="Guid"
                                      TextField="@((item) => item?.DisplayName)"
                                      ValueField="@((item) => item?.Id ?? default)"
                                      SearchChanged="@GetWorkflowStepTemplateCollectionLookupAsync"
                                      @bind-SelectedValue="@NewDocumentWorkflowInstance.CurrentStepId"
                                      Placeholder="&#8212;" />
                    </Field>
                </Validations>
            </ModalBody>
            <ModalFooter>
                <Button Color="Color.Secondary"
                        Clicked="CloseCreateDocumentWorkflowInstanceModalAsync">
                    @L["Cancel"]
                </Button>
                <SubmitButton Form="CreateDocumentWorkflowInstanceForm" Clicked="CreateDocumentWorkflowInstanceAsync"/>
@*//<suite-custom-code-block-6>*@
@*//</suite-custom-code-block-6>*@
            </ModalFooter>
        </Form>
@*//<suite-custom-code-block-7>*@
@*//</suite-custom-code-block-7>*@
    </ModalContent>
</Modal>
