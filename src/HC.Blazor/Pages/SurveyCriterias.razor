@* ************************* PAGE HEADER ************************* *@
<PageHeader Title="@L["SurveyCriterias"]" BreadcrumbItems="BreadcrumbItems" Toolbar="Toolbar">
</PageHeader>
<style>
    tr.table-row-selectable:hover {
        cursor: default;
    }
</style>
@* ************************* SEARCH ************************* *@
<Card>
    <CardBody>
@*//<suite-custom-code-block-1>*@
@*//</suite-custom-code-block-1>*@
        <Row>
            <div class="col col-md-8 col-lg-10">
                <div class="mb-3">
                    <Form id="SurveyCriteriaSearchForm">
                        <Addons>
                            <Addon AddonType="AddonType.Body">
                                <TextEdit @bind-Text="@Filter.FilterText"
                                        Autofocus="true"
                                        Placeholder="@L["Search"]">
                                </TextEdit>
                            </Addon>
                            <Addon AddonType="AddonType.End">
                                <SubmitButton Form="SurveyCriteriaSearchForm" Clicked="GetSurveyCriteriasAsync">
                                    <Icon Name="IconName.Search" Class="me-1"></Icon>@L["Search"]
                                </SubmitButton>
                            </Addon>
                        </Addons>
                    </Form>
                </div>
            </div>
                   <div class="col-md-4 col-lg-2">
            <div class="mb-3">
               <Button Color="Color.Primary" Outline Style="width:100%" id="AdvancedFilterSectionToggler"
                         Clicked="@(() => ShowAdvancedFilters = !ShowAdvancedFilters)">@L["Filters"]
                         <i aria-hidden="true" class="fa ms-1 @(!ShowAdvancedFilters ? "fa-angle-down" : "fa-angle-up")"></i>
               </Button>
            </div>
       </div>
        <div style="display: @(!ShowAdvancedFilters ? "none" : "block")"  class="mt-3">
            <Row>
                <Column ColumnSize="ColumnSize.Is3">
                    <Field>
                        <FieldLabel>@L["Code"]</FieldLabel>
                        <TextEdit Text="@Filter.Code" TextChanged="@OnCodeChangedAsync" />                       
                    </Field>
                </Column>
                <Column ColumnSize="ColumnSize.Is3">
                    <Field>
                        <FieldLabel>@L["Name"]</FieldLabel>
                        <TextEdit Text="@Filter.Name" TextChanged="@OnNameChangedAsync" />                       
                    </Field>
                </Column>
                <Column ColumnSize="ColumnSize.Is3">
                    <Field>
                        <FieldLabel>@L["Image"]</FieldLabel>
                        <TextEdit Text="@Filter.Image" TextChanged="@OnImageChangedAsync" />                       
                    </Field>
                </Column>
                <Column ColumnSize="ColumnSize.Is3">
                    <Field>
                        <FieldLabel>@L["MinDisplayOrder"]</FieldLabel>
                        <NumericEdit TValue="int?" 
             Value="@Filter.DisplayOrderMin"
             ValueChanged="@OnDisplayOrderMinChangedAsync" />                       
                    </Field>
                </Column>
                <Column ColumnSize="ColumnSize.Is3">
                    <Field>
                        <FieldLabel>@L["MaxDisplayOrder"]</FieldLabel>
                        <NumericEdit TValue="int?" 
             Value="@Filter.DisplayOrderMax"
             ValueChanged="@OnDisplayOrderMaxChangedAsync" />                       
                    </Field>
                </Column>
                <Column ColumnSize="ColumnSize.Is3">
                    <Field>
                        <FieldLabel>@L["IsActive"]</FieldLabel>
                        <Select TValue="bool?"
		SelectedValue="@Filter.IsActive"
		SelectedValueChanged="@OnIsActiveChangedAsync">
<SelectItem></SelectItem>
<SelectItem Value="true">@L["Yes"]</SelectItem>
<SelectItem Value="false">@L["No"]</SelectItem>
</Select>                       
                    </Field>
                </Column>
                <Column ColumnSize="ColumnSize.Is3">
                    <Field>
                        <FieldLabel>@L["SurveyLocation"]</FieldLabel>
                        <Select TValue="Guid?"
		SelectedValue="@Filter.SurveyLocationId"
		SelectedValueChanged="@OnSurveyLocationIdChangedAsync">
<SelectItem></SelectItem>
@foreach(var item in SurveyLocationsCollection)
{
	<SelectItem TValue="Guid" Value="@item.Id">
		@item.DisplayName
	</SelectItem>
}
</Select>                       
                    </Field>
                </Column>
            </Row>
@*//<suite-custom-code-block-2>*@
@*//</suite-custom-code-block-2>*@
        </div>
        </Row>
@*//<suite-custom-code-block-3>*@
@*//</suite-custom-code-block-3>*@
    </CardBody>
</Card>
@* ************************* DATA GRID ************************* *@
<Card>
    <CardBody>        
        <Div  Visibility="@(SelectedSurveyCriterias.Any() ? Visibility.Visible : Visibility.Invisible)"
              class="d-flex justify-content-between align-items-center mb-2">
              <p class="lead mb-0">
                @if (AllSurveyCriteriasSelected)
                {
                    @L["AllItemsAreSelected", TotalCount]
                }
                else
                {
                    @if (SelectedSurveyCriterias.Count > 1)
                    {
                        @L["NumberOfItemsOnThisPageAreSelected", SelectedSurveyCriterias.Count]
                    }
                    else
                    {
                        @L["OneItemOnThisPageIsSelected"]
                    }
                }
              </p>
            <div>
                @if ((SelectedSurveyCriterias.Count == PageSize || SelectedSurveyCriterias.Count == SurveyCriteriaList.Count) && TotalCount > SelectedSurveyCriterias.Count)
                {
                    if (!AllSurveyCriteriasSelected)
                    {
                        <Button Clicked="SelectAllItems" Class="mx-1 btn-outline-secondary">@L["SelectAllItems", TotalCount]</Button>
                    }
                    else
                    {
                        <Button Clicked="ClearSelection" Class="mx-1 btn-outline-secondary">@L["ClearSelection"]</Button>
                    }
                }
                <Button Color="Color.Danger" Class="mx-1" Size="Size.Medium" Clicked="DeleteSelectedSurveyCriteriasAsync">
                    <Icon Name="@IconName.Delete" /> @L["Delete"]
                </Button>
            </div>
        </Div>
        <hr Visibility="@(SelectedSurveyCriterias.Any() ? Visibility.Visible : Visibility.Invisible)"
            class="my-1 mx-0" />
        <DataGrid TItem="SurveyCriteriaWithNavigationPropertiesDto"
                  @ref="DataGridRef"
                  Data="SurveyCriteriaList"
                  SelectionMode="DataGridSelectionMode.Multiple"
                  SelectedRows="SelectedSurveyCriterias"
                  RowSelectable="RowSelectableHandler"
                  SelectedRowsChanged="SelectedSurveyCriteriaRowsChanged"
                  ReadData="OnDataGridReadAsync"
                  TotalItems="TotalCount"
                  ShowPager="true"
                  Responsive="true"
                  PageSize="PageSize"
                  Class="datagrid-detail">
            <LoadingTemplate>
                <Row Class="w-100 align-items-center" Style="height: 150px;">
                    <Column>
                       <RadarSpinner />
                    </Column>
                </Row>
            </LoadingTemplate>
            <EmptyTemplate>
                <Row Class="w-100 align-items-center" Style="height: 150px;">
                    <Column>
                        <Heading Size="HeadingSize.Is4" TextAlignment="TextAlignment.Center">@L["NoDataAvailable"]</Heading>
                    </Column>
                </Row>
            </EmptyTemplate>   
            <DataGridColumns>
                @if (CanDeleteSurveyCriteria && SurveyCriteriaList.Any())
                {
                    <DataGridMultiSelectColumn TItem="SurveyCriteriaWithNavigationPropertiesDto" DisplayOrder="-1" Width="30px"></DataGridMultiSelectColumn>
                }
              <DataGridColumn TItem="SurveyCriteriaWithNavigationPropertiesDto"
                      Field="SurveyCriteria.Code"
                      Caption="@L["Code"]">
              </DataGridColumn>
              <DataGridColumn TItem="SurveyCriteriaWithNavigationPropertiesDto"
                      Field="SurveyCriteria.Name"
                      Caption="@L["Name"]">
              </DataGridColumn>
              <DataGridColumn TItem="SurveyCriteriaWithNavigationPropertiesDto"
                      Field="SurveyCriteria.Image"
                      Caption="@L["Image"]">
                  <DisplayTemplate>
                      @if (!string.IsNullOrEmpty(context.SurveyCriteria.Image))
                      {
                          var imageUrl = GetImageUrl(context.SurveyCriteria.Image);
                          <img src="@imageUrl" 
                               alt="@context.SurveyCriteria.Name" 
                               style="max-width: 100px; max-height: 100px; object-fit: contain; border-radius: 4px;" />
                      }
                      else
                      {
                          <span class="text-muted">@L["NoImage"]</span>
                      }
                  </DisplayTemplate>
              </DataGridColumn>
               <DataGridColumn TItem="SurveyCriteriaWithNavigationPropertiesDto"
                      Field="SurveyLocation.Name"
                      Caption="@L["SurveyLocation"]">
              </DataGridColumn>
              <DataGridColumn TItem="SurveyCriteriaWithNavigationPropertiesDto"
                      Field="SurveyCriteria.DisplayOrder"
                      Caption="@L["DisplayOrder"]">
              </DataGridColumn>
              <DataGridColumn TItem="SurveyCriteriaWithNavigationPropertiesDto"
                      Field="SurveyCriteria.IsActive"
                      Caption="@L["IsActive"]"
                      TextAlignment="TextAlignment.Center">
                    <DisplayTemplate>
                        @if (context.SurveyCriteria.IsActive)
                        {
                            <Icon TextColor="TextColor.Success" Name="@IconName.Check" />
                        }
                        else
                        {
                            <Icon TextColor="TextColor.Danger" Name="@IconName.Times" />
                        }
                    </DisplayTemplate>
              </DataGridColumn>
             
                <DataGridColumn TItem="SurveyCriteriaWithNavigationPropertiesDto" Caption="@L["Actions"]">
                    <DisplayTemplate>
                        <div class="hc-action-icons">
                            @if (CanEditSurveyCriteria)
                            {
                                <i class="bi bi-pencil-fill hc-action-icon hc-action-edit" 
                                   title="@L["Edit"]"
                                   @onclick="@(() => OpenEditSurveyCriteriaModalAsync(context))"
                                   style="cursor: pointer;"></i>
                            }
                            @if (CanDeleteSurveyCriteria)
                            {
                                <i class="bi bi-trash-fill hc-action-icon hc-action-delete" 
                                   title="@L["Delete"]"
                                   @onclick="@(() => DeleteSurveyCriteriaWithConfirmationAsync(context))"
                                   style="cursor: pointer;"></i>
                            }
                        </div>
@*//<suite-custom-code-block-4>*@
@*//</suite-custom-code-block-4>*@
                    </DisplayTemplate>
                </DataGridColumn>
            </DataGridColumns>
        </DataGrid>
    </CardBody>
</Card>
@* ************************* CREATE MODAL ************************* *@
<Modal @ref="CreateSurveyCriteriaModal" Closing="@CreateSurveyCriteriaModal.CancelClosingModalWhenFocusLost">
    <ModalContent Centered="true">
@*//<suite-custom-code-block-5>*@
@*//</suite-custom-code-block-5>*@
        <Form id="CreateSurveyCriteriaForm">
            <ModalHeader>
                <ModalTitle>@L["NewSurveyCriteria"]</ModalTitle>
                <CloseButton Clicked="CloseCreateSurveyCriteriaModalAsync" />
            </ModalHeader>
            <ModalBody>
                <Validations @ref="@NewSurveyCriteriaValidations"
                            Mode="ValidationMode.Auto"
                            Model="@NewSurveyCriteria"
                            ValidateOnLoad="false">
                    <Validation MessageLocalizer="@LH.Localize">
                        <Field>
                            <FieldLabel>@L["Code"] *</FieldLabel>
                            <TextEdit @bind-Text="@NewSurveyCriteria.Code"   Autofocus="true">
                                <Feedback>
                                    <ValidationError />
                                </Feedback>
                            </TextEdit>
                        </Field>
                    </Validation>
                    <Validation MessageLocalizer="@LH.Localize">
                        <Field>
                            <FieldLabel>@L["Name"] *</FieldLabel>
                            <TextEdit @bind-Text="@NewSurveyCriteria.Name"   >
                                <Feedback>
                                    <ValidationError />
                                </Feedback>
                            </TextEdit>
                        </Field>
                    </Validation>
                    <Field>
                        <FieldLabel>@L["Image"] *</FieldLabel>
                        <FilePicker @ref="CreateImageFilePicker"
                                    Multiple="false"
                                    Changed="OnCreateImageFileChanged"
                                    ShowMode="FilePickerShowMode.List"
                                    MaxFileSize="52428800"
                                    Accept="image/*">
                            <ButtonsTemplate>
                                @* <Progress Value="@ImageFilePickerProgress" /> *@
                                <Buttons>
                                    <Button Clicked="@context.Clear" Color="Color.Warning">
                                        <Icon Name="IconName.Clear" /> @L["Clear"]
                                    </Button>
                                </Buttons>
                            </ButtonsTemplate>
                        </FilePicker>
                        @if (!string.IsNullOrEmpty(UploadedImagePath))
                        {
                            <div class="text-success mt-2">
                                <Icon Name="IconName.Check" /> @L["FileUploaded"]: @SelectedImageFile?.Name
                            </div>
                        }
                    </Field>
                    <Field>
                        <FieldLabel>@L["SurveyLocation"]</FieldLabel>
                        <Select TValue="Guid" @bind-SelectedValue="@NewSurveyCriteria.SurveyLocationId">
                            @foreach (var surveyLocation in SurveyLocationsCollection)
                            {
                                <SelectItem TValue="Guid" Value="@(surveyLocation.Id)">
                                    @(surveyLocation.DisplayName)
                                </SelectItem>
                            }
                        </Select>
                    </Field>
                    <Validation MessageLocalizer="@LH.Localize">
                        <Field>
                            <FieldLabel>@L["DisplayOrder"]</FieldLabel>
                            <NumericPicker TValue="int" @bind-Value="@NewSurveyCriteria.DisplayOrder"  Decimals="0"  >
                                <Feedback>
                                    <ValidationError />
                                </Feedback>
                             </NumericPicker>
                        </Field>
                     </Validation>
                    <Field>
                        <Check TValue="bool" @bind-Checked="@NewSurveyCriteria.IsActive"  >@L["IsActive"]</Check>
                    </Field>
                </Validations>
            </ModalBody>
            <ModalFooter>
                <Button Color="Color.Secondary"
                        Clicked="CloseCreateSurveyCriteriaModalAsync">
                    @L["Cancel"]
                </Button>
                <SubmitButton Form="CreateSurveyCriteriaForm" Clicked="CreateSurveyCriteriaAsync"/>
@*//<suite-custom-code-block-6>*@
@*//</suite-custom-code-block-6>*@
            </ModalFooter>
        </Form>
@*//<suite-custom-code-block-7>*@
@*//</suite-custom-code-block-7>*@
    </ModalContent>
</Modal>
@* ************************* EDIT MODAL ************************* *@
<Modal @ref="EditSurveyCriteriaModal" Closing="@EditSurveyCriteriaModal.CancelClosingModalWhenFocusLost">
    <ModalContent Centered="true">
@*//<suite-custom-code-block-8>*@
@*//</suite-custom-code-block-8>*@
        <Form id="EditSurveyCriteriaForm">
            <ModalHeader>
                <ModalTitle>@L["Update"]</ModalTitle>
                <CloseButton Clicked="CloseEditSurveyCriteriaModalAsync" />
            </ModalHeader>
            <ModalBody>
                <Validations @ref="@EditingSurveyCriteriaValidations"
                            Mode="ValidationMode.Auto"
                            Model="@EditingSurveyCriteria"
                            ValidateOnLoad="false">
                    <Validation MessageLocalizer="@LH.Localize">
                        <Field>
                            <FieldLabel>@L["Code"] *</FieldLabel>
                            <TextEdit @bind-Text="@EditingSurveyCriteria.Code"   Autofocus="true">
                                <Feedback>
                                    <ValidationError />
                                </Feedback>
                            </TextEdit>
                        </Field>
                    </Validation>
                    <Validation MessageLocalizer="@LH.Localize">
                        <Field>
                            <FieldLabel>@L["Name"] *</FieldLabel>
                            <TextEdit @bind-Text="@EditingSurveyCriteria.Name"   >
                                <Feedback>
                                    <ValidationError />
                                </Feedback>
                            </TextEdit>
                        </Field>
                    </Validation>
                    <Field>
                        <FieldLabel>@L["Image"] *</FieldLabel>
                        <FilePicker @ref="EditImageFilePicker"
                                    Multiple="false"
                                    Changed="OnEditImageFileChanged"
                                    ShowMode="FilePickerShowMode.List"
                                    MaxFileSize="52428800"
                                    Accept="image/*">
                            <ButtonsTemplate>
                                @* <Progress Value="@ImageFilePickerProgress" /> *@
                                <Buttons>
                                    <Button Clicked="@context.Clear" Color="Color.Warning">
                                        <Icon Name="IconName.Clear" /> @L["Clear"]
                                    </Button>
                                </Buttons>
                            </ButtonsTemplate>
                        </FilePicker>
                        @if (!string.IsNullOrEmpty(EditingSurveyCriteria.Image) && string.IsNullOrEmpty(UploadedImagePath))
                        {
                            <div class="text-muted mt-2">
                                <Icon Name="IconName.Image" /> @L["CurrentImage"]: @EditingSurveyCriteria.Image
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(UploadedImagePath))
                        {
                            <div class="text-success mt-2">
                                <Icon Name="IconName.Check" /> @L["NewFileUploaded"]: @SelectedImageFile?.Name
                            </div>
                        }
                    </Field>
                    <Field>
                        <FieldLabel>@L["SurveyLocation"]</FieldLabel>
                        <Select TValue="Guid" @bind-SelectedValue="@EditingSurveyCriteria.SurveyLocationId">
                            @foreach (var surveyLocation in SurveyLocationsCollection)
                            {
                                <SelectItem TValue="Guid" Value="@(surveyLocation.Id)">
                                    @(surveyLocation.DisplayName)
                                </SelectItem>
                            }
                        </Select>
                    </Field>
                    <Validation MessageLocalizer="@LH.Localize">
                        <Field>
                            <FieldLabel>@L["DisplayOrder"]</FieldLabel>
                            <NumericPicker TValue="int" @bind-Value="@EditingSurveyCriteria.DisplayOrder"  Decimals="0"  >
                                <Feedback>
                                    <ValidationError />
                                </Feedback>
                             </NumericPicker>
                        </Field>
                     </Validation>
                    <Field>
                        <Check TValue="bool" @bind-Checked="@EditingSurveyCriteria.IsActive"  >@L["IsActive"]</Check>
                    </Field>
                </Validations>
            </ModalBody>
            <ModalFooter>
                <Button Color="Color.Secondary"
                        Clicked="CloseEditSurveyCriteriaModalAsync">
                    @L["Cancel"]
                </Button>
                <SubmitButton Form="EditSurveyCriteriaForm" Clicked="UpdateSurveyCriteriaAsync" />
@*//<suite-custom-code-block-9>*@
@*//</suite-custom-code-block-9>*@
            </ModalFooter>
        </Form>
@*//<suite-custom-code-block-10>*@
@*//</suite-custom-code-block-10>*@
    </ModalContent>
</Modal>

