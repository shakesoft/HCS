                        <Field>
                            <FieldLabel>@L["ProviderType"] *</FieldLabel>
                            <Select TValue="ProviderType?" 
                                    SelectedValue="@EditingProviderType"
                                    SelectedValueChanged="@((ProviderType? value) => { EditingProviderType = value; EditFieldErrors.Remove("ProviderType"); })"
                                    Style="@(HasEditFieldError("ProviderType") ? "border-color: #dc3545;" : "")">
                                <ChildContent>
                                    <SelectItem TValue="ProviderType?" Value="@((ProviderType?)null)">@L[""]</SelectItem>
                                    @foreach (var item in Enum.GetValues<ProviderType>())
                                    {
                                        <SelectItem TValue="ProviderType?" Value="@item">
                                            @L[$"Enum:ProviderType.{item}"]
                                        </SelectItem>
                                    }
                                </ChildContent>
                            </Select>
                            @if (HasEditFieldError("ProviderType"))
                            {
                                <div class="invalid-feedback d-block">@GetEditFieldError("ProviderType")</div>
                            }
