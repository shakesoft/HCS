                        <Field>
                            <FieldLabel>@L["ApiTimeout"]</FieldLabel>
                            <NumericPicker TValue="int" @bind-Value="@EditingSignatureSetting.ApiTimeout" Decimals="0" />
                        </Field>
                    </Column>
                    <Column ColumnSize="ColumnSize.Is6">
                        @* Cụm 2: DefaultSignType, SignWidth, SignHeight, SignedFileSuffix *@
                        <Field>
                            <FieldLabel>@L["DefaultSignType"] *</FieldLabel>
                            <Select TValue="SignType?" 
                                    SelectedValue="@EditingDefaultSignType"
                                    SelectedValueChanged="@((SignType? value) => { EditingDefaultSignType = value; EditFieldErrors.Remove("DefaultSignType"); })"
                                    Style="@(HasEditFieldError("DefaultSignType") ? "border-color: #dc3545;" : "")">
                                <ChildContent>
                                    <SelectItem TValue="SignType?" Value="@((SignType?)null)">@L[""]</SelectItem>
                                    @foreach (var item in Enum.GetValues<SignType>())
                                    {
                                        <SelectItem TValue="SignType?" Value="@item">
                                            @L[$"Enum:SignType.{item}"]
                                        </SelectItem>
                                    }
                                </ChildContent>
                            </Select>
                            @if (HasEditFieldError("DefaultSignType"))
                            {
                                <div class="invalid-feedback d-block">@GetEditFieldError("DefaultSignType")</div>
                            }
                        </Field>
                        <Field>
                            <FieldLabel>@L["SignWidth"]</FieldLabel>
                            <NumericPicker TValue="int" @bind-Value="@EditingSignatureSetting.SignWidth" Decimals="0" />
                        </Field>
                        <Field>
                            <FieldLabel>@L["SignHeight"]</FieldLabel>
                            <NumericPicker TValue="int" @bind-Value="@EditingSignatureSetting.SignHeight" Decimals="0" />
                        </Field>
                        <Field>
                            <FieldLabel>@L["SignedFileSuffix"] *</FieldLabel>
                            <TextEdit Text="@EditingSignatureSetting.SignedFileSuffix" 
                                      TextChanged="@((string value) => { EditingSignatureSetting.SignedFileSuffix = value; EditFieldErrors.Remove("SignedFileSuffix"); })"
                                      Style="@(HasEditFieldError("SignedFileSuffix") ? "border-color: #dc3545;" : "")" />
                            @if (HasEditFieldError("SignedFileSuffix"))
                            {
                                <div class="invalid-feedback d-block">@GetEditFieldError("SignedFileSuffix")</div>
                            }
                        </Field>
                    </Column>
                </Row>
                @* Cụm 3: Checkboxes - nhóm lại gần nhau hơn *@
                <Row>
                    <Column ColumnSize="ColumnSize.Is6">
                        <Field>
                            <Check TValue="bool" @bind-Checked="@EditingSignatureSetting.AllowElectronicSign">@L["AllowElectronicSign"]</Check>
                        </Field>
                        <Field>
                            <Check TValue="bool" @bind-Checked="@EditingSignatureSetting.AllowDigitalSign">@L["AllowDigitalSign"]</Check>
                        </Field>
                        <Field>
                            <Check TValue="bool" @bind-Checked="@EditingSignatureSetting.RequireOtp">@L["RequireOtp"]</Check>
                        </Field>
                        <Field>
                            <Check TValue="bool" @bind-Checked="@EditingSignatureSetting.KeepOriginalFile">@L["KeepOriginalFile"]</Check>
                        </Field>
                    </Column>
                    <Column ColumnSize="ColumnSize.Is6">
                        <Field>
                            <Check TValue="bool" @bind-Checked="@EditingSignatureSetting.OverwriteSignedFile">@L["OverwriteSignedFile"]</Check>
                        </Field>
                        <Field>
                            <Check TValue="bool" @bind-Checked="@EditingSignatureSetting.EnableSignLog">@L["EnableSignLog"]</Check>
                        </Field>
                        <Field>
                            <Check TValue="bool" @bind-Checked="@EditingSignatureSetting.IsActive">@L["IsActive"]</Check>
                        </Field>
                    </Column>
                </Row>
            </ModalBody>
            <ModalFooter>
                <Button Color="Color.Secondary"
                        Clicked="CloseEditSignatureSettingModalAsync">
                    @L["Cancel"]
                </Button>
                <SubmitButton Form="EditSignatureSettingForm" Clicked="UpdateSignatureSettingAsync" />
