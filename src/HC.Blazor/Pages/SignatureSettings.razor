                                SelectedValue="@FilterDefaultSignType"
                                SelectedValueChanged="@OnFilterDefaultSignTypeChangedAsync">
                            <ChildContent>
                                <SelectItem TValue="SignType?" Value="@((SignType?)null)">@L[""]</SelectItem>
                                @foreach (var item in Enum.GetValues<SignType>())
                                {
                                    <SelectItem TValue="SignType?" Value="@item">
                                        @L[$"Enum:SignType.{item}"]
                                    </SelectItem>
                                }
                            </ChildContent>
                        </Select>
                    </Field>
                </Column>
                <Column ColumnSize="ColumnSize.Is3">
                    <Field>
                        <FieldLabel>@L["AllowElectronicSign"]</FieldLabel>
