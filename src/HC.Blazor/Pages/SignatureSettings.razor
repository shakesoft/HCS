@* ************************* DATA GRID ************************* *@
<Card>
    <CardBody>        
        <Div  Visibility="@(SelectedSignatureSettings.Any() ? Visibility.Visible : Visibility.Invisible)"
              class="d-flex justify-content-between align-items-center mb-2">
              <p class="lead mb-0">
                @if (AllSignatureSettingsSelected)
                {
                    @L["AllItemsAreSelected", TotalCount]
                }
                else
                {
                    @if (SelectedSignatureSettings.Count > 1)
                    {
                        @L["NumberOfItemsOnThisPageAreSelected", SelectedSignatureSettings.Count]
                    }
                    else
                    {
                        @L["OneItemOnThisPageIsSelected"]
                    }
                }
              </p>
            <div>
                @if ((SelectedSignatureSettings.Count == PageSize || SelectedSignatureSettings.Count == SignatureSettingList.Count) && TotalCount > SelectedSignatureSettings.Count)
                {
                    if (!AllSignatureSettingsSelected)
                    {
                        <Button Clicked="SelectAllItems" Class="mx-1 btn-outline-secondary">@L["SelectAllItems", TotalCount]</Button>
                    }
                    else
                    {
                        <Button Clicked="ClearSelection" Class="mx-1 btn-outline-secondary">@L["ClearSelection"]</Button>
                    }
                }
                <Button Color="Color.Danger" Class="mx-1" Size="Size.Medium" Clicked="DeleteSelectedSignatureSettingsAsync">
                    <Icon Name="@IconName.Delete" /> @L["Delete"]
                </Button>
            </div>
        </Div>
        <hr Visibility="@(SelectedSignatureSettings.Any() ? Visibility.Visible : Visibility.Invisible)"
            class="my-1 mx-0" />
        <DataGrid TItem="SignatureSettingDto"
                  @ref="DataGridRef"
                  Data="SignatureSettingList"
                  SelectionMode="DataGridSelectionMode.Multiple"
                  SelectedRows="SelectedSignatureSettings"
                  RowSelectable="RowSelectableHandler"
                  SelectedRowsChanged="SelectedSignatureSettingRowsChanged"
                  ReadData="OnDataGridReadAsync"
                  TotalItems="TotalCount"
                  ShowPager="true"
                  Responsive="true"
                  PageSize="PageSize"
                  Class="datagrid-detail">
            <LoadingTemplate>
                <Row Class="w-100 align-items-center" Style="height: 150px;">
                    <Column>
                       <RadarSpinner />
                    </Column>
                </Row>
            </LoadingTemplate>
            <EmptyTemplate>
                <Row Class="w-100 align-items-center" Style="height: 150px;">
                    <Column>
                        <Heading Size="HeadingSize.Is4" TextAlignment="TextAlignment.Center">@L["NoDataAvailable"]</Heading>
                    </Column>
                </Row>
            </EmptyTemplate>   
            <DataGridColumns>
                @if (CanDeleteSignatureSetting && SignatureSettingList.Any())
                {
                    <DataGridMultiSelectColumn TItem="SignatureSettingDto" DisplayOrder="-1" Width="30px"></DataGridMultiSelectColumn>
                }
              <DataGridColumn TItem="SignatureSettingDto"
                      Field="ProviderCode"
                      Caption="@L["ProviderCode"]">
              </DataGridColumn>
              <DataGridColumn TItem="SignatureSettingDto"
                      Field="ProviderType"
                      Caption="@L["ProviderType"]">
              </DataGridColumn>
              <DataGridColumn TItem="SignatureSettingDto"
                      Field="ApiEndpoint"
                      Caption="@L["ApiEndpoint"]">
              </DataGridColumn>
              <DataGridColumn TItem="SignatureSettingDto"
                      Field="ApiTimeout"
                      Caption="@L["ApiTimeout"]">
              </DataGridColumn>
              <DataGridColumn TItem="SignatureSettingDto"
                      Field="DefaultSignType"
                      Caption="@L["DefaultSignType"]">
              </DataGridColumn>
              <DataGridColumn TItem="SignatureSettingDto"
                      Field="AllowElectronicSign"
                      Caption="@L["AllowElectronicSign"]">
                    <DisplayTemplate>
                        @if (context.AllowElectronicSign)
                        {
                            <Icon TextColor="TextColor.Success" Name="@IconName.Check" />
                        }
                        else
                        {
                            <Icon TextColor="TextColor.Danger" Name="@IconName.Times" />
                        }
                    </DisplayTemplate>
              </DataGridColumn>
              <DataGridColumn TItem="SignatureSettingDto"
                      Field="AllowDigitalSign"
                      Caption="@L["AllowDigitalSign"]">
                    <DisplayTemplate>
                        @if (context.AllowDigitalSign)
                        {
                            <Icon TextColor="TextColor.Success" Name="@IconName.Check" />
                        }
                        else
                        {
                            <Icon TextColor="TextColor.Danger" Name="@IconName.Times" />
                        }
                    </DisplayTemplate>
              </DataGridColumn>
              <DataGridColumn TItem="SignatureSettingDto"
                      Field="RequireOtp"
                      Caption="@L["RequireOtp"]">
                    <DisplayTemplate>
                        @if (context.RequireOtp)
                        {
                            <Icon TextColor="TextColor.Success" Name="@IconName.Check" />
                        }
                        else
                        {
                            <Icon TextColor="TextColor.Danger" Name="@IconName.Times" />
                        }
                    </DisplayTemplate>
              </DataGridColumn>
              <DataGridColumn TItem="SignatureSettingDto"
                      Field="SignWidth"
                      Caption="@L["SignWidth"]">
              </DataGridColumn>
              <DataGridColumn TItem="SignatureSettingDto"
                      Field="SignHeight"
                      Caption="@L["SignHeight"]">
              </DataGridColumn>
              <DataGridColumn TItem="SignatureSettingDto"
                      Field="SignedFileSuffix"
                      Caption="@L["SignedFileSuffix"]">
              </DataGridColumn>
              <DataGridColumn TItem="SignatureSettingDto"
                      Field="KeepOriginalFile"
                      Caption="@L["KeepOriginalFile"]">
                    <DisplayTemplate>
                        @if (context.KeepOriginalFile)
                        {
                            <Icon TextColor="TextColor.Success" Name="@IconName.Check" />
                        }
                        else
                        {
                            <Icon TextColor="TextColor.Danger" Name="@IconName.Times" />
                        }
                    </DisplayTemplate>
              </DataGridColumn>
              <DataGridColumn TItem="SignatureSettingDto"
                      Field="OverwriteSignedFile"
                      Caption="@L["OverwriteSignedFile"]">
                    <DisplayTemplate>
                        @if (context.OverwriteSignedFile)
                        {
                            <Icon TextColor="TextColor.Success" Name="@IconName.Check" />
                        }
                        else
                        {
                            <Icon TextColor="TextColor.Danger" Name="@IconName.Times" />
                        }
                    </DisplayTemplate>
              </DataGridColumn>
              <DataGridColumn TItem="SignatureSettingDto"
                      Field="EnableSignLog"
                      Caption="@L["EnableSignLog"]">
                    <DisplayTemplate>
                        @if (context.EnableSignLog)
                        {
                            <Icon TextColor="TextColor.Success" Name="@IconName.Check" />
                        }
                        else
                        {
                            <Icon TextColor="TextColor.Danger" Name="@IconName.Times" />
                        }
                    </DisplayTemplate>
              </DataGridColumn>
              <DataGridColumn TItem="SignatureSettingDto"
                      Field="IsActive"
                      Caption="@L["IsActive"]">
                    <DisplayTemplate>
                        @if (context.IsActive)
                        {
                            <Icon TextColor="TextColor.Success" Name="@IconName.Check" />
                        }
                        else
                        {
                            <Icon TextColor="TextColor.Danger" Name="@IconName.Times" />
                        }
                    </DisplayTemplate>
              </DataGridColumn>
                <DataGridColumn TItem="SignatureSettingDto" Caption="@L["Actions"]">
                    <DisplayTemplate>
                        <div class="hc-action-icons">
                            @if (CanEditSignatureSetting)
                            {
                                <i class="bi bi-pencil-fill hc-action-icon hc-action-edit" 
                                   title="@L["Edit"]"
                                   @onclick="@(() => OpenEditSignatureSettingModalAsync(context))"
                                   style="cursor: pointer;"></i>
                            }
                            @if (CanDeleteSignatureSetting)
                            {
                                <i class="bi bi-trash-fill hc-action-icon hc-action-delete" 
                                   title="@L["Delete"]"
                                   @onclick="@(() => DeleteSignatureSettingWithConfirmationAsync(context))"
                                   style="cursor: pointer;"></i>
                            }
                        </div>
@*//<suite-custom-code-block-4>*@
@*//</suite-custom-code-block-4>*@
                    </DisplayTemplate>
                </DataGridColumn>
            </DataGridColumns>
        </DataGrid>
    </CardBody>
</Card>
@* ************************* CREATE MODAL ************************* *@
<Modal @ref="CreateSignatureSettingModal" Closing="@CreateSignatureSettingModal.CancelClosingModalWhenFocusLost">
    <ModalContent Centered="true" Size="ModalSize.Large">
@*//<suite-custom-code-block-5>*@
@*//</suite-custom-code-block-5>*@
        <Form id="CreateSignatureSettingForm">
            <ModalHeader>
                <ModalTitle>@L["NewSignatureSetting"]</ModalTitle>
                <CloseButton Clicked="CloseCreateSignatureSettingModalAsync" />
            </ModalHeader>
            <ModalBody>
                <Row>
                    <Column ColumnSize="ColumnSize.Is6">
                        @* Cụm 1: ProviderCode, ProviderType, ApiEndpoint, ApiTimeout *@
                        <Field>
                            <FieldLabel>@L["ProviderCode"] *</FieldLabel>
                            <TextEdit Text="@NewSignatureSetting.ProviderCode" 
                                      TextChanged="@((string value) => { NewSignatureSetting.ProviderCode = value; CreateFieldErrors.Remove("ProviderCode"); })"
                                      Autofocus="true"
                                      Style="@(HasCreateFieldError("ProviderCode") ? "border-color: #dc3545;" : "")" />
                            @if (HasCreateFieldError("ProviderCode"))
                            {
                                <div class="invalid-feedback d-block">@GetCreateFieldError("ProviderCode")</div>
                            }
                        </Field>
                        <Field>
                            <FieldLabel>@L["ProviderType"] *</FieldLabel>
                            <Select TValue="ProviderType?" 
                                    SelectedValue="@NewProviderType"
                                    SelectedValueChanged="@((ProviderType? value) => { NewProviderType = value; CreateFieldErrors.Remove("ProviderType"); })"
                                    Style="@(HasCreateFieldError("ProviderType") ? "border-color: #dc3545;" : "")">
                                <ChildContent>
                                    <SelectItem TValue="ProviderType?" Value="@((ProviderType?)null)">@L[""]</SelectItem>
                                    @foreach (var item in Enum.GetValues<ProviderType>())
                                    {
                                        <SelectItem TValue="ProviderType?" Value="@item">
                                            @L[$"Enum:ProviderType.{item}"]
                                        </SelectItem>
                                    }
                                </ChildContent>
                            </Select>
                            @if (HasCreateFieldError("ProviderType"))
                            {
                                <div class="invalid-feedback d-block">@GetCreateFieldError("ProviderType")</div>
                            }
                        </Field>
                        <Field>
                            <FieldLabel>@L["ApiEndpoint"] *</FieldLabel>
                            <TextEdit Text="@NewSignatureSetting.ApiEndpoint" 
                                      TextChanged="@((string value) => { NewSignatureSetting.ApiEndpoint = value; CreateFieldErrors.Remove("ApiEndpoint"); })"
                                      Style="@(HasCreateFieldError("ApiEndpoint") ? "border-color: #dc3545;" : "")" />
                            @if (HasCreateFieldError("ApiEndpoint"))
                            {
                                <div class="invalid-feedback d-block">@GetCreateFieldError("ApiEndpoint")</div>
                            }
                        </Field>
                        <Field>
                            <FieldLabel>@L["ApiTimeout"]</FieldLabel>
                            <NumericPicker TValue="int" @bind-Value="@NewSignatureSetting.ApiTimeout" Decimals="0" />
                        </Field>
                    </Column>
                    <Column ColumnSize="ColumnSize.Is6">
                        @* Cụm 2: DefaultSignType, SignWidth, SignHeight, SignedFileSuffix *@
                        <Field>
                            <FieldLabel>@L["DefaultSignType"] *</FieldLabel>
                            <Select TValue="SignType?" 
                                    SelectedValue="@NewDefaultSignType"
                                    SelectedValueChanged="@((SignType? value) => { NewDefaultSignType = value; CreateFieldErrors.Remove("DefaultSignType"); })"
                                    Style="@(HasCreateFieldError("DefaultSignType") ? "border-color: #dc3545;" : "")">
                                <ChildContent>
                                    <SelectItem TValue="SignType?" Value="@((SignType?)null)">@L[""]</SelectItem>
                                    @foreach (var item in Enum.GetValues<SignType>())
                                    {
                                        <SelectItem TValue="SignType?" Value="@item">
                                            @L[$"Enum:SignType.{item}"]
                                        </SelectItem>
                                    }
                                </ChildContent>
                            </Select>
                            @if (HasCreateFieldError("DefaultSignType"))
                            {
                                <div class="invalid-feedback d-block">@GetCreateFieldError("DefaultSignType")</div>
                            }
                        </Field>
                        <Field>
                            <FieldLabel>@L["SignWidth"]</FieldLabel>
                            <NumericPicker TValue="int" @bind-Value="@NewSignatureSetting.SignWidth" Decimals="0" />
                        </Field>
                        <Field>
                            <FieldLabel>@L["SignHeight"]</FieldLabel>
                            <NumericPicker TValue="int" @bind-Value="@NewSignatureSetting.SignHeight" Decimals="0" />
                        </Field>
                        <Field>
                            <FieldLabel>@L["SignedFileSuffix"] *</FieldLabel>
                            <TextEdit Text="@NewSignatureSetting.SignedFileSuffix" 
                                      TextChanged="@((string value) => { NewSignatureSetting.SignedFileSuffix = value; CreateFieldErrors.Remove("SignedFileSuffix"); })"
                                      Style="@(HasCreateFieldError("SignedFileSuffix") ? "border-color: #dc3545;" : "")" />
                            @if (HasCreateFieldError("SignedFileSuffix"))
                            {
                                <div class="invalid-feedback d-block">@GetCreateFieldError("SignedFileSuffix")</div>
                            }
                        </Field>
                    </Column>
                </Row>
                @* Cụm 3: Checkboxes - nhóm lại gần nhau hơn *@
                <Row>
                    <Column ColumnSize="ColumnSize.Is6">
                        <Field>
                            <Check TValue="bool" @bind-Checked="@NewSignatureSetting.AllowElectronicSign">@L["AllowElectronicSign"]</Check>
                        </Field>
                        <Field>
                            <Check TValue="bool" @bind-Checked="@NewSignatureSetting.AllowDigitalSign">@L["AllowDigitalSign"]</Check>
                        </Field>
                        <Field>
                            <Check TValue="bool" @bind-Checked="@NewSignatureSetting.RequireOtp">@L["RequireOtp"]</Check>
                        </Field>
                        <Field>
                            <Check TValue="bool" @bind-Checked="@NewSignatureSetting.KeepOriginalFile">@L["KeepOriginalFile"]</Check>
                        </Field>
                    </Column>
                    <Column ColumnSize="ColumnSize.Is6">
                        <Field>
                            <Check TValue="bool" @bind-Checked="@NewSignatureSetting.OverwriteSignedFile">@L["OverwriteSignedFile"]</Check>
                        </Field>
                        <Field>
                            <Check TValue="bool" @bind-Checked="@NewSignatureSetting.EnableSignLog">@L["EnableSignLog"]</Check>
                        </Field>
                        <Field>
                            <Check TValue="bool" @bind-Checked="@NewSignatureSetting.IsActive">@L["IsActive"]</Check>
                        </Field>
                    </Column>
                </Row>
            </ModalBody>
            <ModalFooter>
                <Button Color="Color.Secondary"
                        Clicked="CloseCreateSignatureSettingModalAsync">
                    @L["Cancel"]
                </Button>
                <SubmitButton Form="CreateSignatureSettingForm" Clicked="CreateSignatureSettingAsync"/>
@*//<suite-custom-code-block-6>*@
@*//</suite-custom-code-block-6>*@
            </ModalFooter>
        </Form>
@*//<suite-custom-code-block-7>*@
@*//</suite-custom-code-block-7>*@
    </ModalContent>
</Modal>
@* ************************* EDIT MODAL ************************* *@
<Modal @ref="EditSignatureSettingModal" Closing="@EditSignatureSettingModal.CancelClosingModalWhenFocusLost">
    <ModalContent Centered="true" Size="ModalSize.Large">
@*//<suite-custom-code-block-8>*@
@*//</suite-custom-code-block-8>*@
        <Form id="EditSignatureSettingForm">
            <ModalHeader>
                <ModalTitle>@L["Update"]</ModalTitle>
                <CloseButton Clicked="CloseEditSignatureSettingModalAsync" />
            </ModalHeader>
            <ModalBody>
                @* Manual validation is used (see ValidateEditSignatureSetting). *@
                @if (!string.IsNullOrWhiteSpace(EditSignatureSettingValidationErrorKey))
                {
                    <Alert Color="Color.Danger">
                        <AlertMessage>@L["NotificationError"]!</AlertMessage>
                        <AlertDescription>@L[EditSignatureSettingValidationErrorKey]</AlertDescription>
                    </Alert>
                }
                <Row>
                    <Column ColumnSize="ColumnSize.Is6">
                        @* Cụm 1: ProviderCode, ProviderType, ApiEndpoint, ApiTimeout *@
                        <Field>
                            <FieldLabel>@L["ProviderCode"] *</FieldLabel>
                            <TextEdit Text="@EditingSignatureSetting.ProviderCode" 
                                      TextChanged="@((string value) => { EditingSignatureSetting.ProviderCode = value; EditFieldErrors.Remove("ProviderCode"); })"
                                      Autofocus="true"
                                      Style="@(HasEditFieldError("ProviderCode") ? "border-color: #dc3545;" : "")" />
                            @if (HasEditFieldError("ProviderCode"))
                            {
                                <div class="invalid-feedback d-block">@GetEditFieldError("ProviderCode")</div>
                            }
