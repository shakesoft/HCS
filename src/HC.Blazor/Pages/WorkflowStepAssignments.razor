                    <Field>
                        <Check TValue="bool" @bind-Checked="@EditingWorkflowStepAssignment.IsActive"  >@L["IsActive"]</Check>
                    </Field>
                    <Field>
                        <FieldLabel>@L["WorkflowStepTemplate"]</FieldLabel>
                        <Select TValue="Guid?" @bind-SelectedValue="@EditingWorkflowStepAssignment.StepId">
