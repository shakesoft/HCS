@page "/project-task-assignments"
@attribute [Authorize(HCPermissions.ProjectTaskAssignments.Default)]
@using HC.ProjectTaskAssignments
@using HC.ProjectTaskAssignments
@using HC.Localization
@using HC.Shared
@using Microsoft.AspNetCore.Authorization
@using Microsoft.Extensions.Localization
@using Microsoft.AspNetCore.Components.Web
@using Blazorise
@using Blazorise.Components
@using Blazorise.DataGrid
@using Volo.Abp.BlazoriseUI
@using Volo.Abp.BlazoriseUI.Components
@using Volo.Abp.ObjectMapping
@using Volo.Abp.AspNetCore.Components.Messages
@using Volo.Abp.AspNetCore.Components.Web.Theming.Layout
@using HC.Permissions
@using Volo.Abp.AspNetCore.Components.Web
@using Volo.Abp.AspNetCore.Components
@using Microsoft.AspNetCore.Components
@using Volo.Abp.Http.Client
@inherits HCComponentBase
@inject IProjectTaskAssignmentsAppService ProjectTaskAssignmentsAppService
@inject IUiMessageService UiMessageService
@inject AbpBlazorMessageLocalizerHelper<HCResource> LH
@inject IRemoteServiceConfigurationProvider RemoteServiceConfigurationProvider
@inject NavigationManager NavigationManager
@* ************************* PAGE HEADER ************************* *@
<PageHeader Title="@L["ProjectTaskAssignments"]" BreadcrumbItems="BreadcrumbItems" Toolbar="Toolbar">
</PageHeader>
<style>
    tr.table-row-selectable:hover {
        cursor: default;
    }
</style>
@* ************************* SEARCH ************************* *@
<Card>
    <CardBody>
@*//<suite-custom-code-block-1>*@
@*//</suite-custom-code-block-1>*@
        <Row>
            <div class="col col-md-8 col-lg-10">
                <div class="mb-3">
                    <Form id="ProjectTaskAssignmentSearchForm">
                        <Addons>
                            <Addon AddonType="AddonType.Body">
                                <TextEdit @bind-Text="@Filter.FilterText"
                                        Autofocus="true"
                                        Placeholder="@L["Search"]">
                                </TextEdit>
                            </Addon>
                            <Addon AddonType="AddonType.End">
                                <SubmitButton Form="ProjectTaskAssignmentSearchForm" Clicked="GetProjectTaskAssignmentsAsync">
                                    <Icon Name="IconName.Search" Class="me-1"></Icon>@L["Search"]
                                </SubmitButton>
                            </Addon>
                        </Addons>
                    </Form>
                </div>
            </div>
                   <div class="col-md-4 col-lg-2">
            <div class="mb-3">
               <Button Color="Color.Primary" Outline Style="width:100%" id="AdvancedFilterSectionToggler"
                         Clicked="@(() => ShowAdvancedFilters = !ShowAdvancedFilters)">@L["Filters"]
                         <i aria-hidden="true" class="fa ms-1 @(!ShowAdvancedFilters ? "fa-angle-down" : "fa-angle-up")"></i>
               </Button>
            </div>
       </div>
        <div style="display: @(!ShowAdvancedFilters ? "none" : "block")"  class="mt-3">
            <Row>
                <Column ColumnSize="ColumnSize.Is3">
                    <Field>
                        <FieldLabel>@L["AssignmentRole"]</FieldLabel>
                        <TextEdit Text="@Filter.AssignmentRole" TextChanged="@OnAssignmentRoleChangedAsync" />                       
                    </Field>
                </Column>
                <Column ColumnSize="ColumnSize.Is3">
                    <Field>
                        <FieldLabel>@L["MinAssignedAt"]</FieldLabel>
                        <DatePicker TValue="DateTime?"
            InputMode="DateInputMode.Date"
            Date="@Filter.AssignedAtMin"
            DateChanged="@OnAssignedAtMinChangedAsync"
            Placeholder="@string.Empty" />                       
                    </Field>
                </Column>
                <Column ColumnSize="ColumnSize.Is3">
                    <Field>
                        <FieldLabel>@L["MaxAssignedAt"]</FieldLabel>
                        <DatePicker TValue="DateTime?"
            InputMode="DateInputMode.Date"
            Date="@Filter.AssignedAtMax"
            DateChanged="@OnAssignedAtMaxChangedAsync"
            Placeholder="@string.Empty" />                       
                    </Field>
                </Column>
                <Column ColumnSize="ColumnSize.Is3">
                    <Field>
                        <FieldLabel>@L["Note"]</FieldLabel>
                        <TextEdit Text="@Filter.Note" TextChanged="@OnNoteChangedAsync" />                       
                    </Field>
                </Column>
                <Column ColumnSize="ColumnSize.Is3">
                    <Field>
                        <FieldLabel>@L["ProjectTask"]</FieldLabel>
                        <Select TValue="Guid?"
		SelectedValue="@Filter.ProjectTaskId"
		SelectedValueChanged="@OnProjectTaskIdChangedAsync">
<SelectItem></SelectItem>
@foreach(var item in ProjectTasksCollection)
{
	<SelectItem TValue="Guid" Value="@item.Id">
		@item.DisplayName
	</SelectItem>
}
</Select>                       
                    </Field>
                </Column>
                <Column ColumnSize="ColumnSize.Is3">
                    <Field>
                        <FieldLabel>@L["IdentityUser"]</FieldLabel>
                        <Select TValue="Guid?"
		SelectedValue="@Filter.UserId"
		SelectedValueChanged="@OnUserIdChangedAsync">
<SelectItem></SelectItem>
@foreach(var item in IdentityUsersCollection)
{
	<SelectItem TValue="Guid" Value="@item.Id">
		@item.DisplayName
	</SelectItem>
}
</Select>                       
                    </Field>
                </Column>
            </Row>
@*//<suite-custom-code-block-2>*@
@*//</suite-custom-code-block-2>*@
        </div>
        </Row>
@*//<suite-custom-code-block-3>*@
@*//</suite-custom-code-block-3>*@
    </CardBody>
</Card>
@* ************************* DATA GRID ************************* *@
<Card>
    <CardBody>        
        <Div  Visibility="@(SelectedProjectTaskAssignments.Any() ? Visibility.Visible : Visibility.Invisible)"
              class="d-flex justify-content-between align-items-center mb-2">
              <p class="lead mb-0">
                @if (AllProjectTaskAssignmentsSelected)
                {
                    @L["AllItemsAreSelected", TotalCount]
                }
                else
                {
                    @if (SelectedProjectTaskAssignments.Count > 1)
                    {
                        @L["NumberOfItemsOnThisPageAreSelected", SelectedProjectTaskAssignments.Count]
                    }
                    else
                    {
                        @L["OneItemOnThisPageIsSelected"]
                    }
                }
              </p>
            <div>
                @if ((SelectedProjectTaskAssignments.Count == PageSize || SelectedProjectTaskAssignments.Count == ProjectTaskAssignmentList.Count) && TotalCount > SelectedProjectTaskAssignments.Count)
                {
                    if (!AllProjectTaskAssignmentsSelected)
                    {
                        <Button Clicked="SelectAllItems" Class="mx-1 btn-outline-secondary">@L["SelectAllItems", TotalCount]</Button>
                    }
                    else
                    {
                        <Button Clicked="ClearSelection" Class="mx-1 btn-outline-secondary">@L["ClearSelection"]</Button>
                    }
                }
                <Button Color="Color.Danger" Class="mx-1" Size="Size.Medium" Clicked="DeleteSelectedProjectTaskAssignmentsAsync">
                    <Icon Name="@IconName.Delete" /> @L["Delete"]
                </Button>
            </div>
        </Div>
        <hr Visibility="@(SelectedProjectTaskAssignments.Any() ? Visibility.Visible : Visibility.Invisible)"
            class="my-1 mx-0" />
        <DataGrid TItem="ProjectTaskAssignmentWithNavigationPropertiesDto"
                  @ref="DataGridRef"
                  Data="ProjectTaskAssignmentList"
                  SelectionMode="DataGridSelectionMode.Multiple"
                  SelectedRows="SelectedProjectTaskAssignments"
                  RowSelectable="RowSelectableHandler"
                  SelectedRowsChanged="SelectedProjectTaskAssignmentRowsChanged"
                  ReadData="OnDataGridReadAsync"
                  TotalItems="TotalCount"
                  ShowPager="true"
                  Responsive="true"
                  PageSize="PageSize"
                  Class="datagrid-detail">
            <LoadingTemplate>
                <Row Class="w-100 align-items-center" Style="height: 150px;">
                    <Column>
                       <RadarSpinner />
                    </Column>
                </Row>
            </LoadingTemplate>
            <EmptyTemplate>
                <Row Class="w-100 align-items-center" Style="height: 150px;">
                    <Column>
                        <Heading Size="HeadingSize.Is4" TextAlignment="TextAlignment.Center">@L["NoDataAvailable"]</Heading>
                    </Column>
                </Row>
            </EmptyTemplate>   
            <DataGridColumns>
                @if (CanDeleteProjectTaskAssignment && ProjectTaskAssignmentList.Any())
                {
                    <DataGridMultiSelectColumn TItem="ProjectTaskAssignmentWithNavigationPropertiesDto" DisplayOrder="-1" Width="30px"></DataGridMultiSelectColumn>
                }
                <DataGridEntityActionsColumn TItem="ProjectTaskAssignmentWithNavigationPropertiesDto" @ref="@EntityActionsColumn">
                    <DisplayTemplate>
                        <EntityActions TItem="ProjectTaskAssignmentWithNavigationPropertiesDto" EntityActionsColumn="@EntityActionsColumn">
                            <EntityAction TItem="ProjectTaskAssignmentWithNavigationPropertiesDto"
                                          Visible="@CanEditProjectTaskAssignment"
                                          Clicked="async () => await OpenEditProjectTaskAssignmentModalAsync(context)"
                                          Text="@L["Edit"]"></EntityAction>
                            <EntityAction TItem="ProjectTaskAssignmentWithNavigationPropertiesDto"
                                          Visible="@CanDeleteProjectTaskAssignment"
                                          Clicked="() => DeleteProjectTaskAssignmentAsync(context)"
                                          ConfirmationMessage="@(()=> L["DeleteConfirmationMessage"])"
                                          Text="@L["Delete"]"></EntityAction>
@*//<suite-custom-code-block-4>*@
@*//</suite-custom-code-block-4>*@
                        </EntityActions>
                    </DisplayTemplate>
                </DataGridEntityActionsColumn>
              <DataGridColumn TItem="ProjectTaskAssignmentWithNavigationPropertiesDto"
                      Field="ProjectTaskAssignment.AssignmentRole"
                      Caption="@L["AssignmentRole"]">
              </DataGridColumn>
              <DataGridColumn TItem="ProjectTaskAssignmentWithNavigationPropertiesDto"
                      Field="ProjectTaskAssignment.AssignedAt"
                      Caption="@L["AssignedAt"]">
                  <DisplayTemplate>
                        @context.ProjectTaskAssignment.AssignedAt.ToShortDateString()
                  </DisplayTemplate>
              </DataGridColumn>
              <DataGridColumn TItem="ProjectTaskAssignmentWithNavigationPropertiesDto"
                      Field="ProjectTaskAssignment.Note"
                      Caption="@L["Note"]">
              </DataGridColumn>
              <DataGridColumn TItem="ProjectTaskAssignmentWithNavigationPropertiesDto"
                      Field="ProjectTask.Title"
                      Caption="@L["ProjectTask"]">
              </DataGridColumn>
              <DataGridColumn TItem="ProjectTaskAssignmentWithNavigationPropertiesDto"
                      Field="User.Name"
                      Caption="@L["User"]">
              </DataGridColumn>
            </DataGridColumns>
        </DataGrid>
    </CardBody>
</Card>
@* ************************* CREATE MODAL ************************* *@
<Modal @ref="CreateProjectTaskAssignmentModal" Closing="@CreateProjectTaskAssignmentModal.CancelClosingModalWhenFocusLost">
    <ModalContent Centered="true">
@*//<suite-custom-code-block-5>*@
@*//</suite-custom-code-block-5>*@
        <Form id="CreateProjectTaskAssignmentForm">
            <ModalHeader>
                <ModalTitle>@L["NewProjectTaskAssignment"]</ModalTitle>
                <CloseButton Clicked="CloseCreateProjectTaskAssignmentModalAsync" />
            </ModalHeader>
            <ModalBody>
                <Validations @ref="@NewProjectTaskAssignmentValidations"
                            Mode="ValidationMode.Auto"
                            Model="@NewProjectTaskAssignment"
                            ValidateOnLoad="false">
                    <Validation MessageLocalizer="@LH.Localize">
                        <Field>
                            <FieldLabel>@L["AssignmentRole"] *</FieldLabel>
                            <TextEdit @bind-Text="@NewProjectTaskAssignment.AssignmentRole" MaxLength="ProjectTaskAssignmentConsts.AssignmentRoleMaxLength"  Autofocus="true">
                                <Feedback>
                                    <ValidationError />
                                </Feedback>
                            </TextEdit>
                        </Field>
                    </Validation>
                    <Validation MessageLocalizer="@LH.Localize">
                        <Field>
                            <FieldLabel>@L["AssignedAt"]</FieldLabel>
                            <DateEdit TValue="DateTime" InputMode="DateInputMode.Date" @bind-Date="@NewProjectTaskAssignment.AssignedAt"  >
                               <Feedback>
                                    <ValidationError />
                                </Feedback>
                            </DateEdit>
                        </Field>
                    </Validation>
                    <Validation MessageLocalizer="@LH.Localize">
                        <Field>
                            <FieldLabel>@L["Note"]</FieldLabel>
                            <MemoEdit @bind-Text="@NewProjectTaskAssignment.Note"   >
                                <Feedback>
                                    <ValidationError />
                                </Feedback>
                            </MemoEdit>
                        </Field>
                    </Validation>
                    <Field>
                        <FieldLabel>@L["ProjectTask"] *</FieldLabel>
                        <Autocomplete Data="@ProjectTasksCollection"
                                      TItem="LookupDto<Guid>"
                                      TValue="Guid"
                                      TextField="@((item) => item?.DisplayName)"
                                      ValueField="@((item) => item?.Id ?? default)"
                                      SearchChanged="@GetProjectTaskCollectionLookupAsync"
                                      @bind-SelectedValue="@NewProjectTaskAssignment.ProjectTaskId"
                                      Placeholder="&#8212;" />
                    </Field>
                    <Field>
                        <FieldLabel>@L["IdentityUser"] *</FieldLabel>
                        <Autocomplete Data="@IdentityUsersCollection"
                                      TItem="LookupDto<Guid>"
                                      TValue="Guid"
                                      TextField="@((item) => item?.DisplayName)"
                                      ValueField="@((item) => item?.Id ?? default)"
                                      SearchChanged="@GetIdentityUserCollectionLookupAsync"
                                      @bind-SelectedValue="@NewProjectTaskAssignment.UserId"
                                      Placeholder="&#8212;" />
                    </Field>
                </Validations>
            </ModalBody>
            <ModalFooter>
                <Button Color="Color.Secondary"
                        Clicked="CloseCreateProjectTaskAssignmentModalAsync">
                    @L["Cancel"]
                </Button>
                <SubmitButton Form="CreateProjectTaskAssignmentForm" Clicked="CreateProjectTaskAssignmentAsync"/>
@*//<suite-custom-code-block-6>*@
@*//</suite-custom-code-block-6>*@
            </ModalFooter>
        </Form>
@*//<suite-custom-code-block-7>*@
@*//</suite-custom-code-block-7>*@
    </ModalContent>
</Modal>
@* ************************* EDIT MODAL ************************* *@
<Modal @ref="EditProjectTaskAssignmentModal" Closing="@EditProjectTaskAssignmentModal.CancelClosingModalWhenFocusLost">
    <ModalContent Centered="true">
@*//<suite-custom-code-block-8>*@
@*//</suite-custom-code-block-8>*@
        <Form id="EditProjectTaskAssignmentForm">
            <ModalHeader>
                <ModalTitle>@L["Update"]</ModalTitle>
                <CloseButton Clicked="CloseEditProjectTaskAssignmentModalAsync" />
            </ModalHeader>
            <ModalBody>
                <Validations @ref="@EditingProjectTaskAssignmentValidations"
                            Mode="ValidationMode.Auto"
                            Model="@EditingProjectTaskAssignment"
                            ValidateOnLoad="false">
                    <Validation MessageLocalizer="@LH.Localize">
                        <Field>
                            <FieldLabel>@L["AssignmentRole"] *</FieldLabel>
                            <TextEdit @bind-Text="@EditingProjectTaskAssignment.AssignmentRole" MaxLength="ProjectTaskAssignmentConsts.AssignmentRoleMaxLength"  Autofocus="true">
                                <Feedback>
                                    <ValidationError />
                                </Feedback>
                            </TextEdit>
                        </Field>
                    </Validation>
                    <Validation MessageLocalizer="@LH.Localize">
                        <Field>
                            <FieldLabel>@L["AssignedAt"]</FieldLabel>
                            <DateEdit TValue="DateTime" InputMode="DateInputMode.Date" @bind-Date="@EditingProjectTaskAssignment.AssignedAt"  >
                               <Feedback>
                                    <ValidationError />
                                </Feedback>
                            </DateEdit>
                        </Field>
                    </Validation>
                    <Validation MessageLocalizer="@LH.Localize">
                        <Field>
                            <FieldLabel>@L["Note"]</FieldLabel>
                            <MemoEdit @bind-Text="@EditingProjectTaskAssignment.Note"   >
                                <Feedback>
                                    <ValidationError />
                                </Feedback>
                            </MemoEdit>
                        </Field>
                    </Validation>
                    <Field>
                        <FieldLabel>@L["ProjectTask"] *</FieldLabel>
                        <Autocomplete Data="@ProjectTasksCollection"
                                      TItem="LookupDto<Guid>"
                                      TValue="Guid"
                                      TextField="@((item) => item?.DisplayName)"
                                      ValueField="@((item) => item?.Id ?? default)"
                                      SearchChanged="@GetProjectTaskCollectionLookupAsync"
                                      @bind-SelectedValue="@EditingProjectTaskAssignment.ProjectTaskId"
                                      Placeholder="&#8212;" />
                    </Field>
                    <Field>
                        <FieldLabel>@L["IdentityUser"] *</FieldLabel>
                        <Autocomplete Data="@IdentityUsersCollection"
                                      TItem="LookupDto<Guid>"
                                      TValue="Guid"
                                      TextField="@((item) => item?.DisplayName)"
                                      ValueField="@((item) => item?.Id ?? default)"
                                      SearchChanged="@GetIdentityUserCollectionLookupAsync"
                                      @bind-SelectedValue="@EditingProjectTaskAssignment.UserId"
                                      Placeholder="&#8212;" />
                    </Field>
                </Validations>
            </ModalBody>
            <ModalFooter>
                <Button Color="Color.Secondary"
                        Clicked="CloseEditProjectTaskAssignmentModalAsync">
                    @L["Cancel"]
                </Button>
                <SubmitButton Form="EditProjectTaskAssignmentForm" Clicked="UpdateProjectTaskAssignmentAsync" />
@*//<suite-custom-code-block-9>*@
@*//</suite-custom-code-block-9>*@
            </ModalFooter>
        </Form>
@*//<suite-custom-code-block-10>*@
@*//</suite-custom-code-block-10>*@
    </ModalContent>
</Modal>