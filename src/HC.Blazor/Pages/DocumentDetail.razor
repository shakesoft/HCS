</PageHeader>

@if (IsLoading)
{
    <Card>
        <CardBody>
            <Row Class="w-100 align-items-center" Style="height: 150px;">
                <Column>
                    <RadarSpinner />
                </Column>
            </Row>
        </CardBody>
    </Card>
}
