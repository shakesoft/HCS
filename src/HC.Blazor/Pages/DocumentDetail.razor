                                                <Buttons>
                                                    <Button Clicked="@context.Clear" Color="Color.Warning">
                                                        <Icon Name="IconName.Clear" /> @L["Clear"]
                                                    </Button>
                                                    <Button Clicked="@context.Upload" Color="Color.Primary" Disabled="@(SelectedFile == null || IsUploading)">
