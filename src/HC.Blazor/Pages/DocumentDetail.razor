@page "/document-detail"
@page "/document-detail/{DocumentId:guid}"
@attribute [Authorize(HCPermissions.Documents.Default)]
@using HC.Documents
@using HC.DocumentFiles
@using HC.Localization
@using HC.MasterDatas
@using HC.Shared
@using Microsoft.AspNetCore.Authorization
@using Microsoft.Extensions.Localization
@using Microsoft.AspNetCore.Components.Web
@using Blazorise
@using Blazorise.Components
@using Volo.Abp.BlazoriseUI
@using Volo.Abp.BlazoriseUI.Components
@using Volo.Abp.ObjectMapping
@using Volo.Abp.AspNetCore.Components.Messages
@using Volo.Abp.AspNetCore.Components.Web.Theming.Layout
@using HC.Permissions
@using Volo.Abp.AspNetCore.Components.Web
@using Volo.Abp.AspNetCore.Components
@using Microsoft.AspNetCore.Components
@using Volo.Abp.Http.Client
@using Microsoft.Extensions.Caching.Memory
@using System.IO
@using System.Security.Cryptography
@using System.Text
@inherits HCComponentBase
@inject IDocumentsAppService DocumentsAppService
@inject IDocumentFilesAppService DocumentFilesAppService
@inject IMasterDatasAppService MasterDatasAppService
@inject IUiMessageService UiMessageService
@inject AbpBlazorMessageLocalizerHelper<HCResource> LH
@inject NavigationManager NavigationManager
@inject IMemoryCache __MemoryCache
@inject Volo.Abp.BlobStoring.IBlobContainer BlobContainer
@inject IJSRuntime JSRuntime

<PageHeader Title="@PageTitle" BreadcrumbItems="BreadcrumbItems">
</PageHeader>

@if (IsLoading)
{
    <Card>
        <CardBody>
            <Row Class="w-100 align-items-center" Style="height: 150px;">
                <Column>
                    <RadarSpinner />
                </Column>
            </Row>
        </CardBody>
    </Card>
}
else if (IsEditMode && CurrentDocument is null)
{
    <Card>
        <CardBody>
            <Alert Color="Color.Danger">
                @L["NoDataAvailable"]
            </Alert>
        </CardBody>
    </Card>
}
else
{
    <Card>
        <CardBody>
            @if (IsSaving)
            {
                <div style="position: absolute; top: 0; left: 0; right: 0; bottom: 0; background-color: rgba(255, 255, 255, 0.8); z-index: 1000; display: flex; align-items: center; justify-content: center; border-radius: 0.25rem;">
                    <RadarSpinner />
                </div>
            }
            <Form id="DocumentDetailForm" style="position: relative;">
                @if (IsEditMode && DocumentUpdateData != null)
                {
                    @* Manual validation is used (see ValidateEditDocument). *@
                    @if (!string.IsNullOrWhiteSpace(EditDocumentValidationErrorKey))
                    {
                        <Alert Color="Color.Danger">
                            <AlertMessage>@L["NotificationError"]!</AlertMessage>
                            <AlertDescription>@L[EditDocumentValidationErrorKey]</AlertDescription>
                        </Alert>
                    }
                    <Row>
                            <!-- Left Column: Document Information (6 columns) -->
                            <Column ColumnSize="ColumnSize.Is12.OnMobile.Is6.OnDesktop">
                                <!-- Row 1: Số tài liệu | Số lưu trữ (6-6) -->
                                <Row>
                                    <Column ColumnSize="ColumnSize.Is12.OnMobile.Is6.OnDesktop">
                                        <Field>
                                            <FieldLabel>@L["DocumentNumber"] *</FieldLabel>
                                            <TextEdit Text="@DocumentUpdateData.No" 
                                                      TextChanged="@((string value) => { DocumentUpdateData.No = value; EditFieldErrors.Remove("DocumentNumber"); })"
                                                      MaxLength="DocumentConsts.NoMaxLength" 
                                                      Disabled="@IsViewMode"
                                                      Style="@(HasEditFieldError("DocumentNumber") ? "border-color: #dc3545;" : "")" />
                                            @if (HasEditFieldError("DocumentNumber"))
                                            {
                                                <div class="invalid-feedback d-block">@GetEditFieldError("DocumentNumber")</div>
                                            }
                                        </Field>
                                    </Column>
                                    <Column ColumnSize="ColumnSize.Is12.OnMobile.Is6.OnDesktop">
                                        <Field>
                                            <FieldLabel>@L["StorageNumber"] *</FieldLabel>
                                            <TextEdit Text="@DocumentUpdateData.StorageNumber" 
                                                      TextChanged="@((string value) => { DocumentUpdateData.StorageNumber = value; EditFieldErrors.Remove("StorageNumber"); })"
                                                      MaxLength="DocumentConsts.StorageNumberMaxLength" 
                                                      Disabled="@IsViewMode"
                                                      Style="@(HasEditFieldError("StorageNumber") ? "border-color: #dc3545;" : "")" />
                                            @if (HasEditFieldError("StorageNumber"))
                                            {
                                                <div class="invalid-feedback d-block">@GetEditFieldError("StorageNumber")</div>
                                            }
                                        </Field>
                                    </Column>
                                </Row>
                                
                                <!-- Row 2: Title | Thời gian hoàn thành (6-6) -->
                                <Row>
                                    <Column ColumnSize="ColumnSize.Is12.OnMobile.Is6.OnDesktop">
                                        <Field>
                                            <FieldLabel>@L["Title"] *</FieldLabel>
                                            <TextEdit Text="@DocumentUpdateData.Title" 
                                                      TextChanged="@((string value) => { DocumentUpdateData.Title = value; EditFieldErrors.Remove("Title"); })"
                                                      Disabled="@IsViewMode"
                                                      Style="@(HasEditFieldError("Title") ? "border-color: #dc3545;" : "")" />
                                            @if (HasEditFieldError("Title"))
                                            {
                                                <div class="invalid-feedback d-block">@GetEditFieldError("Title")</div>
                                            }
                                        </Field>
                                    </Column>
                                    <Column ColumnSize="ColumnSize.Is12.OnMobile.Is6.OnDesktop">
                                        @* DatePicker is outside Validations to avoid Blazorise validator inference errors. *@
                                        <Field>
                                            <FieldLabel>@L["CompletedTime"]</FieldLabel>
                                            <Addons>
                                                <Addon AddonType="AddonType.Body">
                                                    <DatePicker TValue="DateTime"
                                                                InputMode="DateInputMode.DateTime"
                                                                Date="@DocumentUpdateData.CompletedTime"
                                                                DateChanged="@(v => DocumentUpdateData.CompletedTime = v)"
                                                                Placeholder="@string.Empty"
                                                                DisplayFormat="dd/MM/yyyy HH:mm"
                                                                InputFormat="dd/MM/yyyy HH:mm"
                                                                Disabled="@IsViewMode"
                                                                @ref="@EditCompletedTimeDatePicker" />
                                                </Addon>
                                                <Addon AddonType="AddonType.End">
                                                    <Button Color="Color.Light" Disabled="@IsViewMode" Clicked="@(() => EditCompletedTimeDatePicker?.ToggleAsync())">
                                                        <Icon Name="IconName.CalendarDay" />
                                                    </Button>
                                                </Addon>
                                            </Addons>
                                        </Field>
                                    </Column>
                                </Row>
                                
                                <!-- Row 3: Loại | Lĩnh vực (6-6) -->
                                <Row>
                                    <Column ColumnSize="ColumnSize.Is12.OnMobile.Is6.OnDesktop">
                                        <Field>
                                            <FieldLabel>@L["Type"] *</FieldLabel>
                                            <div class="hc-select2-full" style="@(HasEditFieldError("Type") ? "border: 1px solid #dc3545; border-radius: 0.25rem; padding: 2px;" : "")">
                                                <Select2 IdSelector="c => c.Id.ToString()"
                                                         TextSelector="c => c.DisplayName"
                                                         FilterFunction="GetTypeMasterDataLookupAsync"
                                                         GetElementById="async (items, id, token) => items.FirstOrDefault(x => x.Id.ToString() == id)!"
                                                         Datasource="TypeMasterDataCollection"
                                                         Value="@SelectedTypeMasterData"
                                                         OnValueChanged="OnTypeIdChanged"
                                                         Cache="__MemoryCache"
                                                         Multiselect="false"
                                                         Disabled="@IsViewMode" />
                                            </div>
                                            @if (HasEditFieldError("Type"))
                                            {
                                                <div class="invalid-feedback d-block">@GetEditFieldError("Type")</div>
                                            }
                                        </Field>
                                    </Column>
                                    <Column ColumnSize="ColumnSize.Is12.OnMobile.Is6.OnDesktop">
                                        <Field>
                                            <FieldLabel>@L["Field"] *</FieldLabel>
                                            <div class="hc-select2-full" style="@(HasEditFieldError("Field") ? "border: 1px solid #dc3545; border-radius: 0.25rem; padding: 2px;" : "")">
                                                <Select2 IdSelector="c => c.Id.ToString()"
                                                         TextSelector="c => c.DisplayName"
                                                         FilterFunction="GetFieldMasterDataLookupAsync"
                                                         GetElementById="async (items, id, token) => items.FirstOrDefault(x => x.Id.ToString() == id)!"
                                                         Datasource="FieldMasterDataCollection"
                                                         Value="@SelectedFieldMasterData"
                                                         OnValueChanged="OnFieldIdChanged"
                                                         Cache="__MemoryCache"
                                                         Multiselect="false"
                                                         Disabled="@IsViewMode" />
                                            </div>
                                            @if (HasEditFieldError("Field"))
                                            {
                                                <div class="invalid-feedback d-block">@GetEditFieldError("Field")</div>
                                            }
                                        </Field>
                                    </Column>
                                </Row>
                                
                                <!-- Row 4: Mức độ cấp bách | Mức độ bảo mật (6-6) -->
                                <Row>
                                    <Column ColumnSize="ColumnSize.Is12.OnMobile.Is6.OnDesktop">
                                        <Field>
                                            <FieldLabel>@L["UrgencyLevel"] *</FieldLabel>
                                            <div class="hc-select2-full" style="@(HasEditFieldError("UrgencyLevel") ? "border: 1px solid #dc3545; border-radius: 0.25rem; padding: 2px;" : "")">
                                                <Select2 IdSelector="c => c.Id.ToString()"
                                                         TextSelector="c => c.DisplayName"
                                                         FilterFunction="GetUrgencyLevelMasterDataLookupAsync"
                                                         GetElementById="async (items, id, token) => items.FirstOrDefault(x => x.Id.ToString() == id)!"
                                                         Datasource="UrgencyLevelMasterDataCollection"
                                                         Value="@SelectedUrgencyLevelMasterData"
                                                         OnValueChanged="OnUrgencyLevelIdChanged"
                                                         Cache="__MemoryCache"
                                                         Multiselect="false"
                                                         Disabled="@IsViewMode" />
                                            </div>
                                            @if (HasEditFieldError("UrgencyLevel"))
                                            {
                                                <div class="invalid-feedback d-block">@GetEditFieldError("UrgencyLevel")</div>
                                            }
                                        </Field>
                                    </Column>
                                    <Column ColumnSize="ColumnSize.Is12.OnMobile.Is6.OnDesktop">
                                        <Field>
                                            <FieldLabel>@L["SecrecyLevel"] *</FieldLabel>
                                            <div class="hc-select2-full" style="@(HasEditFieldError("SecrecyLevel") ? "border: 1px solid #dc3545; border-radius: 0.25rem; padding: 2px;" : "")">
                                                <Select2 IdSelector="c => c.Id.ToString()"
                                                         TextSelector="c => c.DisplayName"
                                                         FilterFunction="GetSecrecyLevelMasterDataLookupAsync"
                                                         GetElementById="async (items, id, token) => items.FirstOrDefault(x => x.Id.ToString() == id)!"
                                                         Datasource="SecrecyLevelMasterDataCollection"
                                                         Value="@SelectedSecrecyLevelMasterData"
                                                         OnValueChanged="OnSecrecyLevelIdChanged"
                                                         Cache="__MemoryCache"
                                                         Multiselect="false"
                                                         Disabled="@IsViewMode" />
                                            </div>
                                            @if (HasEditFieldError("SecrecyLevel"))
                                            {
                                                <div class="invalid-feedback d-block">@GetEditFieldError("SecrecyLevel")</div>
                                            }
                                        </Field>
                                    </Column>
                                </Row>
                                
                                <!-- Row 5: Đơn vị ban hành | Trạng thái (6-6) -->
                                <Row>
                                    <Column ColumnSize="ColumnSize.Is12.OnMobile.Is6.OnDesktop">
                                        <Field>
                                            <FieldLabel>@L["Unit"] *</FieldLabel>
                                            <div class="hc-select2-full" style="@(HasEditFieldError("Unit") ? "border: 1px solid #dc3545; border-radius: 0.25rem; padding: 2px;" : "")">
                                                <Select2 IdSelector="c => c.Id.ToString()"
                                                         TextSelector="c => c.DisplayName"
                                                         FilterFunction="GetUnitLookupAsync"
                                                         GetElementById="async (items, id, token) => items.FirstOrDefault(x => x.Id.ToString() == id)!"
                                                         Datasource="UnitsCollection"
                                                         Value="@SelectedUnit"
                                                         OnValueChanged="OnUnitIdChanged"
                                                         Cache="__MemoryCache"
                                                         Multiselect="false"
                                                         Disabled="@IsViewMode" />
                                            </div>
                                            @if (HasEditFieldError("Unit"))
                                            {
                                                <div class="invalid-feedback d-block">@GetEditFieldError("Unit")</div>
                                            }
                                        </Field>
                                    </Column>
                                    <Column ColumnSize="ColumnSize.Is12.OnMobile.Is6.OnDesktop">
                                        <Field>
                                            <FieldLabel>@L["Status"] *</FieldLabel>
                                            <div class="hc-select2-full" style="@(HasEditFieldError("Status") ? "border: 1px solid #dc3545; border-radius: 0.25rem; padding: 2px;" : "")">
                                                <Select2 IdSelector="c => c.Id.ToString()"
                                                         TextSelector="c => c.DisplayName"
                                                         FilterFunction="GetStatusMasterDataLookupAsync"
                                                         GetElementById="async (items, id, token) => items.FirstOrDefault(x => x.Id.ToString() == id)!"
                                                         Datasource="StatusMasterDataCollection"
                                                         Value="@SelectedStatusMasterData"
                                                         OnValueChanged="OnStatusIdChanged"
                                                         Cache="__MemoryCache"
                                                         Multiselect="false"
                                                         Disabled="@IsViewMode" />
                                            </div>
                                            @if (HasEditFieldError("Status"))
                                            {
                                                <div class="invalid-feedback d-block">@GetEditFieldError("Status")</div>
                                            }
                                        </Field>
                                    </Column>
                                </Row>
                                
                                <!-- Row 6: Trạng thái hiện tại (12) -->
                                <Row>
                                    <Column ColumnSize="ColumnSize.Is12">
                                        <Field>
                                            <FieldLabel>@L["CurrentStatus"]</FieldLabel>
                                            <TextEdit @bind-Text="@DocumentUpdateData.CurrentStatus" MaxLength="DocumentConsts.CurrentStatusMaxLength" Disabled="@IsViewMode" />
                                        </Field>
                                    </Column>
                                </Row>
                            </Column>
                            
                            <!-- Right Column: File Upload and PDF Viewer (6 columns) -->
                            <Column ColumnSize="ColumnSize.Is12.OnMobile.Is6.OnDesktop">
                                @if (!IsViewMode && !DocumentFilesList.Any())
                                {
                                    <Field>
                                        <FieldLabel>@L["File"] *</FieldLabel>
                                        <FilePicker Multiple="false"
                                                    Changed="OnFileChanged"
                                                    ShowMode="FilePickerShowMode.List"
                                                    Disabled="@(IsEditMode && CurrentDocument != null && DocumentFilesList.Any())"
                                                    MaxFileSize="52428800"
                                                    FilePickerLocalizer="FilePickerLocalizer">
                                            <ButtonsTemplate>
                                                <Progress Value="@FilePickerProgress" />
                                                <Buttons>
                                                    <Button Clicked="@context.Clear" Color="Color.Warning">
                                                        <Icon Name="IconName.Clear" /> @L["Clear"]
                                                    </Button>
                                                    @if (IsPdfFile && !string.IsNullOrEmpty(PdfFileUrl) && !string.IsNullOrEmpty(UploadedFilePath))
                                                    {
                                                        <Button Clicked="OpenPdfViewerModalAsync" Color="Color.Info">
                                                            <Icon Name="IconName.Eye" /> @L["ViewFile"]
                                                        </Button>
                                                    }
                                                </Buttons>
                                            </ButtonsTemplate>
                                        </FilePicker>
                                        @if (IsEditMode && CurrentDocument != null)
                                        {
                                            <Alert Color="Color.Warning" Dismissible="false" Class="mt-2">
                                                <Icon Name="IconName.ExclamationTriangle" Class="me-2" />
                                                @L["CannotUploadFileInEditMode"] @L["PleaseDeleteFileFirst"]
                                            </Alert>
                                        }
                                        @if (!string.IsNullOrEmpty(UploadedFilePath))
                                        {
                                            <Alert Color="Color.Success" Dismissible="false" Class="mt-2">
                                                <Icon Name="IconName.CheckCircle" Class="me-2" />
                                                @L["FileUploadedSuccessfully"]: @System.IO.Path.GetFileName(UploadedFilePath)
                                            </Alert>
                                        }
                                    </Field>
                                }
                                
                                @if (DocumentFilesList.Any())
                                {
                                    <div class="mt-3">
                                        <Heading Size="HeadingSize.Is6">@L["UploadedFiles"]</Heading>
                                        <Table Hoverable="true" Bordered="true" Striped="true">
                                            <thead>
                                                <tr>
                                                    <th>@L["Name"]</th>
                                                    <th>@L["UploadedAt"]</th>
                                                    <th>@L["IsSigned"]</th>
                                                    <th>@L["Actions"]</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var file in DocumentFilesList)
                                                {
                                                    <tr>
                                                        <td>@file.DocumentFile.Name</td>
                                                        <td>@file.DocumentFile.UploadedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                                        <td>
                                                            @if (file.DocumentFile.IsSigned)
                                                            {
                                                                <Icon TextColor="TextColor.Success" Name="@IconName.Check" />
                                                            }
                                                            else
                                                            {
                                                                <Icon TextColor="TextColor.Danger" Name="@IconName.Times" />
                                                            }
                                                        </td>
                                                        <td>
                                                            <div class="d-flex gap-2">
                                                                @if (IsPdfFileExtension(file.DocumentFile.Name))
                                                                {
                                                                    <Button Color="Color.Info" Size="Size.Small" Clicked="@(() => OpenPdfViewerModalForFileAsync(file))">
                                                                        <Icon Name="IconName.Eye" Class="me-1" />
                                                                    </Button>
                                                                }
                                                                <Button Color="Color.Primary" Size="Size.Small" Clicked="@(() => DownloadFileAsync(file.DocumentFile.Path, file.DocumentFile.Name))">
                                                                    <Icon Name="IconName.Download" Class="me-1" />
                                                                </Button>
                                                                @if (CanDeleteDocumentFile)
                                                                {
                                                                    <Button Color="Color.Danger" Size="Size.Small" Clicked="@(() => DeleteFileAsync(file))">
                                                                        <Icon Name="IconName.Delete" Class="me-1" />
                                                                    </Button>
                                                                }
                                                            </div>
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </Table>
                                    </div>
                                }
                            </Column>
                        </Row>
                        <Row>
                            <Column ColumnSize="ColumnSize.Is12">
                                <div class="d-flex justify-content-end gap-2">
                                    @if (!IsViewMode)
                                    {
                                         <Button Color="Color.Secondary" Clicked="OnBack">
                                            @L["Back"]
                                        </Button>
                                        <Button Color="Color.Primary" Clicked="OnSave" Disabled="@IsSaving">
                                            <Icon Name="IconName.Save" Class="me-1" />
                                            @L["Save"]
                                        </Button>
                                    }
                                    else
                                    {
                                        <Button Color="Color.Secondary" Clicked="OnBack">
                                            @L["Back"]
                                        </Button>
                                        @if (CanEditDocument)
                                        {
                                            <Button Color="Color.Primary" Clicked="OnEdit">
                                                @L["Edit"]
                                            </Button>
                                        }
                                    }
                                </div>
                            </Column>
                        </Row>
                }
                else if (DocumentCreateData != null)
                {
                    @* Manual validation is used (see ValidateCreateDocument). *@
                    @if (!string.IsNullOrWhiteSpace(CreateDocumentValidationErrorKey))
                    {
                        <Alert Color="Color.Danger">
                            <AlertMessage>@L["NotificationError"]!</AlertMessage>
                            <AlertDescription>@L[CreateDocumentValidationErrorKey]</AlertDescription>
                        </Alert>
                    }
                    <Row>
                            <!-- Left Column: Document Information (6 columns) -->
                            <Column ColumnSize="ColumnSize.Is12.OnMobile.Is6.OnDesktop">
                                <!-- Row 1: Số tài liệu | Số lưu trữ (6-6) -->
                                <Row>
                                    <Column ColumnSize="ColumnSize.Is12.OnMobile.Is6.OnDesktop">
                                        <Field>
                                            <FieldLabel>@L["DocumentNumber"] *</FieldLabel>
                                            <TextEdit Text="@DocumentCreateData.No" 
                                                      TextChanged="@((string value) => { DocumentCreateData.No = value; CreateFieldErrors.Remove("DocumentNumber"); })"
                                                      MaxLength="DocumentConsts.NoMaxLength" 
                                                      Disabled="@IsViewMode"
                                                      Style="@(HasCreateFieldError("DocumentNumber") ? "border-color: #dc3545;" : "")" />
                                            @if (HasCreateFieldError("DocumentNumber"))
                                            {
                                                <div class="invalid-feedback d-block">@GetCreateFieldError("DocumentNumber")</div>
                                            }
                                        </Field>
                                    </Column>
                                    <Column ColumnSize="ColumnSize.Is12.OnMobile.Is6.OnDesktop">
                                        <Field>
                                            <FieldLabel>@L["StorageNumber"] *</FieldLabel>
                                            <TextEdit Text="@DocumentCreateData.StorageNumber" 
                                                      TextChanged="@((string value) => { DocumentCreateData.StorageNumber = value; CreateFieldErrors.Remove("StorageNumber"); })"
                                                      MaxLength="DocumentConsts.StorageNumberMaxLength" 
                                                      Disabled="@IsViewMode"
                                                      Style="@(HasCreateFieldError("StorageNumber") ? "border-color: #dc3545;" : "")" />
                                            @if (HasCreateFieldError("StorageNumber"))
                                            {
                                                <div class="invalid-feedback d-block">@GetCreateFieldError("StorageNumber")</div>
                                            }
                                        </Field>
                                    </Column>
                                </Row>
                                
                                <!-- Row 2: Title | Thời gian hoàn thành (6-6) -->
                                <Row>
                                    <Column ColumnSize="ColumnSize.Is12.OnMobile.Is6.OnDesktop">
                                        <Field>
                                            <FieldLabel>@L["Title"] *</FieldLabel>
                                            <TextEdit Text="@DocumentCreateData.Title" 
                                                      TextChanged="@((string value) => { DocumentCreateData.Title = value; CreateFieldErrors.Remove("Title"); })"
                                                      Disabled="@IsViewMode"
                                                      Style="@(HasCreateFieldError("Title") ? "border-color: #dc3545;" : "")" />
                                            @if (HasCreateFieldError("Title"))
                                            {
                                                <div class="invalid-feedback d-block">@GetCreateFieldError("Title")</div>
                                            }
                                        </Field>
                                    </Column>
                                    <Column ColumnSize="ColumnSize.Is12.OnMobile.Is6.OnDesktop">
                                        @* DatePicker is outside Validations to avoid Blazorise validator inference errors. *@
                                        <Field>
                                            <FieldLabel>@L["CompletedTime"]</FieldLabel>
                                            <Addons>
                                                <Addon AddonType="AddonType.Body">
                                                    <DatePicker TValue="DateTime"
                                                                InputMode="DateInputMode.DateTime"
                                                                Date="@DocumentCreateData.CompletedTime"
                                                                DateChanged="@(v => DocumentCreateData.CompletedTime = v)"
                                                                Placeholder="@string.Empty"
                                                                DisplayFormat="dd/MM/yyyy HH:mm"
                                                                InputFormat="dd/MM/yyyy HH:mm"
                                                                Disabled="@IsViewMode"
                                                                @ref="@CreateCompletedTimeDatePicker" />
                                                </Addon>
                                                <Addon AddonType="AddonType.End">
                                                    <Button Color="Color.Light" Disabled="@IsViewMode" Clicked="@(() => CreateCompletedTimeDatePicker?.ToggleAsync())">
                                                        <Icon Name="IconName.CalendarDay" />
                                                    </Button>
                                                </Addon>
                                            </Addons>
                                        </Field>
                                    </Column>
                                </Row>
                                
                                <!-- Row 3: Loại | Lĩnh vực (6-6) -->
                                <Row>
                                    <Column ColumnSize="ColumnSize.Is12.OnMobile.Is6.OnDesktop">
                                        <Field>
                                            <FieldLabel>@L["Type"] *</FieldLabel>
                                            <div class="hc-select2-full" style="@(HasCreateFieldError("Type") ? "border: 1px solid #dc3545; border-radius: 0.25rem; padding: 2px;" : "")">
                                                <Select2 IdSelector="c => c.Id.ToString()"
                                                         TextSelector="c => c.DisplayName"
                                                         FilterFunction="GetTypeMasterDataLookupAsync"
                                                         GetElementById="async (items, id, token) => items.FirstOrDefault(x => x.Id.ToString() == id)!"
                                                         Datasource="TypeMasterDataCollection"
                                                         Value="@SelectedTypeMasterData"
                                                         OnValueChanged="OnTypeIdChanged"
                                                         Cache="__MemoryCache"
                                                         Multiselect="false"
                                                         Disabled="@IsViewMode" />
                                            </div>
                                            @if (HasCreateFieldError("Type"))
                                            {
                                                <div class="invalid-feedback d-block">@GetCreateFieldError("Type")</div>
                                            }
                                        </Field>
                                    </Column>
                                    <Column ColumnSize="ColumnSize.Is12.OnMobile.Is6.OnDesktop">
                                        <Field>
                                            <FieldLabel>@L["Field"] *</FieldLabel>
                                            <div class="hc-select2-full" style="@(HasCreateFieldError("Field") ? "border: 1px solid #dc3545; border-radius: 0.25rem; padding: 2px;" : "")">
                                                <Select2 IdSelector="c => c.Id.ToString()"
                                                         TextSelector="c => c.DisplayName"
                                                         FilterFunction="GetFieldMasterDataLookupAsync"
                                                         GetElementById="async (items, id, token) => items.FirstOrDefault(x => x.Id.ToString() == id)!"
                                                         Datasource="FieldMasterDataCollection"
                                                         Value="@SelectedFieldMasterData"
                                                         OnValueChanged="OnFieldIdChanged"
                                                         Cache="__MemoryCache"
                                                         Multiselect="false"
                                                         Disabled="@IsViewMode" />
                                            </div>
                                            @if (HasCreateFieldError("Field"))
                                            {
                                                <div class="invalid-feedback d-block">@GetCreateFieldError("Field")</div>
                                            }
                                        </Field>
                                    </Column>
                                </Row>
                                
                                <!-- Row 4: Mức độ cấp bách | Mức độ bảo mật (6-6) -->
                                <Row>
                                    <Column ColumnSize="ColumnSize.Is12.OnMobile.Is6.OnDesktop">
                                        <Field>
                                            <FieldLabel>@L["UrgencyLevel"] *</FieldLabel>
                                            <div class="hc-select2-full" style="@(HasCreateFieldError("UrgencyLevel") ? "border: 1px solid #dc3545; border-radius: 0.25rem; padding: 2px;" : "")">
                                                <Select2 IdSelector="c => c.Id.ToString()"
                                                         TextSelector="c => c.DisplayName"
                                                         FilterFunction="GetUrgencyLevelMasterDataLookupAsync"
                                                         GetElementById="async (items, id, token) => items.FirstOrDefault(x => x.Id.ToString() == id)!"
                                                         Datasource="UrgencyLevelMasterDataCollection"
                                                         Value="@SelectedUrgencyLevelMasterData"
                                                         OnValueChanged="OnUrgencyLevelIdChanged"
                                                         Cache="__MemoryCache"
                                                         Multiselect="false"
                                                         Disabled="@IsViewMode" />
                                            </div>
                                            @if (HasCreateFieldError("UrgencyLevel"))
                                            {
                                                <div class="invalid-feedback d-block">@GetCreateFieldError("UrgencyLevel")</div>
                                            }
                                        </Field>
                                    </Column>
                                    <Column ColumnSize="ColumnSize.Is12.OnMobile.Is6.OnDesktop">
                                        <Field>
                                            <FieldLabel>@L["SecrecyLevel"] *</FieldLabel>
                                            <div class="hc-select2-full" style="@(HasCreateFieldError("SecrecyLevel") ? "border: 1px solid #dc3545; border-radius: 0.25rem; padding: 2px;" : "")">
                                                <Select2 IdSelector="c => c.Id.ToString()"
                                                         TextSelector="c => c.DisplayName"
                                                         FilterFunction="GetSecrecyLevelMasterDataLookupAsync"
                                                         GetElementById="async (items, id, token) => items.FirstOrDefault(x => x.Id.ToString() == id)!"
                                                         Datasource="SecrecyLevelMasterDataCollection"
                                                         Value="@SelectedSecrecyLevelMasterData"
                                                         OnValueChanged="OnSecrecyLevelIdChanged"
                                                         Cache="__MemoryCache"
                                                         Multiselect="false"
                                                         Disabled="@IsViewMode" />
                                            </div>
                                            @if (HasCreateFieldError("SecrecyLevel"))
                                            {
                                                <div class="invalid-feedback d-block">@GetCreateFieldError("SecrecyLevel")</div>
                                            }
                                        </Field>
                                    </Column>
                                </Row>
                                
                                <!-- Row 5: Đơn vị ban hành | Trạng thái (6-6) -->
                                <Row>
                                    <Column ColumnSize="ColumnSize.Is12.OnMobile.Is6.OnDesktop">
                                        <Field>
                                            <FieldLabel>@L["Unit"] *</FieldLabel>
                                            <div class="hc-select2-full" style="@(HasCreateFieldError("Unit") ? "border: 1px solid #dc3545; border-radius: 0.25rem; padding: 2px;" : "")">
                                                <Select2 IdSelector="c => c.Id.ToString()"
                                                         TextSelector="c => c.DisplayName"
                                                         FilterFunction="GetUnitLookupAsync"
                                                         GetElementById="async (items, id, token) => items.FirstOrDefault(x => x.Id.ToString() == id)!"
                                                         Datasource="UnitsCollection"
                                                         Value="@SelectedUnit"
                                                         OnValueChanged="OnUnitIdChanged"
                                                         Cache="__MemoryCache"
                                                         Multiselect="false"
                                                         Disabled="@IsViewMode" />
                                            </div>
                                            @if (HasCreateFieldError("Unit"))
                                            {
                                                <div class="invalid-feedback d-block">@GetCreateFieldError("Unit")</div>
                                            }
                                        </Field>
                                    </Column>
                                    <Column ColumnSize="ColumnSize.Is12.OnMobile.Is6.OnDesktop">
                                        <Field>
                                            <FieldLabel>@L["Status"] *</FieldLabel>
                                            <div class="hc-select2-full" style="@(HasCreateFieldError("Status") ? "border: 1px solid #dc3545; border-radius: 0.25rem; padding: 2px;" : "")">
                                                <Select2 IdSelector="c => c.Id.ToString()"
                                                         TextSelector="c => c.DisplayName"
                                                         FilterFunction="GetStatusMasterDataLookupAsync"
                                                         GetElementById="async (items, id, token) => items.FirstOrDefault(x => x.Id.ToString() == id)!"
                                                         Datasource="StatusMasterDataCollection"
                                                         Value="@SelectedStatusMasterData"
                                                         OnValueChanged="OnStatusIdChanged"
                                                         Cache="__MemoryCache"
                                                         Multiselect="false"
                                                         Disabled="@IsViewMode" />
                                            </div>
                                            @if (HasCreateFieldError("Status"))
                                            {
                                                <div class="invalid-feedback d-block">@GetCreateFieldError("Status")</div>
                                            }
                                        </Field>
                                    </Column>
                                </Row>
                                
                                <!-- Row 6: Trạng thái hiện tại (12) -->
                                <Row>
                                    <Column ColumnSize="ColumnSize.Is12">
                                        <Field>
                                            <FieldLabel>@L["CurrentStatus"]</FieldLabel>
                                            <TextEdit @bind-Text="@DocumentCreateData.CurrentStatus" MaxLength="DocumentConsts.CurrentStatusMaxLength" Disabled="@IsViewMode" />
                                        </Field>
                                    </Column>
                                </Row>
                            </Column>
                            
                            <!-- Right Column: File Upload and PDF Viewer (6 columns) -->
                            <Column ColumnSize="ColumnSize.Is12.OnMobile.Is6.OnDesktop">
                                @if (!IsViewMode && !DocumentFilesList.Any())
                                {
                                    <Field>
                                        <FieldLabel>@L["File"] *</FieldLabel>
                                        <FilePicker Multiple="false"
                                                    Changed="OnFileChanged"
                                                    ShowMode="FilePickerShowMode.List"
                                                    Disabled="@(IsEditMode && CurrentDocument != null && DocumentFilesList.Any())"
                                                    MaxFileSize="52428800"
                                                    FilePickerLocalizer="FilePickerLocalizer">
                                            <ButtonsTemplate>
                                                @* <Progress Value="@FilePickerProgress" /> *@
                                                <Buttons>
                                                    <Button Clicked="@context.Clear" Color="Color.Warning">
                                                        <Icon Name="IconName.Clear" /> @L["Clear"]
                                                    </Button>
                                                    @if (IsPdfFile && !string.IsNullOrEmpty(PdfFileUrl) && !string.IsNullOrEmpty(UploadedFilePath))
                                                    {
                                                        <Button Clicked="OpenPdfViewerModalAsync" Color="Color.Info">
                                                            <Icon Name="IconName.Eye" /> @L["ViewFile"]
                                                        </Button>
                                                    }
                                                </Buttons>
                                            </ButtonsTemplate>
                                        </FilePicker>
                                        @if (IsEditMode && CurrentDocument != null)
                                        {
                                            <Alert Color="Color.Warning" Dismissible="false" Class="mt-2">
                                                <Icon Name="IconName.ExclamationTriangle" Class="me-2" />
                                                @L["CannotUploadFileInEditMode"] @L["PleaseDeleteFileFirst"]
                                            </Alert>
                                        }
                                        @if (!string.IsNullOrEmpty(UploadedFilePath))
                                        {
                                            <Alert Color="Color.Success" Dismissible="false" Class="mt-2">
                                                <Icon Name="IconName.CheckCircle" Class="me-2" />
                                                @L["FileUploadedSuccessfully"]: @System.IO.Path.GetFileName(UploadedFilePath)
                                            </Alert>
                                        }
                                    </Field>
                                }
                            </Column>
                        </Row>
                        <Row>
                            <Column ColumnSize="ColumnSize.Is12">
                                <div class="d-flex justify-content-end gap-2">
                                    @if (!IsViewMode)
                                    {
                                       
                                        <Button Color="Color.Secondary" Clicked="OnBack">
                                            <Icon Name="IconName.ArrowLeft" Class="me-1" />
                                            @L["Back"]
                                        </Button>

                                        <Button Color="Color.Primary" Clicked="OnSave" Disabled="@IsSaving">
                                            <Icon Name="IconName.Save" Class="me-1" />
                                            @L["Save"]
                                        </Button>
                                    }
                                    else
                                    {
                                        <Button Color="Color.Secondary" Clicked="OnBack">
                                            <Icon Name="IconName.ArrowLeft" Class="me-1" />
                                            @L["Back"]
                                        </Button>
                                        @if (CanEditDocument)
                                        {
                                            <Button Color="Color.Primary" Clicked="OnEdit">
                                                <Icon Name="IconName.Edit" Class="me-1" />
                                                @L["Edit"]
                                            </Button>
                                        }
                                    }
                                </div>
                            </Column>
                        </Row>
                }
            </Form>
        </CardBody>
    </Card>

    <!-- PDF Viewer Modal -->
    <Modal @ref="@PdfViewerModal" Class="pdf-viewer-modal">
        <ModalContent Centered="true" Size="ModalSize.ExtraLarge">
            <ModalHeader>
            <ModalTitle>@L["DocumentPreview"]</ModalTitle>
            <CloseButton Clicked="ClosePdfViewerModalAsync" />
        </ModalHeader>
        <ModalBody Class="pdf-viewer-modal-body">
            @if (IsPdfFile && !string.IsNullOrEmpty(PdfFileUrl))
            {
                <PdfViewerContainer Height="Height.Rem(35)">
                    <PdfViewerToolbar />
                    <PdfViewer Source="@PdfFileUrl" />
                </PdfViewerContainer>
            }
        </ModalBody>
        </ModalContent>
        <ModalFooter>
            <Button Color="Color.Secondary" Clicked="ClosePdfViewerModalAsync">
                @L["Close"]
            </Button>
        </ModalFooter>
    </Modal>
}

<style>
    /* PDF Viewer Modal - Ensure it stays within modal */
    .pdf-viewer-modal .modal-content {
        position: relative;
        z-index: 1050;
    }

    .pdf-viewer-modal .modal-header {
        position: relative;
        z-index: 1051;
        background-color: white;
    }

    .pdf-viewer-modal-body {
        position: relative;
        overflow: hidden;
        max-height: 70vh;
        padding: 1rem;
    }

    .pdf-viewer-modal-body .b-pdf-viewer-container {
        position: relative;
        z-index: 1;
        width: 100%;
        height: 100%;
    }

    /* FilePicker Container - Purple dropzone theme */
    .b-file-picker {
        background-color: #f8f7fc !important;
        border: 2px dashed #8b5cf6 !important;
        border-radius: 12px !important;
        padding: 2rem !important;
        text-align: center !important;
        transition: all 0.3s ease !important;
        position: relative !important;
    }

    .b-file-picker:hover {
        background-color: #f3f0ff !important;
        border-color: #7c3aed !important;
    }

    /* Input group styling */
    .b-file-picker .input-group.form-file {
        background-color: transparent !important;
        border: 1px solid #8b5cf6 !important;
        border-radius: 8px !important;
        justify-content: center !important;
        margin-bottom: 0.5rem !important;
        overflow: hidden !important;
    }

    /* Label/Text styling - Purple */
    .b-file-picker .input-group-text {
        background-color: #8b5cf6 !important;
        border: 1px solid #8b5cf6 !important;
        border-right: none !important;
        padding: 0.5rem 1rem !important;
        color: #ffffff !important;
    }

    .b-file-picker .input-group-text .text-muted {
        color: white !important;
        font-weight: 500 !important;
        font-size: 1rem !important;
    }

    /* File input styling - Ensure it's clickable */
    .b-file-picker .form-control[type="file"] {
        border: 1px solid #8b5cf6 !important;
        border-left: none !important;
        background-color: #ffffff !important;
        color: #8b5cf6 !important;
        cursor: pointer !important;
        padding: 0.5rem !important;
        position: relative !important;
        z-index: 1 !important;
        pointer-events: auto !important;
        opacity: 1 !important;
        visibility: visible !important;
        border-radius: 0 8px 8px 0 !important;
    }

    .b-file-picker .form-control[type="file"]::file-selector-button {
        background-color: #8b5cf6 !important;
        color: #ffffff !important;
        border: none !important;
        padding: 0.5rem 1rem !important;
        border-radius: 6px !important;
        font-weight: 600 !important;
        cursor: pointer !important;
        margin-right: 0.75rem !important;
    }

    .b-file-picker .form-control[type="file"]::file-selector-button:hover {
        background-color: #7c3aed !important;
    }

    /* Drop text styling - Purple */
    .b-file-picker .b-text-drop {
        color: #8b5cf6 !important;
        font-weight: 500 !important;
        font-size: 0.95rem !important;
        margin-top: 0.75rem !important;
        padding-top: 2.5rem;
        padding-bottom: 2.5rem;
        border-radius: 12px !important;
    }

    /* File list items - Uploading state */
    .b-file-picker .b-file-picker-item {
        border: 1px solid #e5e7eb !important;
        border-radius: 8px !important;
        padding: 0.75rem !important;
        margin-bottom: 0.5rem !important;
        background-color: #ffffff !important;
    }

    .b-file-picker .b-file-picker-item .b-file-picker-item-name {
        color: #111827 !important;
        font-weight: 500 !important;
    }

    /* Progress bar styling - Purple */
    .b-file-picker .b-progress {
        margin-top: 0.5rem !important;
        height: 8px !important;
        border-radius: 4px !important;
        background-color: #e5e7eb !important;
    }

    .b-file-picker .b-progress-bar {
        background-color: #8b5cf6 !important;
        border-radius: 4px !important;
    }

    /* FilePicker List - Uploaded files (success state - Green) */
    .b-file-picker .b-file-picker-item.b-file-picker-item-success,
    .b-file-picker .b-file-picker-item[data-state="success"] {
        background-color: #ecfdf5 !important;
        border-color: #10b981 !important;
    }

    .b-file-picker .b-file-picker-item.b-file-picker-item-success .b-file-picker-item-name,
    .b-file-picker .b-file-picker-item[data-state="success"] .b-file-picker-item-name {
        color: #065f46 !important;
    }

    /* Upload button styling - Purple */
    .b-file-picker .b-file-picker-buttons .btn-primary,
    .b-file-picker .b-file-picker-buttons button.btn-primary {
        background-color: #7c3aed !important;
        border-color: #7c3aed !important;
        color: #ffffff !important;
        font-weight: 600 !important;
        padding: 0.5rem 1.5rem !important;
        text-transform: uppercase !important;
        letter-spacing: 0.5px !important;
        border-radius: 8px !important;
    }

    .b-file-picker .b-file-picker-buttons .btn-primary:hover,
    .b-file-picker .b-file-picker-buttons button.btn-primary:hover {
        background-color: #6d28d9 !important;
        border-color: #6d28d9 !important;
    }

    .b-file-picker .b-file-picker-buttons .btn-primary:disabled,
    .b-file-picker .b-file-picker-buttons button.btn-primary:disabled {
        background-color: #c4b5fd !important;
        border-color: #c4b5fd !important;
        opacity: 0.6 !important;
    }

    /* File remove button (trash icon) - Red */
    .b-file-picker .b-file-picker-item-remove,
    .b-file-picker .b-file-picker-item .btn-close {
        color: #ef4444 !important;
    }

    .b-file-picker .b-file-picker-item-remove:hover,
    .b-file-picker .b-file-picker-item .btn-close:hover {
        color: #dc2626 !important;
    }

    /* Button group spacing */
    .b-file-picker .b-file-picker-buttons {
        display: flex !important;
        gap: 0.75rem !important;
        margin-top: 1rem !important;
        justify-content: center !important;
    }

    /* Ensure input file is always clickable */
    .b-file-picker .form-control[type="file"]:not([disabled]) {
        pointer-events: auto !important;
        cursor: pointer !important;
    }
    
    .b-file-picker .input-group.form-file {
        pointer-events: auto !important;
    }
</style>
