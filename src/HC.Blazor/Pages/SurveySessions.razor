@* ************************* DATA GRID ************************* *@
<Card>
    <CardBody>        
        <Div  Visibility="@(SelectedSurveySessions.Any() ? Visibility.Visible : Visibility.Invisible)"
              class="d-flex justify-content-between align-items-center mb-2">
              <p class="lead mb-0">
                @if (AllSurveySessionsSelected)
                {
                    @L["AllItemsAreSelected", TotalCount]
                }
                else
                {
                    @if (SelectedSurveySessions.Count > 1)
                    {
                        @L["NumberOfItemsOnThisPageAreSelected", SelectedSurveySessions.Count]
                    }
                    else
                    {
                        @L["OneItemOnThisPageIsSelected"]
                    }
                }
              </p>
            <div>
                @if ((SelectedSurveySessions.Count == PageSize || SelectedSurveySessions.Count == SurveySessionList.Count) && TotalCount > SelectedSurveySessions.Count)
                {
                    if (!AllSurveySessionsSelected)
                    {
                        <Button Clicked="SelectAllItems" Class="mx-1 btn-outline-secondary">@L["SelectAllItems", TotalCount]</Button>
                    }
                    else
                    {
                        <Button Clicked="ClearSelection" Class="mx-1 btn-outline-secondary">@L["ClearSelection"]</Button>
                    }
                }
                <Button Color="Color.Danger" Class="mx-1" Size="Size.Medium" Clicked="DeleteSelectedSurveySessionsAsync">
                    <Icon Name="@IconName.Delete" /> @L["Delete"]
                </Button>
            </div>
        </Div>
        <hr Visibility="@(SelectedSurveySessions.Any() ? Visibility.Visible : Visibility.Invisible)"
            class="my-1 mx-0" />
        <DataGrid TItem="SurveySessionWithNavigationPropertiesDto"
                  @ref="DataGridRef"
                  Data="SurveySessionList"
                  SelectionMode="DataGridSelectionMode.Multiple"
                  SelectedRows="SelectedSurveySessions"
                  RowSelectable="RowSelectableHandler"
                  SelectedRowsChanged="SelectedSurveySessionRowsChanged"
                  ReadData="OnDataGridReadAsync"
                  TotalItems="TotalCount"
                  ShowPager="true"
                  Responsive="true"
                  PageSize="PageSize"
                  Class="datagrid-detail">
            <LoadingTemplate>
                <Row Class="w-100 align-items-center" Style="height: 150px;">
                    <Column>
                       <RadarSpinner />
                    </Column>
                </Row>
            </LoadingTemplate>
            <EmptyTemplate>
                <Row Class="w-100 align-items-center" Style="height: 150px;">
                    <Column>
                        <Heading Size="HeadingSize.Is4" TextAlignment="TextAlignment.Center">@L["NoDataAvailable"]</Heading>
                    </Column>
                </Row>
            </EmptyTemplate>   
            <DataGridColumns>
                @if (CanDeleteSurveySession && SurveySessionList.Any())
                {
                    <DataGridMultiSelectColumn TItem="SurveySessionWithNavigationPropertiesDto" DisplayOrder="-1" Width="30px"></DataGridMultiSelectColumn>
                }
                <DataGridEntityActionsColumn TItem="SurveySessionWithNavigationPropertiesDto" @ref="@EntityActionsColumn">
                    <DisplayTemplate>
                        <EntityActions TItem="SurveySessionWithNavigationPropertiesDto" EntityActionsColumn="@EntityActionsColumn">
                            <EntityAction TItem="SurveySessionWithNavigationPropertiesDto"
                                          Visible="@CanEditSurveySession"
                                          Clicked="async () => await OpenEditSurveySessionModalAsync(context)"
                                          Text="@L["Edit"]"
                                          Icon="fas fa-pencil"></EntityAction>
                            <EntityAction TItem="SurveySessionWithNavigationPropertiesDto"
                                          Visible="@CanDeleteSurveySession"
                                          Clicked="() => DeleteSurveySessionAsync(context)"
                                          ConfirmationMessage="@(()=> L["DeleteConfirmationMessage"])"
                                          Text="@L["Delete"]"
                                          Icon="fas fa-trash"></EntityAction>
@*//<suite-custom-code-block-4>*@
@*//</suite-custom-code-block-4>*@
                        </EntityActions>
                    </DisplayTemplate>
                </DataGridEntityActionsColumn>
              <DataGridColumn TItem="SurveySessionWithNavigationPropertiesDto"
                      Field="SurveySession.FullName"
                      Caption="@L["FullName"]">
              </DataGridColumn>
              <DataGridColumn TItem="SurveySessionWithNavigationPropertiesDto"
                      Field="SurveySession.PhoneNumber"
                      Caption="@L["PhoneNumber"]">
              </DataGridColumn>
              <DataGridColumn TItem="SurveySessionWithNavigationPropertiesDto"
                      Field="SurveySession.PatientCode"
                      Caption="@L["PatientCode"]">
              </DataGridColumn>
              <DataGridColumn TItem="SurveySessionWithNavigationPropertiesDto"
                      Field="SurveySession.SurveyTime"
                      Caption="@L["SurveyTime"]">
                  <DisplayTemplate>
                        @context.SurveySession.SurveyTime.ToShortDateString()
                  </DisplayTemplate>
              </DataGridColumn>
              <DataGridColumn TItem="SurveySessionWithNavigationPropertiesDto"
                      Field="SurveySession.DeviceType"
                      Caption="@L["DeviceType"]">
                  <DisplayTemplate>
                        @L[$"Enum:DeviceType.{context.SurveySession.DeviceType}"]
                  </DisplayTemplate>
              </DataGridColumn>
              <DataGridColumn TItem="SurveySessionWithNavigationPropertiesDto"
                      Field="SurveySession.Note"
                      Caption="@L["Note"]">
              </DataGridColumn>
              <DataGridColumn TItem="SurveySessionWithNavigationPropertiesDto"
                      Field="SurveySession.SessionDisplay"
                      Caption="@L["SessionDisplay"]">
              </DataGridColumn>
              <DataGridColumn TItem="SurveySessionWithNavigationPropertiesDto"
                      Field="SurveyLocation.Name"
                      Caption="@L["SurveyLocation"]">
              </DataGridColumn>
            </DataGridColumns>
        </DataGrid>
    </CardBody>
</Card>
