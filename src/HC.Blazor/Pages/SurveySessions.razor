                            <FieldLabel>@L["SessionDisplay"] *</FieldLabel>
                            <TextEdit @bind-Text="@NewSurveySession.SessionDisplay" Disabled >
                                <Feedback>
                                    <ValidationError />
                                </Feedback>
                            </TextEdit>
                        </Field>
                    @* </Validation> *@
                    <Field>
                        <FieldLabel>@L["SurveyLocation"]</FieldLabel>
                        <Select TValue="Guid" @bind-SelectedValue="@NewSurveySession.SurveyLocationId">
                            @foreach (var surveyLocation in SurveyLocationsCollection)
                            {
                                <SelectItem TValue="Guid" Value="@(surveyLocation.Id)">
                                    @(surveyLocation.DisplayName)
                                </SelectItem>
                            }
