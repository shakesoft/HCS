@* ************************* DATA GRID ************************* *@
<Card>
    <CardBody>        
        <Div  Visibility="@(SelectedSurveyFiles.Any() ? Visibility.Visible : Visibility.Invisible)"
              class="d-flex justify-content-between align-items-center mb-2">
              <p class="lead mb-0">
                @if (AllSurveyFilesSelected)
                {
                    @L["AllItemsAreSelected", TotalCount]
                }
                else
                {
                    @if (SelectedSurveyFiles.Count > 1)
                    {
                        @L["NumberOfItemsOnThisPageAreSelected", SelectedSurveyFiles.Count]
                    }
                    else
                    {
                        @L["OneItemOnThisPageIsSelected"]
                    }
                }
              </p>
            <div>
                @if ((SelectedSurveyFiles.Count == PageSize || SelectedSurveyFiles.Count == SurveyFileList.Count) && TotalCount > SelectedSurveyFiles.Count)
                {
                    if (!AllSurveyFilesSelected)
                    {
                        <Button Clicked="SelectAllItems" Class="mx-1 btn-outline-secondary">@L["SelectAllItems", TotalCount]</Button>
                    }
                    else
                    {
                        <Button Clicked="ClearSelection" Class="mx-1 btn-outline-secondary">@L["ClearSelection"]</Button>
                    }
                }
                <Button Color="Color.Danger" Class="mx-1" Size="Size.Medium" Clicked="DeleteSelectedSurveyFilesAsync">
                    <Icon Name="@IconName.Delete" /> @L["Delete"]
                </Button>
            </div>
        </Div>
        <hr Visibility="@(SelectedSurveyFiles.Any() ? Visibility.Visible : Visibility.Invisible)"
            class="my-1 mx-0" />
        <DataGrid TItem="SurveyFileWithNavigationPropertiesDto"
                  @ref="DataGridRef"
                  Data="SurveyFileList"
                  SelectionMode="DataGridSelectionMode.Multiple"
                  SelectedRows="SelectedSurveyFiles"
                  RowSelectable="RowSelectableHandler"
                  SelectedRowsChanged="SelectedSurveyFileRowsChanged"
                  ReadData="OnDataGridReadAsync"
                  TotalItems="TotalCount"
                  ShowPager="true"
                  Responsive="true"
                  PageSize="PageSize"
                  Class="datagrid-detail">
            <LoadingTemplate>
                <Row Class="w-100 align-items-center" Style="height: 150px;">
                    <Column>
                       <RadarSpinner />
                    </Column>
                </Row>
            </LoadingTemplate>
            <EmptyTemplate>
                <Row Class="w-100 align-items-center" Style="height: 150px;">
                    <Column>
                        <Heading Size="HeadingSize.Is4" TextAlignment="TextAlignment.Center">@L["NoDataAvailable"]</Heading>
                    </Column>
                </Row>
            </EmptyTemplate>   
            <DataGridColumns>
                @if (CanDeleteSurveyFile && SurveyFileList.Any())
                {
                    <DataGridMultiSelectColumn TItem="SurveyFileWithNavigationPropertiesDto" DisplayOrder="-1" Width="30px"></DataGridMultiSelectColumn>
                }
              <DataGridColumn TItem="SurveyFileWithNavigationPropertiesDto"
                      Field="SurveyFile.UploaderType"
                      Caption="@L["UploaderType"]">
                        <DisplayTemplate>
                            @L[$"Enum:UploaderType.{context.SurveyFile.UploaderType}"]
                        </DisplayTemplate>
              </DataGridColumn>
              <DataGridColumn TItem="SurveyFileWithNavigationPropertiesDto"
                      Field="SurveyFile.FileName"
                      Caption="@L["FileName"]">
              </DataGridColumn>
              <DataGridColumn TItem="SurveyFileWithNavigationPropertiesDto"
                      Field="SurveyFile.FilePath"
                      Caption="@L["FilePath"]">
              </DataGridColumn>
              <DataGridColumn TItem="SurveyFileWithNavigationPropertiesDto"
                      Field="SurveyFile.FileSize"
                      Caption="@L["FileSize"]">
              </DataGridColumn>
              <DataGridColumn TItem="SurveyFileWithNavigationPropertiesDto"
                      Field="SurveyFile.MimeType"
                      Caption="@L["MimeType"]">
              </DataGridColumn>
              <DataGridColumn TItem="SurveyFileWithNavigationPropertiesDto"
                      Field="SurveyFile.FileType"
                      Caption="@L["FileType"]">
              </DataGridColumn>
              <DataGridColumn TItem="SurveyFileWithNavigationPropertiesDto"
                      Field="SurveySession.SessionDisplay"
                      Caption="@L["SurveySession"]">
              </DataGridColumn>
                <DataGridColumn TItem="SurveyFileWithNavigationPropertiesDto" Caption="@L["Actions"]">
                    <DisplayTemplate>
                        <div class="hc-action-icons">
                            @if (CanEditSurveyFile)
                            {
                                <i class="bi bi-pencil-fill hc-action-icon hc-action-edit" 
                                   title="@L["Edit"]"
                                   @onclick="@(() => OpenEditSurveyFileModalAsync(context))"
                                   style="cursor: pointer;"></i>
                            }
                            @if (CanDeleteSurveyFile)
                            {
                                <i class="bi bi-trash-fill hc-action-icon hc-action-delete" 
                                   title="@L["Delete"]"
                                   @onclick="@(() => DeleteSurveyFileWithConfirmationAsync(context))"
                                   style="cursor: pointer;"></i>
                            }
                        </div>
@*//<suite-custom-code-block-4>*@
@*//</suite-custom-code-block-4>*@
                    </DisplayTemplate>
                </DataGridColumn>
            </DataGridColumns>
        </DataGrid>
    </CardBody>
</Card>
@* ************************* CREATE MODAL ************************* *@
<Modal @ref="CreateSurveyFileModal" Closing="@CreateSurveyFileModal.CancelClosingModalWhenFocusLost">
    <ModalContent Centered="true">
@*//<suite-custom-code-block-5>*@
@*//</suite-custom-code-block-5>*@
        <Form id="CreateSurveyFileForm">
            <ModalHeader>
                <ModalTitle>@L["NewSurveyFile"]</ModalTitle>
                <CloseButton Clicked="CloseCreateSurveyFileModalAsync" />
            </ModalHeader>
            <ModalBody>
                <Validations @ref="@NewSurveyFileValidations"
                            Mode="ValidationMode.Auto"
                            Model="@NewSurveyFile"
                            ValidateOnLoad="false">
                    <Field>
                        <FieldLabel>@L["UploadFile"]</FieldLabel>
                        <FilePicker @ref="CreateFilePicker"
                                    Multiple="false"
                                    Changed="OnCreateFileChanged"
                                    ShowMode="FilePickerShowMode.List"
                                    MaxFileSize="52428800">
                            <ButtonsTemplate>
                                @* <Progress Value="@FilePickerProgress" /> *@
                                <Buttons>
                                    <Button Clicked="@context.Clear" Color="Color.Warning">
                                        <Icon Name="IconName.Clear" /> @L["Clear"]
                                    </Button>
                                </Buttons>
                            </ButtonsTemplate>
                        </FilePicker>
                        @if (!string.IsNullOrEmpty(UploadedFilePath))
                        {
                            <div class="text-success mt-2">
                                <Icon Name="IconName.Check" /> @L["FileUploaded"]: @SelectedFile?.Name
                            </div>
                        }
                    </Field>
                    <Field>
                        <FieldLabel>@L["UploaderType"] *</FieldLabel>
                        <Select TValue="UploaderType" 
                                SelectedValue="@NewSurveyFile.UploaderType"
                                SelectedValueChanged="@((UploaderType value) => { NewSurveyFile.UploaderType = value; })">
                            <ChildContent>
                                @foreach (var item in Enum.GetValues<UploaderType>())
                                {
                                    <SelectItem TValue="UploaderType" Value="@item">
                                        @L[$"Enum:UploaderType.{item}"]
                                    </SelectItem>
                                }
                            </ChildContent>
                        </Select>
                    </Field>
                    <Validation MessageLocalizer="@LH.Localize">
                        <Field>
                            <FieldLabel>@L["FileName"] *</FieldLabel>
                            <TextEdit @bind-Text="@NewSurveyFile.FileName"   >
                                <Feedback>
                                    <ValidationError />
                                </Feedback>
                            </TextEdit>
                        </Field>
                    </Validation>
                    <Validation MessageLocalizer="@LH.Localize">
                        <Field>
                            <FieldLabel>@L["FilePath"] *</FieldLabel>
                            <TextEdit @bind-Text="@NewSurveyFile.FilePath"   >
                                <Feedback>
                                    <ValidationError />
                                </Feedback>
                            </TextEdit>
                        </Field>
                    </Validation>
                    <Validation MessageLocalizer="@LH.Localize">
                        <Field>
                            <FieldLabel>@L["FileSize"] (KB)</FieldLabel>
                            <NumericPicker TValue="int" @bind-Value="@NewSurveyFile.FileSize"  Decimals="0"  >
                                <Feedback>
                                    <ValidationError />
                                </Feedback>
                             </NumericPicker>
                        </Field>
                     </Validation>
                    <Validation MessageLocalizer="@LH.Localize">
                        <Field>
                            <FieldLabel>@L["MimeType"] *</FieldLabel>
                            <TextEdit @bind-Text="@NewSurveyFile.MimeType"   >
                                <Feedback>
                                    <ValidationError />
                                </Feedback>
                            </TextEdit>
                        </Field>
                    </Validation>
                    <Validation MessageLocalizer="@LH.Localize">
                        <Field>
                            <FieldLabel>@L["FileType"] *</FieldLabel>
                            <TextEdit @bind-Text="@NewSurveyFile.FileType"   >
                                <Feedback>
                                    <ValidationError />
                                </Feedback>
                            </TextEdit>
                        </Field>
                    </Validation>
                    <Field>
                        <FieldLabel>@L["SurveySession"]</FieldLabel>
                        <Select TValue="Guid" @bind-SelectedValue="@NewSurveyFile.SurveySessionId">
                            @foreach (var surveySession in SurveySessionsCollection)
                            {
                                <SelectItem TValue="Guid" Value="@(surveySession.Id)">
                                    @(surveySession.DisplayName)
                                </SelectItem>
                            }
                        </Select>
                    </Field>
                </Validations>
            </ModalBody>
            <ModalFooter>
                <Button Color="Color.Secondary"
                        Clicked="CloseCreateSurveyFileModalAsync">
                    @L["Cancel"]
                </Button>
                <SubmitButton Form="CreateSurveyFileForm" Clicked="CreateSurveyFileAsync"/>
@*//<suite-custom-code-block-6>*@
@*//</suite-custom-code-block-6>*@
            </ModalFooter>
        </Form>
@*//<suite-custom-code-block-7>*@
@*//</suite-custom-code-block-7>*@
    </ModalContent>
</Modal>
@* ************************* EDIT MODAL ************************* *@
