        color: #8b5cf6 !important;
        font-weight: 500 !important;
        font-size: 0.95rem !important;
        margin-top: 0.75rem !important;
        padding-top: 2.5rem;
        padding-bottom: 2.5rem;
        border-radius: 12px !important;
    }

