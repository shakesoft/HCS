@* ************************* DATA GRID ************************* *@
<Card>
    <CardBody>        
        <Div  Visibility="@(SelectedUserSignatures.Any() ? Visibility.Visible : Visibility.Invisible)"
              class="d-flex justify-content-between align-items-center mb-2">
              <p class="lead mb-0">
                @if (AllUserSignaturesSelected)
                {
                    @L["AllItemsAreSelected", TotalCount]
                }
                else
                {
                    @if (SelectedUserSignatures.Count > 1)
                    {
                        @L["NumberOfItemsOnThisPageAreSelected", SelectedUserSignatures.Count]
                    }
                    else
                    {
                        @L["OneItemOnThisPageIsSelected"]
                    }
                }
              </p>
            <div>
                @if ((SelectedUserSignatures.Count == PageSize || SelectedUserSignatures.Count == UserSignatureList.Count) && TotalCount > SelectedUserSignatures.Count)
                {
                    if (!AllUserSignaturesSelected)
                    {
                        <Button Clicked="SelectAllItems" Class="mx-1 btn-outline-secondary">@L["SelectAllItems", TotalCount]</Button>
                    }
                    else
                    {
                        <Button Clicked="ClearSelection" Class="mx-1 btn-outline-secondary">@L["ClearSelection"]</Button>
                    }
                }
                <Button Color="Color.Danger" Class="mx-1" Size="Size.Medium" Clicked="DeleteSelectedUserSignaturesAsync">
                    <Icon Name="@IconName.Delete" /> @L["Delete"]
                </Button>
            </div>
        </Div>
        <hr Visibility="@(SelectedUserSignatures.Any() ? Visibility.Visible : Visibility.Invisible)"
            class="my-1 mx-0" />
        <DataGrid TItem="UserSignatureWithNavigationPropertiesDto"
                  @ref="DataGridRef"
                  Data="UserSignatureList"
                  SelectionMode="DataGridSelectionMode.Multiple"
                  SelectedRows="SelectedUserSignatures"
                  RowSelectable="RowSelectableHandler"
                  SelectedRowsChanged="SelectedUserSignatureRowsChanged"
                  ReadData="OnDataGridReadAsync"
                  TotalItems="TotalCount"
                  ShowPager="true"
                  Responsive="true"
                  PageSize="PageSize"
                  Class="datagrid-detail">
            <LoadingTemplate>
                <Row Class="w-100 align-items-center" Style="height: 150px;">
                    <Column>
                       <RadarSpinner />
                    </Column>
                </Row>
            </LoadingTemplate>
            <EmptyTemplate>
                <Row Class="w-100 align-items-center" Style="height: 150px;">
                    <Column>
                        <Heading Size="HeadingSize.Is4" TextAlignment="TextAlignment.Center">@L["NoDataAvailable"]</Heading>
                    </Column>
                </Row>
            </EmptyTemplate>   
            <DataGridColumns>
                @if (CanDeleteUserSignature && UserSignatureList.Any())
                {
                    <DataGridMultiSelectColumn TItem="UserSignatureWithNavigationPropertiesDto" DisplayOrder="-1" Width="30px"></DataGridMultiSelectColumn>
                }
              <DataGridColumn TItem="UserSignatureWithNavigationPropertiesDto"
                      Field="UserSignature.SignType"
                      Caption="@L["SignType"]">
              </DataGridColumn>
              <DataGridColumn TItem="UserSignatureWithNavigationPropertiesDto"
                      Field="UserSignature.ProviderCode"
                      Caption="@L["ProviderCode"]">
              </DataGridColumn>
              <DataGridColumn TItem="UserSignatureWithNavigationPropertiesDto"
                      Field="UserSignature.TokenRef"
                      Caption="@L["TokenRef"]">
              </DataGridColumn>
              <DataGridColumn TItem="UserSignatureWithNavigationPropertiesDto"
                      Field="UserSignature.SignatureImage"
                      Caption="@L["SignatureImage"]">
              </DataGridColumn>
              <DataGridColumn TItem="UserSignatureWithNavigationPropertiesDto"
                      Field="UserSignature.ValidFrom"
                      Caption="@L["ValidFrom"]">
                  <DisplayTemplate>
                        @(context.UserSignature.ValidFrom.HasValue ? context.UserSignature.ValidFrom.Value.ToShortDateString() : string.Empty)
                  </DisplayTemplate>
              </DataGridColumn>
              <DataGridColumn TItem="UserSignatureWithNavigationPropertiesDto"
                      Field="UserSignature.ValidTo"
                      Caption="@L["ValidTo"]">
                  <DisplayTemplate>
                        @(context.UserSignature.ValidTo.HasValue ? context.UserSignature.ValidTo.Value.ToShortDateString() : string.Empty)
                  </DisplayTemplate>
              </DataGridColumn>
              <DataGridColumn TItem="UserSignatureWithNavigationPropertiesDto"
                      Field="UserSignature.IsActive"
                      Caption="@L["IsActive"]">
                    <DisplayTemplate>
                        @if (context.UserSignature.IsActive)
                        {
                            <Icon TextColor="TextColor.Success" Name="@IconName.Check" />
                        }
                        else
                        {
                            <Icon TextColor="TextColor.Danger" Name="@IconName.Times" />
                        }
                    </DisplayTemplate>
              </DataGridColumn>
              <DataGridColumn TItem="UserSignatureWithNavigationPropertiesDto"
                      Field="IdentityUser.Name"
                      Caption="@L["IdentityUser"]">
              </DataGridColumn>
                <DataGridColumn TItem="UserSignatureWithNavigationPropertiesDto" Caption="@L["Actions"]">
                    <DisplayTemplate>
                        <div class="hc-action-icons">
                            @if (CanEditUserSignature)
                            {
                                <i class="bi bi-pencil-fill hc-action-icon hc-action-edit" 
                                   title="@L["Edit"]"
                                   @onclick="@(() => OpenEditUserSignatureModalAsync(context))"
                                   style="cursor: pointer;"></i>
                            }
                            @if (CanDeleteUserSignature)
                            {
                                <i class="bi bi-trash-fill hc-action-icon hc-action-delete" 
                                   title="@L["Delete"]"
                                   @onclick="@(() => DeleteUserSignatureWithConfirmationAsync(context))"
                                   style="cursor: pointer;"></i>
                            }
                        </div>
@*//<suite-custom-code-block-4>*@
@*//</suite-custom-code-block-4>*@
                    </DisplayTemplate>
                </DataGridColumn>
            </DataGridColumns>
        </DataGrid>
    </CardBody>
</Card>
@* ************************* CREATE MODAL ************************* *@
<Modal @ref="CreateUserSignatureModal" Closing="@CreateUserSignatureModal.CancelClosingModalWhenFocusLost">
    <ModalContent Centered="true">
@*//<suite-custom-code-block-5>*@
@*//</suite-custom-code-block-5>*@
        <Form id="CreateUserSignatureForm">
            <ModalHeader>
                <ModalTitle>@L["NewUserSignature"]</ModalTitle>
                <CloseButton Clicked="CloseCreateUserSignatureModalAsync" />
            </ModalHeader>
            <ModalBody>
                @* Manual validation is used (see ValidateCreateUserSignature). *@
                @if (!string.IsNullOrWhiteSpace(CreateUserSignatureValidationErrorKey))
                {
                    <Alert Color="Color.Danger">
                        <AlertMessage>@L["NotificationError"]!</AlertMessage>
                        <AlertDescription>@L[CreateUserSignatureValidationErrorKey]</AlertDescription>
                    </Alert>
                }
                <Field>
                    <FieldLabel>@L["SignType"] *</FieldLabel>
                    <Select TValue="SignType?" 
                            SelectedValue="@NewSignType"
                            SelectedValueChanged="@((SignType? value) => { NewSignType = value; CreateFieldErrors.Remove("SignType"); })"
                            Autofocus="true"
                            Style="@(HasCreateFieldError("SignType") ? "border-color: #dc3545;" : "")">
                        <ChildContent>
                            <SelectItem TValue="SignType?" Value="@((SignType?)null)">@L[""]</SelectItem>
                            @foreach (var item in Enum.GetValues<SignType>())
                            {
                                <SelectItem TValue="SignType?" Value="@item">
                                    @L[$"Enum:SignType.{item}"]
                                </SelectItem>
                            }
                        </ChildContent>
                    </Select>
                    @if (HasCreateFieldError("SignType"))
                    {
                        <div class="invalid-feedback d-block">@GetCreateFieldError("SignType")</div>
                    }
                </Field>
                <Field>
                    <FieldLabel>@L["ProviderCode"] *</FieldLabel>
                    <TextEdit Text="@NewUserSignature.ProviderCode" 
                              TextChanged="@((string value) => { NewUserSignature.ProviderCode = value; CreateFieldErrors.Remove("ProviderCode"); })"
                              Style="@(HasCreateFieldError("ProviderCode") ? "border-color: #dc3545;" : "")" />
                    @if (HasCreateFieldError("ProviderCode"))
                    {
                        <div class="invalid-feedback d-block">@GetCreateFieldError("ProviderCode")</div>
                    }
                </Field>
                <Field>
                    <FieldLabel>@L["TokenRef"]</FieldLabel>
                    <TextEdit @bind-Text="@NewUserSignature.TokenRef" />
                </Field>
                <Field>
                    <FieldLabel>@L["SignatureImage"] *</FieldLabel>
                    <TextEdit Text="@NewUserSignature.SignatureImage" 
                              TextChanged="@((string value) => { NewUserSignature.SignatureImage = value; CreateFieldErrors.Remove("SignatureImage"); })"
                              Style="@(HasCreateFieldError("SignatureImage") ? "border-color: #dc3545;" : "")" />
                    @if (HasCreateFieldError("SignatureImage"))
                    {
                        <div class="invalid-feedback d-block">@GetCreateFieldError("SignatureImage")</div>
                    }
                </Field>
                <Field>
                    <FieldLabel>@L["ValidFrom"]</FieldLabel>
                    <DatePicker TValue="DateTime?" 
                                InputMode="DateInputMode.Date"
                                Date="@NewUserSignature.ValidFrom"
                                DateChanged="@((DateTime? value) => { NewUserSignature.ValidFrom = value; })"
                                Placeholder="@string.Empty" />
                </Field>
                <Field>
                    <FieldLabel>@L["ValidTo"]</FieldLabel>
                    <DatePicker TValue="DateTime?" 
                                InputMode="DateInputMode.Date"
                                Date="@NewUserSignature.ValidTo"
                                DateChanged="@((DateTime? value) => { NewUserSignature.ValidTo = value; })"
                                Placeholder="@string.Empty" />
                </Field>
                <Field>
                    <Check TValue="bool" @bind-Checked="@NewUserSignature.IsActive">@L["IsActive"]</Check>
                </Field>
                @if (IsAdmin)
                {
                    <Field>
                        <FieldLabel>@L["IdentityUser"]</FieldLabel>
                        <Select TValue="Guid" @bind-SelectedValue="@NewUserSignature.IdentityUserId">
                            @foreach (var identityUser in IdentityUsersCollection)
                            {
                                <SelectItem TValue="Guid" Value="@(identityUser.Id)">
                                    @(identityUser.DisplayName)
                                </SelectItem>
                            }
                        </Select>
                    </Field>
                }
            </ModalBody>
            <ModalFooter>
                <Button Color="Color.Secondary"
                        Clicked="CloseCreateUserSignatureModalAsync">
                    @L["Cancel"]
                </Button>
                <SubmitButton Form="CreateUserSignatureForm" Clicked="CreateUserSignatureAsync"/>
@*//<suite-custom-code-block-6>*@
@*//</suite-custom-code-block-6>*@
            </ModalFooter>
        </Form>
@*//<suite-custom-code-block-7>*@
@*//</suite-custom-code-block-7>*@
    </ModalContent>
</Modal>
