server {
    listen 80;
    listen 443 ssl http2;
    server_name dev.benhvien199.vn;

    # ===============================
    # Force HTTPS
    # ===============================
    if ($server_port !~ 443) {
        return 301 https://$host$request_uri;
    }

    # ===============================
    # SSL
    # ===============================
    ssl_certificate     /www/server/panel/vhost/cert/dev.benhvien199.vn/fullchain.pem;
    ssl_certificate_key /www/server/panel/vhost/cert/dev.benhvien199.vn/privkey.pem;

    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_prefer_server_ciphers on;
    ssl_session_cache shared:SSL:10m;
    ssl_session_timeout 10m;

    add_header Strict-Transport-Security "max-age=31536000" always;

    # ===============================
    # Logs
    # ===============================
    access_log /www/wwwlogs/dev.benhvien199.vn.log;
    error_log  /www/wwwlogs/dev.benhvien199.vn.error.log;

    # ===============================
    # ACME / Well-known
    # ===============================
    location ~ \.well-known {
        allow all;
    }

    # ===============================
    # Blazor Server (hc-blazor)
    # ===============================
    location / {
        proxy_pass http://10.65.37.105:8082;

        # --- Headers ---
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto https;
        proxy_set_header X-Forwarded-Host $host;
        proxy_set_header X-Forwarded-Port 443;

        # --- WebSocket (Blazor Server REQUIRED) ---
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "Upgrade";

        # --- Timeout (CỰC KỲ QUAN TRỌNG) ---
        proxy_connect_timeout 300s;
        proxy_send_timeout    300s;
        proxy_read_timeout    300s;

        # --- Buffer ---
        proxy_buffering off;
        proxy_cache off;
    }

    # ===============================
    # Error pages
    # ===============================
    error_page 404 /404.html;
    error_page 502 /502.html;
}
